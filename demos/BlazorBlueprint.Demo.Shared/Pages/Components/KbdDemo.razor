@page "/components/kbd"
<PageTitle>Kbd Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Kbd Component</h1>
            <p class="text-xl text-muted-foreground">
                Displays keyboard shortcuts and key combinations in a styled format.
            </p>
        </div>
    </div>

    <!-- Basic Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Example</h2>
            <p class="text-sm text-muted-foreground">
                Simple keyboard key display.
            </p>
        </div>
        <div class="flex items-center gap-2">
            <BbKbd Keys="K" />
        </div>

        <CodeBlock Source="Components/Kbd/basic.txt" />
    </div>

    <!-- Key Combinations -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Key Combinations</h2>
            <p class="text-sm text-muted-foreground">
                Display keyboard shortcuts with multiple keys.
            </p>
        </div>
        <div class="flex items-center gap-4">
            <div class="flex items-center gap-1">
                <BbKbd Keys="Ctrl" />
                <span class="text-muted-foreground">+</span>
                <BbKbd Keys="C" />
                <span class="text-sm text-muted-foreground ml-2">Copy</span>
            </div>
            <div class="flex items-center gap-1">
                <BbKbd Keys="Ctrl" />
                <span class="text-muted-foreground">+</span>
                <BbKbd Keys="V" />
                <span class="text-sm text-muted-foreground ml-2">Paste</span>
            </div>
            <div class="flex items-center gap-1">
                <BbKbd Keys="Ctrl" />
                <span class="text-muted-foreground">+</span>
                <BbKbd Keys="Z" />
                <span class="text-sm text-muted-foreground ml-2">Undo</span>
            </div>
        </div>

        <CodeBlock Source="Components/Kbd/combinations.txt" />
    </div>

    <!-- Mac Style -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Mac Style Shortcuts</h2>
            <p class="text-sm text-muted-foreground">
                Using Mac-style modifier symbols.
            </p>
        </div>
        <div class="flex items-center gap-4">
            <div class="flex items-center gap-1">
                <BbKbd>⌘</BbKbd>
                <BbKbd>I</BbKbd>
                <span class="text-sm text-muted-foreground ml-2">Command palette</span>
            </div>
            <div class="flex items-center gap-1">
                <BbKbd>⌘</BbKbd>
                <BbKbd>⇧</BbKbd>
                <BbKbd>P</BbKbd>
                <span class="text-sm text-muted-foreground ml-2">Quick actions</span>
            </div>
        </div>

        <CodeBlock Source="Components/Kbd/mac-style.txt" />
    </div>

    <!-- Sizes -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Sizes</h2>
            <p class="text-sm text-muted-foreground">
                Kbd comes in small, default, and large sizes.
            </p>
        </div>
        <div class="flex items-center gap-4">
            <div class="flex items-center gap-2">
                <BbKbd Size="KbdSize.Small" Keys="Ctrl" />
                <span class="text-xs text-muted-foreground">Small</span>
            </div>
            <div class="flex items-center gap-2">
                <BbKbd Size="KbdSize.Default" Keys="Ctrl" />
                <span class="text-sm text-muted-foreground">Default</span>
            </div>
            <div class="flex items-center gap-2">
                <BbKbd Size="KbdSize.Large" Keys="Ctrl" />
                <span class="text-muted-foreground">Large</span>
            </div>
        </div>

        <CodeBlock Source="Components/Kbd/sizes.txt" />
    </div>

    <!-- In Context -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">In Context</h2>
            <p class="text-sm text-muted-foreground">
                Kbd used within text content.
            </p>
        </div>
        <p class="text-sm">
            Press <BbKbd>Ctrl</BbKbd> + <BbKbd>I</BbKbd> to open the command palette,
            or use <BbKbd>Esc</BbKbd> to close any open dialog.
        </p>

        <CodeBlock Source="Components/Kbd/in-context.txt" />
    </div>

    <!-- Special Keys -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Special Keys</h2>
            <p class="text-sm text-muted-foreground">
                Common special keys and their representations.
            </p>
        </div>
        <div class="flex flex-wrap items-center gap-3">
            <BbKbd>Enter ↵</BbKbd>
            <BbKbd>Tab ⇥</BbKbd>
            <BbKbd>Shift ⇧</BbKbd>
            <BbKbd>Esc</BbKbd>
            <BbKbd>Space</BbKbd>
            <BbKbd>Backspace ⌫</BbKbd>
            <BbKbd>Delete</BbKbd>
            <BbKbd>↑</BbKbd>
            <BbKbd>↓</BbKbd>
            <BbKbd>←</BbKbd>
            <BbKbd>→</BbKbd>
        </div>

        <CodeBlock Source="Components/Kbd/special-keys.txt" />
    </div>

    <!-- Accessibility -->
    <AccessibilityList>
        <AriaAttributes>
            <AccessibilityItem>
                Renders as a native <code>&lt;kbd&gt;</code> HTML element, which is semantically recognized by assistive technologies as keyboard input.
            </AccessibilityItem>
            <AccessibilityItem>
                Uses <code>pointer-events-none</code> and <code>select-none</code> to indicate the element is presentational, not interactive.
            </AccessibilityItem>
            <AccessibilityItem>
                Uses monospace font (<code>font-mono</code>) for visual distinction of keyboard keys from surrounding text.
            </AccessibilityItem>
            <AccessibilityItem>
                Ensure key combination descriptions include visible text labels (e.g., "Copy", "Paste") alongside the key indicators for clarity.
            </AccessibilityItem>
        </AriaAttributes>
    </AccessibilityList>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>
        <div class="space-y-4">
            <ApiReference ComponentName="Kbd">
                <ApiParameter Name="Keys" Type="string?">
                    The keyboard keys to display (e.g., "Ctrl", "C", "Shift"). Used when ChildContent is not provided.
                </ApiParameter>
                <ApiParameter Name="Size" Type="KbdSize" Default="Default">
                    The size variant of the kbd element. Options: Small, Default, Large.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the kbd element.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    Custom content for the keyboard shortcut display. When provided, takes precedence over the Keys parameter.
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>
