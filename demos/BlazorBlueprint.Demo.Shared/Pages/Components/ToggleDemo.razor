@page "/components/toggle"
@using BlazorBlueprint.Icons.Lucide.Components

<PageTitle>Toggle Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Toggle Component</h1>
            <p class="text-xl text-muted-foreground">
                A two-state button that can be either on or off.
            </p>
        </div>
    </div>

    <!-- Basic Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Example</h2>
            <p class="text-sm text-muted-foreground">
                A simple toggle button.
            </p>
        </div>
        <BbToggle @bind-Pressed="_isPressed">
            <LucideIcon Name="bold" Class="h-4 w-4" />
        </BbToggle>
        <p class="text-sm text-muted-foreground">Pressed: @_isPressed</p>
        <CodeBlock Source="Components/Toggle/basic.txt" />
    </div>

    <!-- Variants -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Variants</h2>
            <p class="text-sm text-muted-foreground">
                Toggle comes in default and outline variants.
            </p>
        </div>
        <div class="flex gap-4">
            <BbToggle Variant="ToggleVariant.Default">
                <LucideIcon Name="bold" Class="h-4 w-4" />
            </BbToggle>
            <BbToggle Variant="ToggleVariant.Outline">
                <LucideIcon Name="italic" Class="h-4 w-4" />
            </BbToggle>
        </div>
        <CodeBlock Source="Components/Toggle/variants.txt" />
    </div>

    <!-- Sizes -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Sizes</h2>
            <p class="text-sm text-muted-foreground">
                Toggle comes in small, default, and large sizes.
            </p>
        </div>
        <div class="flex items-center gap-4">
            <BbToggle Size="ToggleSize.Small">
                <LucideIcon Name="bold" Class="h-3 w-3" />
            </BbToggle>
            <BbToggle Size="ToggleSize.Default">
                <LucideIcon Name="bold" Class="h-4 w-4" />
            </BbToggle>
            <BbToggle Size="ToggleSize.Large">
                <LucideIcon Name="bold" Class="h-5 w-5" />
            </BbToggle>
        </div>
        <CodeBlock Source="Components/Toggle/sizes.txt" />
    </div>

    <!-- With Text -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Text</h2>
            <p class="text-sm text-muted-foreground">
                Toggle can include both icon and text.
            </p>
        </div>
        <BbToggle Variant="ToggleVariant.Outline">
            <LucideIcon Name="italic" Class="h-4 w-4 mr-2" />
            Italic
        </BbToggle>
        <CodeBlock Source="Components/Toggle/with-text.txt" />
    </div>

    <!-- Bookmark Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Bookmark Example</h2>
            <p class="text-sm text-muted-foreground">
                A toggle that changes appearance when pressed, showing filled icon state.
            </p>
        </div>
        <div class="flex gap-4 items-center">
            <BbToggle @bind-Pressed="_isBookmarked" Variant="ToggleVariant.Outline">
                <LucideIcon Name="bookmark"
                            Class="h-4 w-4 mr-2"
                            Color="@(_isBookmarked ? "#3b82f6" : "currentColor")"
                            Fill="@(_isBookmarked ? "#3b82f6" : "none")" />
                Bookmark
            </BbToggle>
            <span class="text-sm text-muted-foreground">@(_isBookmarked ? "Bookmarked" : "Not bookmarked")</span>
        </div>
        <CodeBlock Source="Components/Toggle/bookmark.txt" />
    </div>

    <!-- Disabled -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Disabled</h2>
            <p class="text-sm text-muted-foreground">
                Toggle can be disabled.
            </p>
        </div>
        <BbToggle Disabled="true">
            <LucideIcon Name="underline" Class="h-4 w-4" />
        </BbToggle>
        <CodeBlock Source="Components/Toggle/disabled.txt" />
    </div>

    <!-- Toggle Group -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Toggle Group</h2>
            <p class="text-sm text-muted-foreground">
                Group multiple toggles together for single or multiple selection.
            </p>
        </div>
        <div class="space-y-4">
            <div>
                <p class="text-sm mb-2">Single selection:</p>
                <BbToggleGroup TValue="string" @bind-Value="_alignment" Variant="ToggleVariant.Outline">
                    <BbToggleGroupItem TValue="string" Value="@("left")">
                        <LucideIcon Name="align-left" Class="h-4 w-4" />
                    </BbToggleGroupItem>
                    <BbToggleGroupItem TValue="string" Value="@("center")">
                        <LucideIcon Name="align-center" Class="h-4 w-4" />
                    </BbToggleGroupItem>
                    <BbToggleGroupItem TValue="string" Value="@("right")">
                        <LucideIcon Name="align-right" Class="h-4 w-4" />
                    </BbToggleGroupItem>
                </BbToggleGroup>
                <p class="text-sm text-muted-foreground mt-2">Selected: @(_alignment ?? "none")</p>
            </div>
        </div>
        <CodeBlock Source="Components/Toggle/group.txt" />
    </div>

    <AccessibilityList>
        <AriaAttributes>
            <AccessibilityItem><code>aria-pressed</code> indicates the toggle's on/off state</AccessibilityItem>
            <AccessibilityItem>Disabled toggles are announced as unavailable by assistive technologies</AccessibilityItem>
            <AccessibilityItem>Focus ring appears on keyboard focus (<code>focus-visible:ring-2</code>)</AccessibilityItem>
        </AriaAttributes>
        <KeyboardNavigation>
            <KeyboardShortcutItem Description="Focus toggles in sequence">
                <BbKbd>Tab</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Toggle pressed state">
                <BbKbd>Enter</BbKbd> / <BbKbd>Space</BbKbd>
            </KeyboardShortcutItem>
        </KeyboardNavigation>
    </AccessibilityList>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>

        <div class="space-y-4">
            <ApiReference ComponentName="Toggle">
                <ApiParameter Name="Pressed" Type="bool" Default="false">
                    The pressed state. Supports two-way binding with <code>@@bind-Pressed</code>.
                </ApiParameter>
                <ApiParameter Name="DefaultPressed" Type="bool" Default="false">
                    Initial pressed state when in uncontrolled mode.
                </ApiParameter>
                <ApiParameter Name="Variant" Type="ToggleVariant" Default="Default">
                    Visual style. Options: Default, Outline.
                </ApiParameter>
                <ApiParameter Name="Size" Type="ToggleSize" Default="Default">
                    Button size. Options: Small, Default, Large.
                </ApiParameter>
                <ApiParameter Name="Disabled" Type="bool" Default="false">
                    Disables the toggle.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?" Default="null">
                    Additional CSS classes for the toggle button.
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>

@code {
    private bool _isPressed;
    private bool _isBookmarked;
    private string? _alignment = "center";
}
