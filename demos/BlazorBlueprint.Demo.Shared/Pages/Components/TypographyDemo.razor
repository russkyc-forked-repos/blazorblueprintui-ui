@page "/components/typography"
<PageTitle>Typography Components - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Typography Components</h1>
            <p class="text-xl text-muted-foreground">
                Styled text components for consistent typography across your application.
            </p>
        </div>
    </div>

    <!-- H1 -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">H1</h2>
            <p class="text-sm text-muted-foreground">
                Main page heading.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <BbTypographyH1>The Joke Tax Chronicles</BbTypographyH1>
        </div>
        <CodeBlock Source="Components/Typography/h1.txt" />
    </div>

    <!-- H2 -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">H2</h2>
            <p class="text-sm text-muted-foreground">
                Section heading with border.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <BbTypographyH2>The People of the Kingdom</BbTypographyH2>
        </div>
        <CodeBlock Source="Components/Typography/h2.txt" />
    </div>

    <!-- H3 -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">H3</h2>
            <p class="text-sm text-muted-foreground">
                Subsection heading.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <BbTypographyH3>The Joke Tax</BbTypographyH3>
        </div>
        <CodeBlock Source="Components/Typography/h3.txt" />
    </div>

    <!-- H4 -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">H4</h2>
            <p class="text-sm text-muted-foreground">
                Minor heading.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <BbTypographyH4>People stopped telling jokes</BbTypographyH4>
        </div>
        <CodeBlock Source="Components/Typography/h4.txt" />
    </div>

    <!-- Paragraph -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Paragraph</h2>
            <p class="text-sm text-muted-foreground">
                Standard paragraph text.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <BbTypographyP>
                The king, seeing how much happier his subjects were, googled for a alarm clock he could use.
                He googled "alarm clock" into the search bar but because he made a typo, he ended up searching for "alarm cock" instead.
            </BbTypographyP>
        </div>
        <CodeBlock Source="Components/Typography/paragraph.txt" />
    </div>

    <!-- Lead -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Lead</h2>
            <p class="text-sm text-muted-foreground">
                Introductory text that stands out.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <BbTypographyLead>
                A modal dialog that interrupts the user with important content and expects a response.
            </BbTypographyLead>
        </div>
        <CodeBlock Source="Components/Typography/lead.txt" />
    </div>

    <!-- Large -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Large</h2>
            <p class="text-sm text-muted-foreground">
                Larger text for emphasis.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <BbTypographyLarge>Are you absolutely sure?</BbTypographyLarge>
        </div>
        <CodeBlock Source="Components/Typography/large.txt" />
    </div>

    <!-- Small -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Small</h2>
            <p class="text-sm text-muted-foreground">
                Smaller text for fine print.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <BbTypographySmall>Email address</BbTypographySmall>
        </div>
        <CodeBlock Source="Components/Typography/small.txt" />
