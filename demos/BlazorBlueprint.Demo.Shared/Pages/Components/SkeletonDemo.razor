@page "/components/skeleton"
<PageTitle>Skeleton Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
        <h1 class="text-4xl font-bold tracking-tight">Skeleton Component</h1>
        <p class="text-xl text-muted-foreground">
            Use to show a placeholder while content is loading.
        </p>
        </div>
    </div>

    <div class="space-y-6">
    </div>

    <!-- Basic Usage -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Usage</h2>
            <p class="text-sm text-muted-foreground">
                Simple skeleton placeholders with different dimensions.
            </p>
        </div>
        <div class="flex flex-col space-y-3">
            <BbSkeleton Class="h-4 w-[250px]" />
            <BbSkeleton Class="h-4 w-[200px]" />
            <BbSkeleton Class="h-4 w-[150px]" />
        </div>
        <CodeBlock Source="Components/Skeleton/basic.txt" />
    </div>

    <!-- Shape Variants -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Shape Variants</h2>
            <p class="text-sm text-muted-foreground">
                Rectangular (default) and circular shapes for different content types.
            </p>
        </div>
        <div class="flex items-center gap-8">
            <div class="space-y-2">
                <p class="text-sm font-medium">Rectangular</p>
                <BbSkeleton Shape="SkeletonShape.Rectangular" Class="h-12 w-12" />
            </div>
            <div class="space-y-2">
                <p class="text-sm font-medium">Circular</p>
                <BbSkeleton Shape="SkeletonShape.Circular" Class="h-12 w-12" />
            </div>
        </div>
        <CodeBlock Source="Components/Skeleton/shapes.txt" />
    </div>

    <!-- Card Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Card Loading State</h2>
            <p class="text-sm text-muted-foreground">
                Skeleton placeholder for a card component.
            </p>
        </div>
        <div class="max-w-sm border rounded-lg p-6 space-y-4">
            <div class="flex items-center space-x-4">
                <BbSkeleton Shape="SkeletonShape.Circular" Class="h-12 w-12" />
                <div class="space-y-2 flex-1">
                    <BbSkeleton Class="h-4 w-[150px]" />
                    <BbSkeleton Class="h-4 w-[100px]" />
                </div>
            </div>
            <div class="space-y-2">
                <BbSkeleton Class="h-4 w-full" />
                <BbSkeleton Class="h-4 w-full" />
                <BbSkeleton Class="h-4 w-3/4" />
            </div>
        </div>
        <CodeBlock Source="Components/Skeleton/card-loading.txt" />
    </div>

    <!-- List Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">List Loading State</h2>
            <p class="text-sm text-muted-foreground">
                Skeleton placeholders for list items.
            </p>
        </div>
        <div class="max-w-md border rounded-lg divide-y">
            @for (int i = 0; i < 4; i++)
            {
                <div class="p-4 flex items-center space-x-4">
                    <BbSkeleton Shape="SkeletonShape.Circular" Class="h-10 w-10" />
                    <div class="space-y-2 flex-1">
                        <BbSkeleton Class="h-4 w-[200px]" />
                        <BbSkeleton Class="h-3 w-[150px]" />
                    </div>
                </div>
            }
        </div>
        <CodeBlock Source="Components/Skeleton/list-loading.txt" />
    </div>

    <!-- Avatar Variations -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Avatar Placeholders</h2>
            <p class="text-sm text-muted-foreground">
                Different sizes of circular skeletons for avatar loading states.
            </p>
        </div>
        <div class="flex items-center gap-6">
            <div class="space-y-2">
                <p class="text-xs text-muted-foreground text-center">Small</p>
                <BbSkeleton Shape="SkeletonShape.Circular" Class="h-8 w-8" />
            </div>
            <div class="space-y-2">
                <p class="text-xs text-muted-foreground text-center">Medium</p>
                <BbSkeleton Shape="SkeletonShape.Circular" Class="h-12 w-12" />
            </div>
            <div class="space-y-2">
                <p class="text-xs text-muted-foreground text-center">Large</p>
                <BbSkeleton Shape="SkeletonShape.Circular" Class="h-16 w-16" />
            </div>
            <div class="space-y-2">
                <p class="text-xs text-muted-foreground text-center">XL</p>
                <BbSkeleton Shape="SkeletonShape.Circular" Class="h-24 w-24" />
            </div>
        </div>
        <CodeBlock Source="Components/Skeleton/avatar-placeholders.txt" />
    </div>

    <!-- Profile Card Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Profile Card Loading</h2>
            <p class="text-sm text-muted-foreground">
                Complex loading state with mixed skeleton shapes.
            </p>
        </div>
        <div class="max-w-md border rounded-lg p-6 space-y-6">
            <!-- Header -->
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <BbSkeleton Shape="SkeletonShape.Circular" Class="h-16 w-16" />
                    <div class="space-y-2">
                        <BbSkeleton Class="h-5 w-[120px]" />
                        <BbSkeleton Class="h-4 w-[100px]" />
                    </div>
                </div>
                <BbSkeleton Class="h-8 w-20 rounded-full" />
            </div>

            <BbSeparator />

            <!-- Stats -->
            <div class="grid grid-cols-3 gap-4">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="space-y-2 text-center">
                        <BbSkeleton Class="h-6 w-full" />
                        <BbSkeleton Class="h-3 w-3/4 mx-auto" />
                    </div>
                }
            </div>

            <BbSeparator />

            <!-- Bio -->
            <div class="space-y-2">
                <BbSkeleton Class="h-4 w-full" />
                <BbSkeleton Class="h-4 w-full" />
                <BbSkeleton Class="h-4 w-2/3" />
            </div>
        </div>
        <CodeBlock Source="Components/Skeleton/profile-card-loading.txt" />
    </div>

    <!-- Table Loading -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Table Loading State</h2>
            <p class="text-sm text-muted-foreground">
                Skeleton placeholders for table rows and columns.
            </p>
        </div>
        <div class="border rounded-lg overflow-hidden">
            <div class="border-b bg-muted/50 px-6 py-3 flex gap-4">
                <BbSkeleton Class="h-4 w-[150px]" />
                <BbSkeleton Class="h-4 w-[100px]" />
                <BbSkeleton Class="h-4 w-[120px]" />
                <BbSkeleton Class="h-4 w-[80px]" />
            </div>
            @for (int i = 0; i < 5; i++)
            {
                <div class="px-6 py-4 flex gap-4 border-b last:border-b-0">
                    <BbSkeleton Class="h-4 w-[150px]" />
                    <BbSkeleton Class="h-4 w-[100px]" />
                    <BbSkeleton Class="h-4 w-[120px]" />
                    <BbSkeleton Class="h-4 w-[80px]" />
                </div>
            }
        </div>
        <CodeBlock Source="Components/Skeleton/table-loading.txt" />
    </div>

    <!-- Form Loading -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Form Loading State</h2>
            <p class="text-sm text-muted-foreground">
                Skeleton placeholders for form fields.
            </p>
        </div>
        <div class="max-w-md border rounded-lg p-6 space-y-6">
            @for (int i = 0; i < 3; i++)
            {
                <div class="space-y-2">
                    <BbSkeleton Class="h-4 w-[100px]" />
                    <BbSkeleton Class="h-10 w-full" />
                </div>
            }
            <div class="flex gap-3">
                <BbSkeleton Class="h-10 w-24" />
                <BbSkeleton Class="h-10 w-24" />
            </div>
        </div>
        <CodeBlock Source="Components/Skeleton/form-loading.txt" />
    </div>

    <!-- Image Gallery Loading -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Image Gallery Loading</h2>
            <p class="text-sm text-muted-foreground">
                Skeleton placeholders for image grid layouts.
            </p>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            @for (int i = 0; i < 8; i++)
            {
                <BbSkeleton Class="h-[200px] w-full" />
            }
        </div>
        <CodeBlock Source="Components/Skeleton/image-gallery-loading.txt" />
    </div>

    <!-- Explicit Sizing -->
    <div class="space-y-4">
        <div class="space-y-2">
            <div class="flex items-center gap-2">
                <h2 class="text-2xl font-semibold">Explicit Sizing</h2>
                <span class="inline-flex items-center rounded-full bg-primary/10 px-2 py-0.5 text-xs font-medium text-primary ring-1 ring-inset ring-primary/20">v3</span>
            </div>
            <p class="text-sm text-muted-foreground">
                Use <code class="text-xs bg-muted px-1 py-0.5 rounded">Width</code> and <code class="text-xs bg-muted px-1 py-0.5 rounded">Height</code> parameters for explicit sizing via inline styles instead of Tailwind arbitrary values.
            </p>
        </div>
        <div class="flex flex-col space-y-3">
            <BbSkeleton Width="250px" Height="20px" />
            <BbSkeleton Width="200px" Height="20px" />
            <BbSkeleton Width="50%" Height="100px" />
            <BbSkeleton Shape="SkeletonShape.Circular" Width="64px" Height="64px" />
        </div>
        <CodeBlock Source="Components/Skeleton/explicit-sizing.txt" />
    </div>

    <!-- Custom Styling -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Custom Styling</h2>
            <p class="text-sm text-muted-foreground">
                Override styles with the Class parameter for different effects.
            </p>
        </div>
        <div class="flex flex-col space-y-4">
            <BbSkeleton Class="h-32 w-full rounded-xl" />
            <BbSkeleton Class="h-4 w-full rounded-none" />
            <BbSkeleton Shape="SkeletonShape.Circular" Class="h-20 w-20" />
        </div>
        <CodeBlock Source="Components/Skeleton/custom-styling.txt" />
    </div>

    <!-- Best Practices -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Best Practices</h2>
            <p class="text-sm text-muted-foreground">
                Guidelines for using skeleton loading states effectively.
            </p>
        </div>
        <div class="border rounded-lg p-6 space-y-3 bg-muted/50">
            <p class="text-sm">
                ✓ <strong>Match content dimensions:</strong> Skeleton should approximate the size of the actual content.
            </p>
            <p class="text-sm">
                ✓ <strong>Use appropriate shapes:</strong> Circular for avatars, rectangular for text and images.
            </p>
            <p class="text-sm">
                ✓ <strong>Maintain layout:</strong> Prevent layout shifts by using skeleton placeholders that match content structure.
            </p>
            <p class="text-sm">
                ✓ <strong>Progressive disclosure:</strong> Show skeletons only for slow-loading content (>300ms).
            </p>
            <p class="text-sm">
                ✓ <strong>Keep it simple:</strong> Avoid overly complex skeleton patterns that distract users.
            </p>
        </div>
    </div>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>

        <div class="space-y-4">
            <ApiReference ComponentName="Skeleton">
                <ApiParameter Name="Shape" Type="SkeletonShape" Default="Rectangular">
                    The shape variant of the skeleton. Options: Rectangular (rounded-md), Circular (rounded-full).
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the skeleton element. Use Tailwind utilities for width, height, and spacing.
                </ApiParameter>
                <ApiParameter Name="Width" Type="string?">
                    Explicit width applied as an inline style (e.g., "200px", "50%").
                </ApiParameter>
                <ApiParameter Name="Height" Type="string?">
                    Explicit height applied as an inline style (e.g., "20px", "2rem").
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>
