@page "/components/hovercard"
<PageTitle>Hover Card Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
        <h1 class="text-4xl font-bold tracking-tight">Hover Card Component</h1>
        <p class="text-xl text-muted-foreground">
            For sighted users to preview content available behind a link.
        </p>
        </div>
    </div>

    <div class="space-y-6">
    </div>

    <!-- AsChild Pattern -->
    <div class="space-y-4">
        <h2 class="text-2xl font-semibold">AsChild Pattern</h2>
        <p class="text-sm text-muted-foreground">
            Use AsChild to compose triggers with your own styled elements.
        </p>

        <div class="grid md:grid-cols-2 gap-6">
            <!-- Without AsChild -->
            <div class="space-y-3 p-4 border rounded-lg">
                <h3 class="text-lg font-medium">Without AsChild</h3>
                <p class="text-sm text-muted-foreground">
                    HoverCardTrigger renders its own div element.
                </p>
                <BbHoverCard>
                    <BbHoverCardTrigger AsChild="false" Class="underline cursor-pointer">
                        @@username
                    </BbHoverCardTrigger>
                    <BbHoverCardContent>
                        <p class="text-sm">User profile info</p>
                    </BbHoverCardContent>
                </BbHoverCard>
            </div>

            <!-- With AsChild -->
            <div class="space-y-3 p-4 border rounded-lg">
                <h3 class="text-lg font-medium">With AsChild</h3>
                <p class="text-sm text-muted-foreground">
                    Button receives hover/focus behavior via TriggerContext.
                </p>
                <BbHoverCard>
                    <BbHoverCardTrigger>
                        <BbButton Variant="ButtonVariant.Link">@@johndoe</BbButton>
                    </BbHoverCardTrigger>
                    <BbHoverCardContent>
                        <div class="flex gap-3">
                            <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-500 to-teal-500 flex items-center justify-center text-white font-bold">
                                JD
                            </div>
                            <div>
                                <h4 class="text-sm font-semibold">John Doe</h4>
                                <p class="text-xs text-muted-foreground">Software Developer</p>
                            </div>
                        </div>
                    </BbHoverCardContent>
                </BbHoverCard>
            </div>
        </div>

        <CodeBlock Source="Components/HoverCard/as-child.txt" />
    </div>

    <div class="space-y-4">
        <h2 class="text-2xl font-semibold">Default</h2>
        <p class="text-sm text-muted-foreground">
            Hover over the trigger to display additional content.
        </p>

        <div class="flex items-center gap-2">
            <p class="text-sm">Hover over</p>
            <BbHoverCard>
                <BbHoverCardTrigger AsChild="false" Class="underline">@@nextjs</BbHoverCardTrigger>
                <BbHoverCardContent>
                    <div class="flex justify-between space-x-4">
                        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-purple-500 to-pink-500 text-white font-bold text-lg">
                            N
                        </div>
                        <div class="space-y-1 flex-1">
                            <h4 class="text-sm font-semibold">@@nextjs</h4>
                            <p class="text-sm text-muted-foreground">
                                The React Framework – created and maintained by @@vercel.
                            </p>
                            <div class="flex items-center pt-2">
                                <svg class="mr-1 h-4 w-4 opacity-70" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                                </svg>
                                <span class="text-xs text-muted-foreground">Joined December 2021</span>
                            </div>
                        </div>
                    </div>
                </BbHoverCardContent>
            </BbHoverCard>
            <p class="text-sm">for more information.</p>
        </div>

        <CodeBlock Source="Components/HoverCard/default.txt" />
    </div>

    <div class="space-y-4">
        <h2 class="text-2xl font-semibold">User Profile Card</h2>
        <p class="text-sm text-muted-foreground">
            Common use case for showing user information on hover.
        </p>

        <div class="text-sm">
            Article written by
            <BbHoverCard>
                <BbHoverCardTrigger AsChild="false" Class="font-semibold text-primary hover:underline cursor-pointer">
                    @@johndoe
                </BbHoverCardTrigger>
                <BbHoverCardContent>
                    <div class="flex gap-4">
                        <div class="h-16 w-16 rounded-full bg-gradient-to-br from-blue-500 to-teal-500 flex items-center justify-center text-white font-bold text-2xl">
                            JD
                        </div>
                        <div class="space-y-2 flex-1">
                            <div>
                                <h4 class="text-sm font-semibold leading-none">John Doe</h4>
                                <p class="text-sm text-muted-foreground">@@johndoe</p>
                            </div>
                            <p class="text-sm">
                                Full-stack developer passionate about creating beautiful user experiences and scalable systems.
                            </p>
                            <div class="flex gap-4 text-xs text-muted-foreground">
                                <div>
                                    <span class="font-semibold text-foreground">2.5k</span> followers
                                </div>
                                <div>
                                    <span class="font-semibold text-foreground">890</span> following
                                </div>
                            </div>
                        </div>
                    </div>
                </BbHoverCardContent>
            </BbHoverCard>
            on January 15, 2024.
        </div>

        <CodeBlock Source="Components/HoverCard/user-profile.txt" />
    </div>

    <div class="space-y-4">
        <h2 class="text-2xl font-semibold">Product Preview</h2>
        <p class="text-sm text-muted-foreground">
            Show product details on hover.
        </p>

        <div class="flex flex-wrap gap-4">
            <BbHoverCard OpenDelay="300">
                <BbHoverCardTrigger AsChild="false" Class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2">
                    View Product
                </BbHoverCardTrigger>
                <BbHoverCardContent>
                    <div class="space-y-3">
                        <div class="h-32 w-full rounded-md bg-gradient-to-br from-orange-400 to-rose-400"></div>
                        <div class="space-y-1">
                            <h4 class="text-sm font-semibold">Premium Headphones</h4>
                            <p class="text-sm text-muted-foreground">
                                High-quality wireless headphones with active noise cancellation.
                            </p>
                            <div class="flex items-center justify-between pt-2">
                                <span class="text-lg font-bold">$299.99</span>
                                <span class="text-xs text-muted-foreground">★★★★★ (4.8)</span>
                            </div>
                        </div>
                    </div>
                </BbHoverCardContent>
            </BbHoverCard>

            <BbHoverCard OpenDelay="300">
                <BbHoverCardTrigger AsChild="false" Class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2">
                    Another Product
                </BbHoverCardTrigger>
                <BbHoverCardContent>
                    <div class="space-y-3">
                        <div class="h-32 w-full rounded-md bg-gradient-to-br from-blue-400 to-purple-400"></div>
                        <div class="space-y-1">
                            <h4 class="text-sm font-semibold">Smart Watch Pro</h4>
                            <p class="text-sm text-muted-foreground">
                                Feature-rich smartwatch with health tracking and notifications.
                            </p>
                            <div class="flex items-center justify-between pt-2">
                                <span class="text-lg font-bold">$399.99</span>
                                <span class="text-xs text-muted-foreground">★★★★☆ (4.5)</span>
                            </div>
                        </div>
                    </div>
                </BbHoverCardContent>
            </BbHoverCard>
        </div>

        <CodeBlock Source="Components/HoverCard/product-preview.txt" />
    </div>

    <div class="space-y-4">
        <h2 class="text-2xl font-semibold">Definition Tooltip</h2>
        <p class="text-sm text-muted-foreground">
            Provide definitions or explanations for technical terms.
        </p>

        <div class="text-sm max-w-2xl">
            <p>
                The component uses
                <BbHoverCard OpenDelay="200">
                    <BbHoverCardTrigger AsChild="false" Class="border-b border-dashed border-primary cursor-help">
                        Floating UI
                    </BbHoverCardTrigger>
                    <BbHoverCardContent>
                        <div class="space-y-2">
                            <h4 class="text-sm font-semibold">Floating UI</h4>
                            <p class="text-sm text-muted-foreground">
                                A low-level library for positioning floating elements like tooltips, popovers, and dropdowns. It provides smart positioning with collision detection and automatic adjustments.
                            </p>
                            <a href="https://floating-ui.com" target="_blank" class="text-xs text-primary hover:underline">
                                Learn more →
                            </a>
                        </div>
                    </BbHoverCardContent>
                </BbHoverCard>
                for intelligent positioning with automatic collision detection and
                <BbHoverCard OpenDelay="200">
                    <BbHoverCardTrigger AsChild="false" Class="border-b border-dashed border-primary cursor-help">
                        ARIA attributes
                    </BbHoverCardTrigger>
                    <BbHoverCardContent>
                        <div class="space-y-2">
                            <h4 class="text-sm font-semibold">ARIA Attributes</h4>
                            <p class="text-sm text-muted-foreground">
                                Accessible Rich Internet Applications (ARIA) attributes help make web content more usable with assistive technologies.
                            </p>
                        </div>
                    </BbHoverCardContent>
                </BbHoverCard>
                for assistive technology context.
            </p>
        </div>

        <CodeBlock Source="Components/HoverCard/definition-tooltip.txt" />
    </div>

    <AccessibilityList>
        <AriaAttributes>
            <AccessibilityItem>Trigger element receives focus and hover events</AccessibilityItem>
            <AccessibilityItem>Content is announced to screen readers when displayed</AccessibilityItem>
            <AccessibilityItem>Proper role and aria attributes for tooltip-like behavior</AccessibilityItem>
        </AriaAttributes>
        <KeyboardNavigation>
            <KeyboardShortcutItem Description="Show hover card on focus">
                <BbKbd>Tab</BbKbd>
            </KeyboardShortcutItem>
        </KeyboardNavigation>
    </AccessibilityList>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>
        <div class="space-y-4">
            <ApiReference ComponentName="HoverCard">
                <ApiParameter Name="Open" Type="bool?" Default="null">
                    Controls whether the hover card is open (controlled mode). When null, the hover card manages its own state.
                </ApiParameter>
                <ApiParameter Name="OpenChanged" Type="EventCallback&lt;bool&gt;">
                    Event callback invoked when the open state changes. Use with @@bind-Open for two-way binding.
                </ApiParameter>
                <ApiParameter Name="DefaultOpen" Type="bool" Default="false">
                    Default open state when in uncontrolled mode.
                </ApiParameter>
                <ApiParameter Name="OnOpenChange" Type="EventCallback&lt;bool&gt;">
                    Event callback invoked when the hover card open state changes.
                </ApiParameter>
                <ApiParameter Name="OpenDelay" Type="int" Default="700">
                    Delay in milliseconds before opening the hover card.
                </ApiParameter>
                <ApiParameter Name="CloseDelay" Type="int" Default="300">
                    Delay in milliseconds before closing the hover card.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The child content. Should include HoverCardTrigger and HoverCardContent components.
                </ApiParameter>
            </ApiReference>
            <ApiReference ComponentName="HoverCardTrigger">
                <ApiParameter Name="AsChild" Type="bool" Default="true">
                    When true, the trigger does not render its own element. Instead, it passes trigger behavior via TriggerContext to child components.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?" Default="null">
                    Additional CSS classes to apply to the trigger.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The child content to render within the trigger.
                </ApiParameter>
            </ApiReference>
            <ApiReference ComponentName="HoverCardContent">
                <ApiParameter Name="Side" Type="PopoverSide" Default="Bottom">
                    Preferred side for positioning the content relative to the trigger.
                </ApiParameter>
                <ApiParameter Name="Align" Type="PopoverAlign" Default="Center">
                    Alignment of the content relative to the trigger.
                </ApiParameter>
                <ApiParameter Name="Offset" Type="int" Default="4">
                    Offset distance from the trigger element in pixels.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?" Default="null">
                    Additional CSS classes to apply to the content container.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The content to render inside the hover card.
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>

