@page "/components/empty"
@using BlazorBlueprint.Icons.Lucide.Components

<PageTitle>Empty Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Empty Component</h1>
            <p class="text-xl text-muted-foreground">
                Displays a placeholder when there is no content to show.
            </p>
        </div>
    </div>

    <!-- Basic Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Example</h2>
            <p class="text-sm text-muted-foreground">
                A simple empty state with title and description.
            </p>
        </div>
        <div class="border rounded-lg">
            <BbEmpty Title="No results found"
                   Description="Try adjusting your search or filter to find what you're looking for." />
        </div>
        <CodeBlock Source="Components/Empty/basic.txt" />
    </div>

    <!-- With Icon -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Icon</h2>
            <p class="text-sm text-muted-foreground">
                Empty state with an icon for visual emphasis.
            </p>
        </div>
        <div class="border rounded-lg">
            <BbEmpty Title="No messages"
                   Description="You don't have any messages yet. Start a conversation!">
                <Icon>
                    <LucideIcon Name="inbox" />
                </Icon>
            </BbEmpty>
        </div>
        <CodeBlock Source="Components/Empty/with-icon.txt" />
    </div>

    <!-- With Action -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Action</h2>
            <p class="text-sm text-muted-foreground">
                Empty state with a call-to-action button.
            </p>
        </div>
        <div class="border rounded-lg">
            <BbEmpty Title="No projects"
                   Description="Get started by creating your first project.">
                <Icon>
                    <LucideIcon Name="folder-open" />
                </Icon>
                <ChildContent>
                    <BbButton>
                        <LucideIcon Name="plus" Class="h-4 w-4 mr-2" />
                        Create Project
                    </BbButton>
                </ChildContent>
            </BbEmpty>
        </div>
        <CodeBlock Source="Components/Empty/with-action.txt" />
    </div>

    <!-- Sizes -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Sizes</h2>
            <p class="text-sm text-muted-foreground">
                Empty states come in different sizes for various contexts.
            </p>
        </div>
        <div class="grid gap-4">
            <div class="border rounded-lg">
                <BbEmpty Size="EmptySize.Small"
                       Title="Small"
                       Description="Compact empty state for tight spaces.">
                    <Icon>
                        <LucideIcon Name="file-x" />
                    </Icon>
                </BbEmpty>
            </div>
            <div class="border rounded-lg">
                <BbEmpty Size="EmptySize.Default"
                       Title="Default"
                       Description="Standard empty state for most use cases.">
                    <Icon>
                        <LucideIcon Name="file-x" />
                    </Icon>
                </BbEmpty>
            </div>
            <div class="border rounded-lg">
                <BbEmpty Size="EmptySize.Large"
                       Title="Large"
                       Description="Prominent empty state for primary content areas.">
                    <Icon>
                        <LucideIcon Name="file-x" />
                    </Icon>
                </BbEmpty>
            </div>
        </div>
        <CodeBlock Source="Components/Empty/sizes.txt" />
    </div>

    <!-- Search Results -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Search Results</h2>
            <p class="text-sm text-muted-foreground">
                Empty state for search results.
            </p>
        </div>
        <div class="border rounded-lg">
            <BbEmpty Title="No results for 'blazor components'"
                   Description="We couldn't find anything matching your search. Try different keywords.">
                <Icon>
                    <LucideIcon Name="search-x" />
                </Icon>
                <ChildContent>
                    <BbButton Variant="ButtonVariant.Outline">Clear Search</BbButton>
                </ChildContent>
            </BbEmpty>
        </div>
        <CodeBlock Source="Components/Empty/search-results.txt" />
    </div>

    <!-- Error State -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Error State</h2>
            <p class="text-sm text-muted-foreground">
                Empty state for error scenarios.
            </p>
        </div>
        <div class="border rounded-lg">
            <BbEmpty Title="Something went wrong"
                   Description="We encountered an error while loading your data. Please try again.">
                <Icon>
                    <LucideIcon Name="circle-alert" />
                </Icon>
                <ChildContent>
                    <BbButton Variant="ButtonVariant.Destructive">
                        <LucideIcon Name="refresh-cw" Class="h-4 w-4 mr-2" />
                        Retry
                    </BbButton>
                </ChildContent>
            </BbEmpty>
        </div>
        <CodeBlock Source="Components/Empty/error.txt" />
    </div>
</div>
