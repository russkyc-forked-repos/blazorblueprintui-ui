@page "/components/label"
<PageTitle>Label Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
        <h1 class="text-4xl font-bold tracking-tight">Label Component</h1>
        <p class="text-xl text-muted-foreground">
            Renders an accessible label associated with form controls.
        </p>
        </div>
    </div>

    <div class="space-y-6">
    </div>

    <!-- Basic Usage -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Usage</h2>
            <p class="text-sm text-muted-foreground">
                Label associated with an input field using the For parameter.
            </p>
        </div>
        <div class="max-w-md space-y-2">
            <BbLabel For="basic-input">Your Name</BbLabel>
            <BbInput Id="basic-input" Placeholder="Enter your name" />
        </div>
        <CodeBlock Source="Components/Label/basic.txt" />
    </div>

    <!-- Form Fields -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Form Fields</h2>
            <p class="text-sm text-muted-foreground">
                Labels with various input types.
            </p>
        </div>
        <div class="max-w-md space-y-6">
            <div class="space-y-2">
                <BbLabel For="email-field">Email Address</BbLabel>
                <BbInput Id="email-field" Type="InputType.Email" Placeholder="you@example.com" />
            </div>

            <div class="space-y-2">
                <BbLabel For="password-field">Password</BbLabel>
                <BbInput Id="password-field" Type="InputType.Password" Placeholder="••••••••" />
            </div>

            <div class="space-y-2">
                <BbLabel For="url-field">Website URL</BbLabel>
                <BbInput Id="url-field" Type="InputType.Url" Placeholder="https://example.com" />
            </div>

            <div class="space-y-2">
                <BbLabel For="date-field">Birth Date</BbLabel>
                <BbInput Id="date-field" Type="InputType.Date" />
            </div>
        </div>
        <CodeBlock Source="Components/Label/form-fields.txt" />
    </div>

    <!-- Required Fields -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Required Field Indicators</h2>
            <p class="text-sm text-muted-foreground">
                Adding visual indicators for required fields.
            </p>
        </div>
        <div class="max-w-md space-y-6">
            <div class="space-y-2">
                <BbLabel For="required-username">
                    Username <span class="text-destructive">*</span>
                </BbLabel>
                <BbInput Id="required-username" Required Placeholder="Enter username" />
            </div>

            <div class="space-y-2">
                <BbLabel For="required-email">
                    Email <BbBadge Variant="BadgeVariant.Destructive" Class="ml-2 text-[10px] px-1 py-0">Required</BbBadge>
                </BbLabel>
                <BbInput Id="required-email" Type="InputType.Email" Required Placeholder="you@example.com" />
            </div>
        </div>
        <CodeBlock Source="Components/Label/required.txt" />
    </div>

    <!-- Checkbox Labels -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Checkbox Labels</h2>
            <p class="text-sm text-muted-foreground">
                Labels used with checkboxes for clickable selection.
            </p>
        </div>
        <div class="max-w-md space-y-4">
            <div class="flex items-center space-x-2">
                <BbCheckbox Id="terms-checkbox" />
                <BbLabel For="terms-checkbox" Class="cursor-pointer">
                    Accept terms and conditions
                </BbLabel>
            </div>

            <div class="flex items-center space-x-2">
                <BbCheckbox Id="marketing-checkbox" />
                <BbLabel For="marketing-checkbox" Class="cursor-pointer">
                    Send me marketing emails
                </BbLabel>
            </div>

            <div class="flex items-center space-x-2">
                <BbCheckbox Id="newsletter-checkbox" />
                <BbLabel For="newsletter-checkbox" Class="cursor-pointer">
                    Subscribe to newsletter
                </BbLabel>
            </div>
        </div>
        <CodeBlock Source="Components/Label/checkbox.txt" />
    </div>

    <!-- Disabled State -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Disabled State</h2>
            <p class="text-sm text-muted-foreground">
                Label automatically styles when associated control is disabled (using peer-disabled).
            </p>
        </div>
        <div class="max-w-md space-y-6">
            <div class="space-y-2">
                <BbInput Id="disabled-input" Disabled Class="peer" />
                <BbLabel For="disabled-input">Disabled Field Label</BbLabel>
                <p class="text-xs text-muted-foreground">Notice how the label appears muted when the input is disabled.</p>
            </div>

            <div class="flex items-center space-x-2">
                <BbCheckbox Id="disabled-checkbox" Disabled Class="peer" />
                <BbLabel For="disabled-checkbox">Disabled Checkbox Option</BbLabel>
            </div>
        </div>
        <CodeBlock Source="Components/Label/disabled.txt" />
    </div>

    <!-- Custom Styling -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Custom Styling</h2>
            <p class="text-sm text-muted-foreground">
                Override label styles with the Class parameter.
            </p>
        </div>
        <div class="max-w-md space-y-6">
            <div class="space-y-2">
                <BbLabel For="large-label-input" Class="text-lg font-bold">Large Bold Label</BbLabel>
                <BbInput Id="large-label-input" />
            </div>

            <div class="space-y-2">
                <BbLabel For="small-label-input" Class="text-xs text-muted-foreground font-normal">Small Muted Label</BbLabel>
                <BbInput Id="small-label-input" />
            </div>

            <div class="space-y-2">
                <BbLabel For="colored-label-input" Class="text-blue-600 dark:text-blue-400">Colored Label</BbLabel>
                <BbInput Id="colored-label-input" />
            </div>

            <div class="space-y-2">
                <BbLabel For="uppercase-label-input" Class="uppercase tracking-wide">Uppercase Label</BbLabel>
                <BbInput Id="uppercase-label-input" />
            </div>
        </div>
        <CodeBlock Source="Components/Label/custom-styling.txt" />
    </div>

    <!-- Descriptive Labels -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Labels with Descriptions</h2>
            <p class="text-sm text-muted-foreground">
                Combining labels with help text for better UX.
            </p>
        </div>
        <div class="max-w-md space-y-6">
            <div class="space-y-2">
                <BbLabel For="display-name">Display Name</BbLabel>
                <BbInput Id="display-name" Placeholder="John Doe" />
                <p class="text-xs text-muted-foreground">
                    This is your public display name. It can be your real name or a pseudonym.
                </p>
            </div>

            <div class="space-y-2">
                <BbLabel For="bio">Bio</BbLabel>
                <BbInput Id="bio" Placeholder="Tell us about yourself" />
                <p class="text-xs text-muted-foreground">
                    Brief description for your profile. Max 160 characters.
                </p>
            </div>
        </div>
        <CodeBlock Source="Components/Label/with-descriptions.txt" />
    </div>

    <!-- Form Layout Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Complete Form Example</h2>
            <p class="text-sm text-muted-foreground">
                Real-world form with multiple labeled fields.
            </p>
        </div>
        <div class="max-w-md border rounded-lg p-6 space-y-6">
            <div class="space-y-2">
                <BbLabel For="form-name">
                    Full Name <span class="text-destructive">*</span>
                </BbLabel>
                <BbInput Id="form-name" Required Placeholder="John Doe" />
            </div>

            <div class="space-y-2">
                <BbLabel For="form-email">
                    Email Address <span class="text-destructive">*</span>
                </BbLabel>
                <BbInput Id="form-email" Type="InputType.Email" Required Placeholder="john@example.com" />
            </div>

            <div class="space-y-2">
                <BbLabel For="form-phone">Phone Number</BbLabel>
                <BbInput Id="form-phone" Type="InputType.Tel" Placeholder="+1 (555) 123-4567" />
            </div>

            <BbSeparator />

            <div class="space-y-3">
                <BbLabel>Preferences</BbLabel>
                <div class="space-y-2">
                    <div class="flex items-center space-x-2">
                        <BbCheckbox Id="form-newsletter" />
                        <BbLabel For="form-newsletter" Class="cursor-pointer font-normal">
                            Subscribe to newsletter
                        </BbLabel>
                    </div>
                    <div class="flex items-center space-x-2">
                        <BbCheckbox Id="form-updates" />
                        <BbLabel For="form-updates" Class="cursor-pointer font-normal">
                            Receive product updates
                        </BbLabel>
                    </div>
                </div>
            </div>

            <div class="flex gap-3">
                <BbButton Variant="ButtonVariant.Default">Submit</BbButton>
                <BbButton Variant="ButtonVariant.Outline">Cancel</BbButton>
            </div>
        </div>
        <CodeBlock Source="Components/Label/complete-form.txt" />
    </div>

    <!-- Accessibility -->
    <AccessibilityList>
        <AriaAttributes>
            <AccessibilityItem>
                Always use For attribute to associate labels with form controls explicitly.
            </AccessibilityItem>
            <AccessibilityItem>
                Labels should clearly describe the form field's purpose with descriptive text.
            </AccessibilityItem>
            <AccessibilityItem>
                Use visual indicators for required fields, but also use HTML5 required attribute.
            </AccessibilityItem>
            <AccessibilityItem>
                Place additional context below the input using <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-describedby</code>.
            </AccessibilityItem>
            <AccessibilityItem>
                Link errors to inputs with <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-describedby</code> for screen readers.
            </AccessibilityItem>
        </AriaAttributes>
    </AccessibilityList>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>

        <div class="space-y-4">
            <ApiReference ComponentName="Label">
                <ApiParameter Name="For" Type="string?">
                    The ID of the form element this label is associated with (maps to htmlFor attribute).
                    Clicking the label will focus/activate the associated control.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the label element.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The content to display inside the label (text, icons, indicators, etc.).
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>
