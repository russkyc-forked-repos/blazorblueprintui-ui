@page "/components/timeline"

<PageTitle>Timeline Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Timeline Component</h1>
            <p class="text-xl text-muted-foreground">
                Displays a vertical timeline of events with icons, connectors, and content.
            </p>
        </div>
    </div>

    <!-- Default -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Default</h2>
            <p class="text-sm text-muted-foreground">
                A basic timeline with title, description, and date for each item.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <BbTimeline>
                <BbTimelineItem>
                    <TimeContent>
                        <BbTimelineTime Class="text-right pr-4">Jan 2024</BbTimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <BbTimelineContent>
                            <BbTimelineHeader>
                                <BbTimelineTitle>Project Kickoff</BbTimelineTitle>
                            </BbTimelineHeader>
                            <BbTimelineDescription>Initial planning and team formation for the new product launch.</BbTimelineDescription>
                        </BbTimelineContent>
                    </ChildContent>
                </BbTimelineItem>

                <BbTimelineItem>
                    <TimeContent>
                        <BbTimelineTime Class="text-right pr-4">Mar 2024</BbTimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <BbTimelineContent>
                            <BbTimelineHeader>
                                <BbTimelineTitle>Design Phase</BbTimelineTitle>
                            </BbTimelineHeader>
                            <BbTimelineDescription>Completed wireframes and design system for all core features.</BbTimelineDescription>
                        </BbTimelineContent>
                    </ChildContent>
                </BbTimelineItem>

                <BbTimelineItem ShowConnector="false">
                    <TimeContent>
                        <BbTimelineTime Class="text-right pr-4">Jun 2024</BbTimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <BbTimelineContent>
                            <BbTimelineHeader>
                                <BbTimelineTitle>Beta Release</BbTimelineTitle>
                            </BbTimelineHeader>
                            <BbTimelineDescription>Launched beta version to early adopters for feedback.</BbTimelineDescription>
                        </BbTimelineContent>
                    </ChildContent>
                </BbTimelineItem>
            </BbTimeline>
        </div>
        <CodeBlock Source="Components/Timeline/default.txt" />
    </div>

    <!-- Shorthand -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Shorthand</h2>
            <p class="text-sm text-muted-foreground">
                Use <code class="bg-muted px-1 py-0.5 rounded">Title</code>, <code class="bg-muted px-1 py-0.5 rounded">Time</code>, and <code class="bg-muted px-1 py-0.5 rounded">Description</code> parameters for simple entries without composing sub-components.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <BbTimeline>
                <BbTimelineItem Title="Project Kickoff" Time="Jan 2024" Description="Initial planning and team formation for the new product launch." />
                <BbTimelineItem Title="Design Phase" Time="Mar 2024" Description="Completed wireframes and design system for all core features." />
                <BbTimelineItem Title="Beta Release" Time="Jun 2024" Description="Launched beta version to early adopters for feedback." ShowConnector="false" />
            </BbTimeline>
        </div>
        <CodeBlock Source="Components/Timeline/shorthand.txt" />
    </div>

    <!-- Rich Content -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Rich Content</h2>
            <p class="text-sm text-muted-foreground">
                Connector lines dynamically stretch to match the height of large content such as cards, images, or detailed descriptions.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <BbTimeline Align="TimelineAlign.Left">
                <BbTimelineItem Status="TimelineStatus.Completed">
                    <IconContent>
                        <BbTimelineIcon Color="TimelineColor.Primary">
                            <LucideIcon Name="check" Size="16" />
                        </BbTimelineIcon>
                    </IconContent>
                    <ChildContent>
                        <div class="border rounded-lg shadow-sm overflow-hidden">
                            <div class="p-4 space-y-3">
                                <div>
                                    <h3 class="text-lg font-bold">Feature Implementation</h3>
                                    <p class="text-sm text-muted-foreground">Added new dashboard analytics module.</p>
                                </div>
                                <p class="text-sm">
                                    This update introduces a comprehensive analytics dashboard with real-time data visualization,
                                    interactive charts, and customizable widgets. Users can now track key performance indicators,
                                    monitor trends over time, and export reports in multiple formats.
                                </p>
                                <div class="flex gap-2">
                                    <BbButton Size="ButtonSize.Small">View Details</BbButton>
                                    <BbButton Size="ButtonSize.Small" Variant="ButtonVariant.Outline">Dismiss</BbButton>
                                </div>
                            </div>
                        </div>
                    </ChildContent>
                </BbTimelineItem>

                <BbTimelineItem Status="TimelineStatus.Completed" ConnectorStyle="TimelineConnectorStyle.Dashed">
                    <IconContent>
                        <BbTimelineIcon Color="TimelineColor.Primary">
                            <LucideIcon Name="check" Size="16" />
                        </BbTimelineIcon>
                    </IconContent>
                    <ChildContent>
                        <BbTimelineContent>
                            <BbTimelineHeader>
                                <BbTimelineTitle>Initial commit</BbTimelineTitle>
                                <BbTimelineTime Class="text-xs">2 hours ago</BbTimelineTime>
                            </BbTimelineHeader>
                            <BbTimelineDescription>Set up project structure.</BbTimelineDescription>
                        </BbTimelineContent>
                    </ChildContent>
                </BbTimelineItem>

                <BbTimelineItem Status="TimelineStatus.Completed">
                    <IconContent>
                        <BbTimelineIcon Color="TimelineColor.Accent">
                            <LucideIcon Name="image" Size="16" />
                        </BbTimelineIcon>
                    </IconContent>
                    <ChildContent>
                        <div class="border rounded-lg shadow-sm overflow-hidden">
                            <div class="bg-muted h-32 flex items-center justify-center">
                                <LucideIcon Name="image" Size="48" Class="text-muted-foreground/50" />
                            </div>
                            <div class="p-4 space-y-2">
                                <h3 class="text-lg font-bold">Design Mockups Uploaded</h3>
                                <p class="text-sm text-muted-foreground">
                                    The design team uploaded 12 new mockups for the checkout flow redesign,
                                    covering mobile, tablet, and desktop breakpoints.
                                </p>
                            </div>
                        </div>
                    </ChildContent>
                </BbTimelineItem>

                <BbTimelineItem Status="TimelineStatus.Pending" ShowConnector="false">
                    <IconContent>
                        <BbTimelineIcon Color="TimelineColor.Muted" Status="TimelineStatus.Pending">
                            <LucideIcon Name="circle-dashed" Size="16" />
                        </BbTimelineIcon>
                    </IconContent>
                    <ChildContent>
                        <BbTimelineContent>
                            <BbTimelineHeader>
                                <BbTimelineTitle>Code Review</BbTimelineTitle>
                            </BbTimelineHeader>
                            <BbTimelineDescription>Awaiting review from the team lead.</BbTimelineDescription>
                        </BbTimelineContent>
                    </ChildContent>
                </BbTimelineItem>
            </BbTimeline>
        </div>
        <CodeBlock Source="Components/Timeline/rich-content.txt" />
    </div>

    <!-- Status Variants -->
