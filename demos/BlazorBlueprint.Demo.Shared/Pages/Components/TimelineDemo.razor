@page "/components/timeline"

<PageTitle>Timeline Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Timeline Component</h1>
            <p class="text-xl text-muted-foreground">
                Displays a vertical timeline of events with icons, connectors, and content.
            </p>
        </div>
    </div>

    <!-- Default -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Default</h2>
            <p class="text-sm text-muted-foreground">
                A basic timeline with title, description, and date for each item.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <Timeline>
                <TimelineItem>
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">Jan 2024</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Project Kickoff</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Initial planning and team formation for the new product launch.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem>
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">Mar 2024</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Design Phase</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Completed wireframes and design system for all core features.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem ShowConnector="false">
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">Jun 2024</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Beta Release</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Launched beta version to early adopters for feedback.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
            </Timeline>
        </div>
    </div>

    <!-- Status Variants -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Status Variants</h2>
            <p class="text-sm text-muted-foreground">
                Timeline items can show completed, in-progress, or pending status with appropriate connector styling.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <Timeline>
                <TimelineItem Status="TimelineStatus.Completed">
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">Step 1</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Order Placed</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Your order has been confirmed and is being processed.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem Status="TimelineStatus.Completed">
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">Step 2</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Payment Confirmed</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Payment has been successfully processed.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem Status="TimelineStatus.InProgress">
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">Step 3</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Shipping</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Your package is on its way to the delivery address.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem Status="TimelineStatus.Pending" ShowConnector="false">
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">Step 4</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Delivered</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Package will be delivered to your doorstep.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
            </Timeline>
        </div>
    </div>

    <!-- Color Variants -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Color Variants</h2>
            <p class="text-sm text-muted-foreground">
                Five color themes for icons: Primary, Secondary, Muted, Accent, and Destructive.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <Timeline>
                <TimelineItem IconColor="TimelineColor.Primary">
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Primary</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Default primary color theme.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem IconColor="TimelineColor.Secondary">
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Secondary</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Secondary color for alternative styling.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem IconColor="TimelineColor.Accent">
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Accent</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Accent color for highlighted items.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem IconColor="TimelineColor.Destructive" ShowConnector="false">
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Destructive</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Destructive color for warnings or errors.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
            </Timeline>
        </div>
    </div>

    <!-- Size Variants -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Size Variants</h2>
            <p class="text-sm text-muted-foreground">
                Three sizes controlling the gap spacing between items and icon dimensions.
            </p>
        </div>
        <div class="grid md:grid-cols-3 gap-6">
            <!-- Small -->
            <div class="border rounded-lg p-4">
                <p class="text-sm font-medium mb-4">Small</p>
                <Timeline Size="TimelineSize.Small">
                    <TimelineItem IconSize="TimelineSize.Small">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Event A</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem IconSize="TimelineSize.Small">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Event B</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem IconSize="TimelineSize.Small" ShowConnector="false">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Event C</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                </Timeline>
            </div>

            <!-- Medium -->
            <div class="border rounded-lg p-4">
                <p class="text-sm font-medium mb-4">Medium (Default)</p>
                <Timeline Size="TimelineSize.Medium">
                    <TimelineItem IconSize="TimelineSize.Medium">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Event A</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem IconSize="TimelineSize.Medium">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Event B</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem IconSize="TimelineSize.Medium" ShowConnector="false">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Event C</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                </Timeline>
            </div>

            <!-- Large -->
            <div class="border rounded-lg p-4">
                <p class="text-sm font-medium mb-4">Large</p>
                <Timeline Size="TimelineSize.Large">
                    <TimelineItem IconSize="TimelineSize.Large">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Event A</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem IconSize="TimelineSize.Large">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Event B</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem IconSize="TimelineSize.Large" ShowConnector="false">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Event C</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                </Timeline>
            </div>
        </div>
    </div>

    <!-- With Custom Icons -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Custom Icons</h2>
            <p class="text-sm text-muted-foreground">
                Replace the default dot indicator with custom icons using the IconContent render fragment.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <Timeline>
                <TimelineItem Status="TimelineStatus.Completed">
                    <IconContent>
                        <TimelineIcon Color="TimelineColor.Primary">
                            <LucideIcon Name="check" Size="16" />
                        </TimelineIcon>
                    </IconContent>
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">9:00 AM</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Code Review Approved</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>All review comments have been addressed and approved.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem Status="TimelineStatus.Completed">
                    <IconContent>
                        <TimelineIcon Color="TimelineColor.Primary">
                            <LucideIcon Name="git-merge" Size="16" />
                        </TimelineIcon>
                    </IconContent>
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">10:30 AM</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Branch Merged</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Feature branch merged into main.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem Status="TimelineStatus.InProgress">
                    <IconContent>
                        <TimelineIcon Color="TimelineColor.Accent">
                            <LucideIcon Name="rocket" Size="16" />
                        </TimelineIcon>
                    </IconContent>
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">11:00 AM</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Deploying to Production</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Deployment pipeline is running.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem Status="TimelineStatus.Pending" ShowConnector="false">
                    <IconContent>
                        <TimelineIcon Color="TimelineColor.Muted" Status="TimelineStatus.Pending">
                            <LucideIcon Name="circle-check" Size="16" />
                        </TimelineIcon>
                    </IconContent>
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">Pending</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Health Check</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Verify all services are running correctly.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
            </Timeline>
        </div>
    </div>

    <!-- Custom Connector Colors -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Custom Connector Colors</h2>
            <p class="text-sm text-muted-foreground">
                Override the connector line color independently from the icon color.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <Timeline>
                <TimelineItem IconColor="TimelineColor.Primary" ConnectorColor="TimelineColor.Accent">
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Accent Connector</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>This item uses an accent-colored connector line.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem IconColor="TimelineColor.Destructive" ConnectorColor="TimelineColor.Destructive">
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Destructive Connector</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Both icon and connector use the destructive color.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>

                <TimelineItem IconColor="TimelineColor.Secondary" ShowConnector="false">
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>No Connector</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>The last item hides its connector line.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
            </Timeline>
        </div>
    </div>

    <!-- Layout Alignment -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Layout Alignment</h2>
            <p class="text-sm text-muted-foreground">
                Control the layout with Center (default), Left, Right, or Alternate alignment.
            </p>
        </div>
        <div class="grid md:grid-cols-2 gap-6">
            <!-- Left -->
            <div class="border rounded-lg p-6">
                <p class="text-sm font-medium mb-4">Left</p>
                <Timeline Align="TimelineAlign.Left">
                    <TimelineItem>
                        <ChildContent>
                            <TimelineContent>
                                <TimelineHeader>
                                    <TimelineTitle>Design</TimelineTitle>
                                </TimelineHeader>
                                <TimelineDescription>Created wireframes and mockups.</TimelineDescription>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem>
                        <ChildContent>
                            <TimelineContent>
                                <TimelineHeader>
                                    <TimelineTitle>Development</TimelineTitle>
                                </TimelineHeader>
                                <TimelineDescription>Built the core features.</TimelineDescription>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem ShowConnector="false">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineHeader>
                                    <TimelineTitle>Launch</TimelineTitle>
                                </TimelineHeader>
                                <TimelineDescription>Released to production.</TimelineDescription>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                </Timeline>
            </div>

            <!-- Right -->
            <div class="border rounded-lg p-6">
                <p class="text-sm font-medium mb-4">Right</p>
                <Timeline Align="TimelineAlign.Right">
                    <TimelineItem>
                        <ChildContent>
                            <TimelineContent>
                                <TimelineHeader>
                                    <TimelineTitle>Design</TimelineTitle>
                                </TimelineHeader>
                                <TimelineDescription>Created wireframes and mockups.</TimelineDescription>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem>
                        <ChildContent>
                            <TimelineContent>
                                <TimelineHeader>
                                    <TimelineTitle>Development</TimelineTitle>
                                </TimelineHeader>
                                <TimelineDescription>Built the core features.</TimelineDescription>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem ShowConnector="false">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineHeader>
                                    <TimelineTitle>Launch</TimelineTitle>
                                </TimelineHeader>
                                <TimelineDescription>Released to production.</TimelineDescription>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                </Timeline>
            </div>
        </div>

        <!-- Alternate -->
        <div class="border rounded-lg p-6">
            <p class="text-sm font-medium mb-4">Alternate</p>
            <Timeline Align="TimelineAlign.Alternate">
                <TimelineItem>
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">Q1 2024</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Planning</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Defined the project scope and milestones.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
                <TimelineItem>
                    <TimeContent>
                        <TimelineTime Class="text-left pl-4">Q2 2024</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Design</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Completed design system and prototypes.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
                <TimelineItem>
                    <TimeContent>
                        <TimelineTime Class="text-right pr-4">Q3 2024</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Development</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Built and tested all core features.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
                <TimelineItem ShowConnector="false">
                    <TimeContent>
                        <TimelineTime Class="text-left pl-4">Q4 2024</TimelineTime>
                    </TimeContent>
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Launch</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Released the product to the public.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
            </Timeline>
        </div>
    </div>

    <!-- Icon Variants -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Icon Variants</h2>
            <p class="text-sm text-muted-foreground">
                Icons can be displayed as Solid (filled) or Outline (bordered) variants.
            </p>
        </div>
        <div class="grid md:grid-cols-2 gap-6">
            <!-- Solid -->
            <div class="border rounded-lg p-6">
                <p class="text-sm font-medium mb-4">Solid (Default)</p>
                <Timeline Align="TimelineAlign.Left">
                    <TimelineItem IconVariant="TimelineIconVariant.Solid">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineHeader>
                                    <TimelineTitle>Solid Primary</TimelineTitle>
                                </TimelineHeader>
                                <TimelineDescription>Filled background with contrasting text.</TimelineDescription>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem IconVariant="TimelineIconVariant.Solid" IconColor="TimelineColor.Destructive" ShowConnector="false">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineHeader>
                                    <TimelineTitle>Solid Destructive</TimelineTitle>
                                </TimelineHeader>
                                <TimelineDescription>Works with all color variants.</TimelineDescription>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                </Timeline>
            </div>

            <!-- Outline -->
            <div class="border rounded-lg p-6">
                <p class="text-sm font-medium mb-4">Outline</p>
                <Timeline Align="TimelineAlign.Left">
                    <TimelineItem IconVariant="TimelineIconVariant.Outline">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineHeader>
                                    <TimelineTitle>Outline Primary</TimelineTitle>
                                </TimelineHeader>
                                <TimelineDescription>Bordered style with transparent background.</TimelineDescription>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem IconVariant="TimelineIconVariant.Outline" IconColor="TimelineColor.Destructive" ShowConnector="false">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineHeader>
                                    <TimelineTitle>Outline Destructive</TimelineTitle>
                                </TimelineHeader>
                                <TimelineDescription>Works with all color variants.</TimelineDescription>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                </Timeline>
            </div>
        </div>
    </div>

    <!-- Connector Styles -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Connector Styles</h2>
            <p class="text-sm text-muted-foreground">
                Connector lines can be Solid, Dashed, or Dotted.
            </p>
        </div>
        <div class="grid md:grid-cols-3 gap-6">
            <!-- Solid -->
            <div class="border rounded-lg p-6">
                <p class="text-sm font-medium mb-4">Solid (Default)</p>
                <Timeline Align="TimelineAlign.Left">
                    <TimelineItem ConnectorStyle="TimelineConnectorStyle.Solid">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Step 1</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem ConnectorStyle="TimelineConnectorStyle.Solid" ShowConnector="false">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Step 2</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                </Timeline>
            </div>

            <!-- Dashed -->
            <div class="border rounded-lg p-6">
                <p class="text-sm font-medium mb-4">Dashed</p>
                <Timeline Align="TimelineAlign.Left">
                    <TimelineItem ConnectorStyle="TimelineConnectorStyle.Dashed">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Step 1</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem ConnectorStyle="TimelineConnectorStyle.Dashed" ShowConnector="false">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Step 2</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                </Timeline>
            </div>

            <!-- Dotted -->
            <div class="border rounded-lg p-6">
                <p class="text-sm font-medium mb-4">Dotted</p>
                <Timeline Align="TimelineAlign.Left">
                    <TimelineItem ConnectorStyle="TimelineConnectorStyle.Dotted">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Step 1</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                    <TimelineItem ConnectorStyle="TimelineConnectorStyle.Dotted" ShowConnector="false">
                        <ChildContent>
                            <TimelineContent>
                                <TimelineTitle>Step 2</TimelineTitle>
                            </TimelineContent>
                        </ChildContent>
                    </TimelineItem>
                </Timeline>
            </div>
        </div>
    </div>

    <!-- Loading State -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Loading State</h2>
            <p class="text-sm text-muted-foreground">
                Items can display a pulse animation on their icon to indicate a loading state.
            </p>
        </div>
        <div class="border rounded-lg p-6">
            <Timeline Align="TimelineAlign.Left">
                <TimelineItem Status="TimelineStatus.Completed">
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Data Fetched</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Successfully retrieved records from the database.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
                <TimelineItem Loading="true" Status="TimelineStatus.InProgress">
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Processing</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Running data transformation pipeline...</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
                <TimelineItem Status="TimelineStatus.Pending" ShowConnector="false">
                    <ChildContent>
                        <TimelineContent>
                            <TimelineHeader>
                                <TimelineTitle>Export</TimelineTitle>
                            </TimelineHeader>
                            <TimelineDescription>Waiting to generate the final report.</TimelineDescription>
                        </TimelineContent>
                    </ChildContent>
                </TimelineItem>
            </Timeline>
        </div>
