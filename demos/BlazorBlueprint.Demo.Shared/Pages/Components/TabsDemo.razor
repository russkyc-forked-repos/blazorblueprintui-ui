@page "/components/tabs"
<PageTitle>Tabs Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
        <h1 class="text-4xl font-bold tracking-tight">Tabs Component</h1>
        <p class="text-xl text-muted-foreground">
            A set of layered sections of content‚Äîknown as tab panels‚Äîthat are displayed one at a time.
        </p>
        </div>
    </div>

    <div class="space-y-6">
    </div>

    <div class="space-y-4">
        <h2 class="text-2xl font-semibold">Default</h2>
        <p class="text-sm text-muted-foreground">
            Basic tabs with shadcn styling.
        </p>

        <div class="w-[400px]">
            <BbTabs DefaultValue="account">
                <BbTabsList Class="grid w-full grid-cols-2">
                    <BbTabsTrigger Value="account">Account</BbTabsTrigger>
                    <BbTabsTrigger Value="password">Password</BbTabsTrigger>
                </BbTabsList>

            <BbTabsContent Value="account">
                <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
                    <div class="space-y-2">
                        <h3 class="text-2xl font-semibold leading-none tracking-tight">Account</h3>
                        <p class="text-sm text-muted-foreground">
                            Make changes to your account here. Click save when you're done.
                        </p>
                    </div>
                    <div class="space-y-4 pt-4">
                        <div class="space-y-1">
                            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">
                                Name
                            </label>
                            <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                                   placeholder="Pedro Duarte" />
                        </div>
                        <div class="space-y-1">
                            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">
                                Username
                            </label>
                            <input class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                                   placeholder="@@peduarte" />
                        </div>
                        <button class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
                            Save changes
                        </button>
                    </div>
                </div>
            </BbTabsContent>

            <BbTabsContent Value="password">
                <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
                    <div class="space-y-2">
                        <h3 class="text-2xl font-semibold leading-none tracking-tight">Password</h3>
                        <p class="text-sm text-muted-foreground">
                            Change your password here. After saving, you'll be logged out.
                        </p>
                    </div>
                    <div class="space-y-4 pt-4">
                        <div class="space-y-1">
                            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">
                                Current password
                            </label>
                            <input type="password"
                                   class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" />
                        </div>
                        <div class="space-y-1">
                            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">
                                New password
                            </label>
                            <input type="password"
                                   class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" />
                        </div>
                        <button class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
                            Save password
                        </button>
                    </div>
                </div>
            </BbTabsContent>
            </BbTabs>
        </div>

        <CodeBlock Source="Components/Tabs/default.txt" />
    </div>

    <div class="space-y-4">
        <h2 class="text-2xl font-semibold">With Multiple Tabs</h2>
        <p class="text-sm text-muted-foreground">
            Tabs can have more than two options.
        </p>

        <BbTabs DefaultValue="overview">
            <BbTabsList>
                <BbTabsTrigger Value="overview">Overview</BbTabsTrigger>
                <BbTabsTrigger Value="analytics">Analytics</BbTabsTrigger>
                <BbTabsTrigger Value="reports">Reports</BbTabsTrigger>
                <BbTabsTrigger Value="notifications">Notifications</BbTabsTrigger>
            </BbTabsList>

            <BbTabsContent Value="overview">
                <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
                    <h3 class="text-lg font-semibold mb-2">Overview</h3>
                    <p class="text-sm text-muted-foreground">
                        View a summary of your account activity and statistics.
                    </p>
                </div>
            </BbTabsContent>

            <BbTabsContent Value="analytics">
                <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
                    <h3 class="text-lg font-semibold mb-2">Analytics</h3>
                    <p class="text-sm text-muted-foreground">
                        Detailed analytics and metrics about your usage.
                    </p>
                </div>
            </BbTabsContent>

            <BbTabsContent Value="reports">
                <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
                    <h3 class="text-lg font-semibold mb-2">Reports</h3>
                    <p class="text-sm text-muted-foreground">
                        Generate and download detailed reports.
                    </p>
                </div>
            </BbTabsContent>

            <BbTabsContent Value="notifications">
                <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
                    <h3 class="text-lg font-semibold mb-2">Notifications</h3>
                    <p class="text-sm text-muted-foreground">
                        Manage your notification preferences.
                    </p>
                </div>
            </BbTabsContent>
        </BbTabs>

        <CodeBlock Source="Components/Tabs/multiple.txt" />
    </div>

    <div class="space-y-4">
        <h2 class="text-2xl font-semibold">Controlled</h2>
        <p class="text-sm text-muted-foreground">
            Control which tab is active programmatically.
        </p>

        <div class="flex gap-2 mb-4">
            <button @onclick='() => activeTab = "morning"'
                    class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-9 px-3">
                Show Morning
            </button>
            <button @onclick='() => activeTab = "afternoon"'
                    class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-9 px-3">
                Show Afternoon
            </button>
            <button @onclick='() => activeTab = "evening"'
                    class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-9 px-3">
                Show Evening
            </button>
        </div>

        <p class="text-xs text-muted-foreground mb-2">Current: <strong>@activeTab</strong></p>

        <div class="w-[400px]">
            <BbTabs @bind-Value="activeTab">
                <BbTabsList Class="grid w-full grid-cols-3">
                    <BbTabsTrigger Value="morning">Morning</BbTabsTrigger>
                    <BbTabsTrigger Value="afternoon">Afternoon</BbTabsTrigger>
                    <BbTabsTrigger Value="evening">Evening</BbTabsTrigger>
                </BbTabsList>

            <BbTabsContent Value="morning">
                <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
                    <h3 class="text-lg font-semibold mb-2">üåÖ Morning</h3>
                    <p class="text-sm text-muted-foreground">
                        Good morning! Start your day with a fresh perspective.
                    </p>
                </div>
            </BbTabsContent>

            <BbTabsContent Value="afternoon">
                <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
                    <h3 class="text-lg font-semibold mb-2">‚òÄÔ∏è Afternoon</h3>
                    <p class="text-sm text-muted-foreground">
                        Afternoon productivity at its peak!
                    </p>
                </div>
            </BbTabsContent>

            <BbTabsContent Value="evening">
                <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
                    <h3 class="text-lg font-semibold mb-2">üåô Evening</h3>
                    <p class="text-sm text-muted-foreground">
                        Wind down and reflect on your day.
                    </p>
                </div>
            </BbTabsContent>
            </BbTabs>
        </div>

        <CodeBlock Source="Components/Tabs/controlled.txt" />
    </div>

    <AccessibilityList>
        <AriaAttributes>
            <AccessibilityItem>Uses <code>role="tablist"</code>, <code>role="tab"</code>, and <code>role="tabpanel"</code> for proper semantics</AccessibilityItem>
            <AccessibilityItem><code>aria-selected</code> indicates the active tab</AccessibilityItem>
            <AccessibilityItem><code>aria-controls</code> links each tab trigger to its content panel</AccessibilityItem>
            <AccessibilityItem><code>aria-orientation</code> reflects horizontal or vertical layout</AccessibilityItem>
            <AccessibilityItem>Disabled tabs are excluded from the tab sequence</AccessibilityItem>
        </AriaAttributes>
        <KeyboardNavigation>
            <KeyboardShortcutItem Description="Move focus between tabs">
                <BbKbd>Arrow Keys</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Activate focused tab (manual mode)">
                <BbKbd>Enter</BbKbd> / <BbKbd>Space</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Move focus to first tab">
                <BbKbd>Home</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Move focus to last tab">
                <BbKbd>End</BbKbd>
            </KeyboardShortcutItem>
        </KeyboardNavigation>
    </AccessibilityList>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>

        <div class="space-y-4">
            <ApiReference ComponentName="Tabs">
                <ApiParameter Name="Value" Type="string?" Default="null">
                    Controls which tab is active (controlled mode). Supports two-way binding with <code>@@bind-Value</code>.
                </ApiParameter>
                <ApiParameter Name="DefaultValue" Type="string?" Default="null">
                    Default active tab value when in uncontrolled mode.
                </ApiParameter>
                <ApiParameter Name="Orientation" Type="TabsOrientation" Default="Horizontal">
                    Orientation of the tabs. Options: Horizontal, Vertical.
                </ApiParameter>
                <ApiParameter Name="ActivationMode" Type="TabsActivationMode" Default="Automatic">
                    Activation mode. Automatic activates on focus, Manual requires Enter/Space.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?" Default="null">
                    Additional CSS classes for the tabs container.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="TabsList">
                <ApiParameter Name="Class" Type="string?" Default="null">
                    Additional CSS classes for the tabs list container.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="TabsTrigger">
                <ApiParameter Name="Value" Type="string">
                    The value that identifies this tab. Must match a TabsContent Value.
                </ApiParameter>
                <ApiParameter Name="Disabled" Type="bool" Default="false">
                    Whether this tab trigger is disabled.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?" Default="null">
                    Additional CSS classes for the tab trigger.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="TabsContent">
                <ApiParameter Name="Value" Type="string">
                    The value that identifies this content panel. Must match a TabsTrigger Value.
                </ApiParameter>
                <ApiParameter Name="ForceMount" Type="bool" Default="false">
                    When true, content remains mounted but hidden when inactive instead of being unmounted.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?" Default="null">
                    Additional CSS classes for the tab content panel.
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>

@code {
    private string? activeTab = "morning";
}
