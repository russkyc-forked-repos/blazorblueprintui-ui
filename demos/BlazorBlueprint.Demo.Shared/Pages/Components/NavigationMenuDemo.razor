@page "/components/navigation-menu"

<PageTitle>Navigation Menu Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Navigation Menu Component</h1>
            <p class="text-xl text-muted-foreground">
                A collection of links for navigating websites with dropdown support.
            </p>
        </div>
    </div>

    <!-- Responsive Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Responsive Navigation</h2>
            <p class="text-sm text-muted-foreground">
                Resize the browser window to see the navigation switch between desktop and mobile modes.
                On mobile (below 768px), a hamburger icon appears and the navigation moves to a slide-out sheet.
            </p>
        </div>
        <div class="border rounded-lg overflow-visible">
            <BbResponsiveNavProvider>
                <header class="flex items-center justify-between p-4 bg-background rounded-lg">
                    <!-- Logo (always visible) -->
                    <a href="/" class="font-bold text-lg shrink-0">BlazorBlueprint</a>

                    <!-- Desktop navigation (hidden on mobile) -->
                    <BbNavigationMenu Class="hidden md:flex">
                        <BbNavigationMenuList>
                            <BbNavigationMenuItem Value="resp-getting-started">
                                <BbNavigationMenuTrigger>Getting started</BbNavigationMenuTrigger>
                                <BbNavigationMenuContent>
                                    <div class="grid gap-3 p-4 w-[400px]">
                                        <div class="p-3 rounded-lg hover:bg-accent">
                                            <a href="#" class="block font-medium mb-1">Introduction</a>
                                            <p class="text-sm text-muted-foreground">Re-usable components built using Blazor.</p>
                                        </div>
                                        <div class="p-3 rounded-lg hover:bg-accent">
                                            <a href="#" class="block font-medium mb-1">Installation</a>
                                            <p class="text-sm text-muted-foreground">How to install and get started.</p>
                                        </div>
                                    </div>
                                </BbNavigationMenuContent>
                            </BbNavigationMenuItem>
                            <BbNavigationMenuItem>
                                <BbNavigationMenuLink Href="/components">Components</BbNavigationMenuLink>
                            </BbNavigationMenuItem>
                            <BbNavigationMenuItem>
                                <BbNavigationMenuLink Href="/primitives">Primitives</BbNavigationMenuLink>
                            </BbNavigationMenuItem>
                        </BbNavigationMenuList>
                    </BbNavigationMenu>

                    <!-- Right side icons (always visible) -->
                    <div class="flex items-center gap-2">
                        <!-- Search button -->
                        <button type="button" class="inline-flex items-center justify-center rounded-md p-2 text-muted-foreground hover:bg-accent hover:text-accent-foreground">
                            <LucideIcon Name="search" Size="20" />
                            <span class="sr-only">Search</span>
                        </button>

                        <!-- Notifications bell -->
                        <button type="button" class="relative inline-flex items-center justify-center rounded-md p-2 text-muted-foreground hover:bg-accent hover:text-accent-foreground">
                            <LucideIcon Name="bell" Size="20" />
                            <span class="absolute top-1 right-1 h-2 w-2 rounded-full bg-red-500"></span>
                            <span class="sr-only">Notifications</span>
                        </button>

                        <!-- Sign In (desktop only) -->
                        <a href="#" class="hidden md:inline-flex text-sm text-muted-foreground hover:text-foreground px-2">Sign In</a>

                        <!-- Mobile hamburger (right-aligned) -->
                        <BbResponsiveNavTrigger />
                    </div>
                </header>

                <BbResponsiveNavContent>
                    <nav class="flex flex-col space-y-4">
                        <span class="text-sm font-medium text-muted-foreground">Getting started</span>
                        <div class="pl-4 space-y-2 border-l">
                            <a href="#" class="block text-sm hover:text-primary">Introduction</a>
                            <a href="#" class="block text-sm hover:text-primary">Installation</a>
                        </div>
                        <a href="/components" class="text-lg font-medium hover:text-primary">Components</a>
                        <a href="/primitives" class="text-lg font-medium hover:text-primary">Primitives</a>
                        <BbSeparator />
                        <a href="#" class="text-sm text-muted-foreground hover:text-primary">Sign In</a>
                    </nav>
                </BbResponsiveNavContent>
            </BbResponsiveNavProvider>
        </div>
        <div class="border rounded-lg p-4 bg-muted/50">
            <p class="text-sm text-muted-foreground">
                <strong>Tip:</strong> Wrap your header with <code class="text-xs bg-background px-1 py-0.5 rounded">ResponsiveNavProvider</code>,
                add <code class="text-xs bg-background px-1 py-0.5 rounded">ResponsiveNavTrigger</code> for the hamburger menu,
                and use <code class="text-xs bg-background px-1 py-0.5 rounded">ResponsiveNavContent</code> for the mobile sheet content.
                Add <code class="text-xs bg-background px-1 py-0.5 rounded">Class="hidden md:flex"</code> to your NavigationMenu to hide it on mobile.
            </p>
        </div>

        <CodeBlock Source="Components/NavigationMenu/responsive.txt" />
    </div>

    <!-- Basic Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Example</h2>
            <p class="text-sm text-muted-foreground">
                A navigation menu with dropdown items (desktop-only, no responsive behavior).
            </p>
        </div>
        <div class="border rounded-lg p-4">
            <BbNavigationMenu>
                <BbNavigationMenuList>
                    <BbNavigationMenuItem Value="getting-started">
                        <BbNavigationMenuTrigger>Getting started</BbNavigationMenuTrigger>
                        <BbNavigationMenuContent>
                            <div class="grid gap-3 p-4 w-[400px]">
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Introduction</a>
                                    <p class="text-sm text-muted-foreground">
                                        Re-usable components built using Blazor and Tailwind CSS.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Installation</a>
                                    <p class="text-sm text-muted-foreground">
                                        How to install dependencies and structure your app.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Typography</a>
                                    <p class="text-sm text-muted-foreground">
                                        Styles for headings, paragraphs, lists, and more.
                                    </p>
                                </div>
                            </div>
                        </BbNavigationMenuContent>
                    </BbNavigationMenuItem>

                    <BbNavigationMenuItem Value="components">
                        <BbNavigationMenuTrigger>Components</BbNavigationMenuTrigger>
                        <BbNavigationMenuContent>
                            <div class="grid gap-3 p-4 w-[500px] md:grid-cols-2">
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/alert" class="block font-medium mb-1">Alert</a>
                                    <p class="text-sm text-muted-foreground">
                                        Displays important messages to users.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/button" class="block font-medium mb-1">Button</a>
                                    <p class="text-sm text-muted-foreground">
                                        Interactive buttons with multiple variants.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/dialog" class="block font-medium mb-1">Dialog</a>
                                    <p class="text-sm text-muted-foreground">
                                        Modal dialogs for user interactions.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/toast" class="block font-medium mb-1">Toast</a>
                                    <p class="text-sm text-muted-foreground">
                                        Temporary notifications for users.
                                    </p>
                                </div>
                            </div>
                        </BbNavigationMenuContent>
                    </BbNavigationMenuItem>

                    <BbNavigationMenuItem>
                        <BbNavigationMenuLink Href="/components">Documentation</BbNavigationMenuLink>
                    </BbNavigationMenuItem>
                </BbNavigationMenuList>
            </BbNavigationMenu>
        </div>

        <CodeBlock Source="Components/NavigationMenu/basic.txt" />
    </div>

    <!-- Simple Links -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Simple Links</h2>
            <p class="text-sm text-muted-foreground">
                Navigation menu with only link items (no dropdowns).
            </p>
        </div>
        <div class="border rounded-lg p-4">
            <BbNavigationMenu>
                <BbNavigationMenuList>
                    <BbNavigationMenuItem>
                        <BbNavigationMenuLink Href="/">Home</BbNavigationMenuLink>
                    </BbNavigationMenuItem>
                    <BbNavigationMenuItem>
                        <BbNavigationMenuLink Href="/components">Components</BbNavigationMenuLink>
                    </BbNavigationMenuItem>
                    <BbNavigationMenuItem>
                        <BbNavigationMenuLink Href="/primitives">Primitives</BbNavigationMenuLink>
                    </BbNavigationMenuItem>
                    <BbNavigationMenuItem>
                        <BbNavigationMenuLink Href="/icons">Icons</BbNavigationMenuLink>
                    </BbNavigationMenuItem>
                </BbNavigationMenuList>
            </BbNavigationMenu>
        </div>

        <CodeBlock Source="Components/NavigationMenu/simple-links.txt" />
    </div>

    <!-- Keyboard Navigation -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Keyboard Navigation</h2>
            <p class="text-sm text-muted-foreground">
                Enable keyboard navigation with <code class="text-xs bg-muted px-1 py-0.5 rounded">EnableKeyboardNavigation="true"</code>.
            </p>
        </div>
        <div class="border rounded-lg p-4">
            <BbNavigationMenu EnableKeyboardNavigation="true">
                <BbNavigationMenuList>
                    <BbNavigationMenuItem Value="products">
                        <BbNavigationMenuTrigger>Products</BbNavigationMenuTrigger>
                        <BbNavigationMenuContent>
                            <div class="grid gap-3 p-4 w-[400px]">
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Analytics</a>
                                    <p class="text-sm text-muted-foreground">
                                        Track and analyze your data in real-time.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Automation</a>
                                    <p class="text-sm text-muted-foreground">
                                        Automate repetitive tasks with workflows.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Integration</a>
                                    <p class="text-sm text-muted-foreground">
                                        Connect with your favorite tools.
                                    </p>
                                </div>
                            </div>
                        </BbNavigationMenuContent>
                    </BbNavigationMenuItem>

                    <BbNavigationMenuItem Value="resources">
                        <BbNavigationMenuTrigger>Resources</BbNavigationMenuTrigger>
                        <BbNavigationMenuContent>
                            <div class="grid gap-3 p-4 w-[300px]">
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Documentation</a>
                                    <p class="text-sm text-muted-foreground">
                                        Guides and API references.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Blog</a>
                                    <p class="text-sm text-muted-foreground">
                                        Latest news and updates.
                                    </p>
                                </div>
                            </div>
                        </BbNavigationMenuContent>
                    </BbNavigationMenuItem>

                    <BbNavigationMenuItem>
                        <BbNavigationMenuLink Href="#">Pricing</BbNavigationMenuLink>
                    </BbNavigationMenuItem>
                </BbNavigationMenuList>
            </BbNavigationMenu>
        </div>

        <CodeBlock Source="Components/NavigationMenu/keyboard-navigation.txt" />
    </div>

    <!-- Accessibility -->
    <AccessibilityList>
        <AriaAttributes>
            <AccessibilityItem>Uses semantic nav element as the root container</AccessibilityItem>
            <AccessibilityItem>Triggers include aria-haspopup="menu" and aria-expanded for screen readers</AccessibilityItem>
            <AccessibilityItem>Dropdown content uses role="menu" for proper menu semantics</AccessibilityItem>
            <AccessibilityItem>Links use role="menuitem" with tabindex for focus management</AccessibilityItem>
            <AccessibilityItem>Active link state indicated via NavLink active class matching</AccessibilityItem>
        </AriaAttributes>
        <KeyboardNavigation>
            <KeyboardShortcutItem Description="Navigate between triggers">
                <BbKbd>ArrowLeft</BbKbd> / <BbKbd>ArrowRight</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Open dropdown and focus first item">
                <BbKbd>ArrowDown</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Toggle dropdown open/closed">
                <BbKbd>Enter</BbKbd> / <BbKbd>Space</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Navigate items within dropdown">
                <BbKbd>ArrowUp</BbKbd> / <BbKbd>ArrowDown</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Jump to first/last item in dropdown">
                <BbKbd>Home</BbKbd> / <BbKbd>End</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Close dropdown, return focus to trigger">
                <BbKbd>Escape</BbKbd>
            </KeyboardShortcutItem>
        </KeyboardNavigation>
    </AccessibilityList>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>

        <div class="space-y-4">
            <ApiReference ComponentName="NavigationMenu">
                <ApiParameter Name="EnableKeyboardNavigation" Type="bool" Default="false">
                    Enables keyboard navigation within dropdown menus. When true, users can navigate items with arrow keys, Home/End, and Escape.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the navigation menu.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The content to render inside the navigation menu. Typically contains NavigationMenuList.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="NavigationMenuList">
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the list.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The navigation menu items.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="NavigationMenuItem">
                <ApiParameter Name="Value" Type="string?">
                    Unique identifier for the menu item. Required for dropdown functionality.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the item.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The content of the menu item (trigger, content, or link).
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="NavigationMenuTrigger">
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the trigger button.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The content of the trigger button.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="NavigationMenuContent">
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the dropdown content panel.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The content to render in the dropdown.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="NavigationMenuLink">
                <ApiParameter Name="Href" Type="string?">
                    The URL the link navigates to.
                </ApiParameter>
                <ApiParameter Name="Match" Type="NavLinkMatch" Default="Prefix">
                    How to match the URL for active state.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the link.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The content of the link.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="NavigationMenuIndicator">
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the indicator.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="NavigationMenuViewport">
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the outer container.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The content to render inside the viewport.
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>

