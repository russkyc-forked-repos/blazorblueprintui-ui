@page "/components/avatar"
<PageTitle>Avatar Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
        <h1 class="text-4xl font-bold tracking-tight">Avatar Component</h1>
        <p class="text-xl text-muted-foreground">
            An image element with a fallback for representing a user or entity.
        </p>
        </div>
    </div>

    <div class="space-y-6">
    </div>

    <!-- Basic Usage -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Usage</h2>
            <p class="text-sm text-muted-foreground">
                Display a user avatar with automatic fallback to initials.
            </p>
        </div>
        <div class="flex gap-4">
            <BbAvatar>
                <BbAvatarImage Source="Components/_content/BlazorBlueprint.Demo.Shared/images/mathew-icon.png" Alt="Mathew" />
                <BbAvatarFallback>SH</BbAvatarFallback>
            </BbAvatar>

            <BbAvatar>
                <BbAvatarImage Source="Components/https://unavailable-image.jpg" Alt="User" />
                <BbAvatarFallback>JD</BbAvatarFallback>
            </BbAvatar>
        </div>

        <CodeBlock Source="Components/Avatar/basic.txt" />
    </div>

    <!-- Size Variants -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Size Variants</h2>
            <p class="text-sm text-muted-foreground">
                Avatars come in four different sizes.
            </p>
        </div>
        <div class="flex items-center gap-6">
            <div class="flex flex-col items-center gap-2">
                <BbAvatar Size="AvatarSize.Small">
                    <BbAvatarFallback>XS</BbAvatarFallback>
                </BbAvatar>
                <span class="text-xs text-muted-foreground">Small</span>
            </div>

            <div class="flex flex-col items-center gap-2">
                <BbAvatar Size="AvatarSize.Default">
                    <BbAvatarFallback>MD</BbAvatarFallback>
                </BbAvatar>
                <span class="text-xs text-muted-foreground">Default</span>
            </div>

            <div class="flex flex-col items-center gap-2">
                <BbAvatar Size="AvatarSize.Large">
                    <BbAvatarFallback>LG</BbAvatarFallback>
                </BbAvatar>
                <span class="text-xs text-muted-foreground">Large</span>
            </div>

            <div class="flex flex-col items-center gap-2">
                <BbAvatar Size="AvatarSize.ExtraLarge">
                    <BbAvatarFallback>XL</BbAvatarFallback>
                </BbAvatar>
                <span class="text-xs text-muted-foreground">Extra Large</span>
            </div>
        </div>

        <CodeBlock Source="Components/Avatar/sizes.txt" />
    </div>

    <!-- With Images -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Images</h2>
            <p class="text-sm text-muted-foreground">
                Display actual user profile images with fallback support.
            </p>
        </div>
        <div class="flex gap-4">
            <BbAvatar Size="AvatarSize.Large">
                <BbAvatarImage Source="Components/https://github.com/vercel.png" Alt="Vercel" />
                <BbAvatarFallback>VC</BbAvatarFallback>
            </BbAvatar>

            <BbAvatar Size="AvatarSize.Large">
                <BbAvatarImage Source="Components/https://github.com/microsoft.png" Alt="Microsoft" />
                <BbAvatarFallback>MS</BbAvatarFallback>
            </BbAvatar>

            <BbAvatar Size="AvatarSize.Large">
                <BbAvatarImage Source="Components/https://github.com/google.png" Alt="Google" />
                <BbAvatarFallback>GG</BbAvatarFallback>
            </BbAvatar>
        </div>

        <CodeBlock Source="Components/Avatar/with-images.txt" />
    </div>

    <!-- With Icons -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Icons</h2>
            <p class="text-sm text-muted-foreground">
                Use icons as fallback content for generic user representations.
            </p>
        </div>
        <div class="flex gap-4">
            <BbAvatar>
                <BbAvatarFallback>
                    <LucideIcon Name="user" Size="20" />
                </BbAvatarFallback>
            </BbAvatar>

            <BbAvatar Size="AvatarSize.Large">
                <BbAvatarFallback>
                    <LucideIcon Name="circle-user" Size="24" />
                </BbAvatarFallback>
            </BbAvatar>

            <BbAvatar Size="AvatarSize.ExtraLarge">
                <BbAvatarFallback>
                    <LucideIcon Name="users" Size="32" />
                </BbAvatarFallback>
            </BbAvatar>
        </div>

        <CodeBlock Source="Components/Avatar/with-icons.txt" />
    </div>

    <!-- User List Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">User List</h2>
            <p class="text-sm text-muted-foreground">
                Common pattern for displaying a list of users or team members.
            </p>
        </div>
        <div class="border rounded-lg divide-y">
            <div class="flex items-center gap-4 p-4 hover:bg-accent transition-colors">
                <BbAvatar>
                    <BbAvatarFallback>JD</BbAvatarFallback>
                </BbAvatar>
                <div class="flex-1">
                    <p class="font-medium">John Doe</p>
                    <p class="text-sm text-muted-foreground">john.doe@example.com</p>
                </div>
            </div>

            <div class="flex items-center gap-4 p-4 hover:bg-accent transition-colors">
                <BbAvatar>
                    <BbAvatarFallback>AS</BbAvatarFallback>
                </BbAvatar>
                <div class="flex-1">
                    <p class="font-medium">Alice Smith</p>
                    <p class="text-sm text-muted-foreground">alice.smith@example.com</p>
                </div>
            </div>

            <div class="flex items-center gap-4 p-4 hover:bg-accent transition-colors">
                <BbAvatar>
                    <BbAvatarFallback>BJ</BbAvatarFallback>
                </BbAvatar>
                <div class="flex-1">
                    <p class="font-medium">Bob Johnson</p>
                    <p class="text-sm text-muted-foreground">bob.johnson@example.com</p>
                </div>
            </div>
        </div>

        <CodeBlock Source="Components/Avatar/user-list.txt" />
    </div>

    <!-- Avatar Group -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Avatar Group</h2>
            <p class="text-sm text-muted-foreground">
                Use <code class="text-xs bg-muted px-1 py-0.5 rounded">AvatarGroup</code> to stack avatars with overlapping layout and automatic ring styling.
            </p>
        </div>
        <BbAvatarGroup>
            <BbAvatar>
                <BbAvatarFallback>AB</BbAvatarFallback>
            </BbAvatar>
            <BbAvatar>
                <BbAvatarFallback>CD</BbAvatarFallback>
            </BbAvatar>
            <BbAvatar>
                <BbAvatarFallback>EF</BbAvatarFallback>
            </BbAvatar>
            <BbAvatar>
                <BbAvatarFallback>GH</BbAvatarFallback>
            </BbAvatar>
            <BbAvatar>
                <BbAvatarFallback Class="bg-primary text-primary-foreground">+5</BbAvatarFallback>
            </BbAvatar>
        </BbAvatarGroup>
        <BbAvatarGroup>
            <BbAvatar Size="AvatarSize.Large">
                <BbAvatarImage Source="Components/https://github.com/vercel.png" Alt="Vercel" />
                <BbAvatarFallback>VC</BbAvatarFallback>
            </BbAvatar>
            <BbAvatar Size="AvatarSize.Large">
                <BbAvatarImage Source="Components/https://github.com/microsoft.png" Alt="Microsoft" />
                <BbAvatarFallback>MS</BbAvatarFallback>
            </BbAvatar>
            <BbAvatar Size="AvatarSize.Large">
                <BbAvatarImage Source="Components/https://github.com/google.png" Alt="Google" />
                <BbAvatarFallback>GG</BbAvatarFallback>
            </BbAvatar>
        </BbAvatarGroup>

        <CodeBlock Source="Components/Avatar/group.txt" />
    </div>

    <!-- Custom Styles -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Custom Styles</h2>
            <p class="text-sm text-muted-foreground">
                Customize avatar appearance with additional CSS classes.
            </p>
        </div>
        <div class="flex gap-4">
            <BbAvatar Size="AvatarSize.Large">
                <BbAvatarFallback Class="bg-gradient-to-br from-purple-500 to-pink-500 text-white">
                    AB
                </BbAvatarFallback>
            </BbAvatar>

            <BbAvatar Size="AvatarSize.Large">
                <BbAvatarFallback Class="bg-gradient-to-br from-blue-500 to-cyan-500 text-white">
                    CD
                </BbAvatarFallback>
            </BbAvatar>

            <BbAvatar Size="AvatarSize.Large">
                <BbAvatarFallback Class="bg-gradient-to-br from-green-500 to-emerald-500 text-white">
                    EF
                </BbAvatarFallback>
            </BbAvatar>

            <BbAvatar Size="AvatarSize.Large">
                <BbAvatarFallback Class="bg-gradient-to-br from-orange-500 to-red-500 text-white">
                    GH
                </BbAvatarFallback>
            </BbAvatar>
        </div>

        <CodeBlock Source="Components/Avatar/custom-styles.txt" />
    </div>

    <!-- Dot Indicator -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Dot Indicator</h2>
            <p class="text-sm text-muted-foreground">
                Use <code class="text-xs bg-muted px-1 py-0.5 rounded">ShowDot</code> and <code class="text-xs bg-muted px-1 py-0.5 rounded">DotClass</code> to add a colored dot indicator.
            </p>
        </div>
        <div class="flex gap-6">
            <BbAvatar Size="AvatarSize.Large" ShowDot DotClass="bg-green-500">
                <BbAvatarFallback>JD</BbAvatarFallback>
            </BbAvatar>

            <BbAvatar Size="AvatarSize.Large" ShowDot DotClass="bg-yellow-500">
                <BbAvatarFallback>AS</BbAvatarFallback>
            </BbAvatar>

            <BbAvatar Size="AvatarSize.Large" ShowDot DotClass="bg-red-500">
                <BbAvatarFallback>BJ</BbAvatarFallback>
            </BbAvatar>

            <BbAvatar Size="AvatarSize.Large" ShowDot DotClass="bg-gray-400">
                <BbAvatarFallback>MK</BbAvatarFallback>
            </BbAvatar>
        </div>
        <div class="flex items-center gap-6">
            <BbAvatar Size="AvatarSize.Small" ShowDot DotClass="bg-green-500">
                <BbAvatarFallback>SM</BbAvatarFallback>
            </BbAvatar>
            <BbAvatar ShowDot DotClass="bg-green-500">
                <BbAvatarFallback>MD</BbAvatarFallback>
            </BbAvatar>
            <BbAvatar Size="AvatarSize.Large" ShowDot DotClass="bg-green-500">
                <BbAvatarFallback>LG</BbAvatarFallback>
            </BbAvatar>
            <BbAvatar Size="AvatarSize.ExtraLarge" ShowDot DotClass="bg-green-500">
                <BbAvatarFallback>XL</BbAvatarFallback>
            </BbAvatar>
        </div>

        <CodeBlock Source="Components/Avatar/dot-indicator.txt" />
    </div>

    <!-- Accessibility -->
    <AccessibilityList>
        <AriaAttributes>
            <AccessibilityItem>
                Always provide descriptive alt text for AvatarImage that identifies the person or entity.
            </AccessibilityItem>
            <AccessibilityItem>
                Use meaningful initials or icons that help identify the user when images fail.
            </AccessibilityItem>
            <AccessibilityItem>
                Avatars are purely presentational. If clickable, wrap in a button with proper ARIA label.
            </AccessibilityItem>
            <AccessibilityItem>
                If using status dots, consider adding aria-label to convey state to screen readers.
            </AccessibilityItem>
        </AriaAttributes>
    </AccessibilityList>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>

        <div class="space-y-4">
            <ApiReference ComponentName="Avatar">
                <ApiParameter Name="Size" Type="AvatarSize" Default="AvatarSize.Default">
                    Controls the dimensions of the avatar. Options: Small (32px), Default (40px), Large (48px), ExtraLarge (64px).
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes for the avatar container.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="AvatarImage">
                <ApiParameter Name="Source" Type="string?">
                    URL of the image to display. If loading fails, AvatarFallback will be shown.
                </ApiParameter>
                <ApiParameter Name="Alt" Type="string?">
                    Alternative text for the image (required for accessibility).
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes for the image element.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="AvatarFallback">
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes for the fallback container. Useful for custom background colors.
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>
