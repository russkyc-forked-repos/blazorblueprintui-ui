@page "/components/slider"
<PageTitle>Slider Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Slider Component</h1>
            <p class="text-xl text-muted-foreground">
                An input where the user selects a value from within a given range.
            </p>
        </div>
    </div>

    <!-- Basic Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Example</h2>
            <p class="text-sm text-muted-foreground">
                A simple slider with default settings.
            </p>
        </div>
        <div class="w-[60%]">
            <BbSlider @bind-Value="_basicValue" />
        </div>
        <p class="text-sm text-muted-foreground">Value: @_basicValue</p>
        <CodeBlock Source="Components/Slider/basic.txt" />
    </div>

    <!-- With Default Value -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Default Value</h2>
            <p class="text-sm text-muted-foreground">
                Slider with a preset default value.
            </p>
        </div>
        <div class="w-[60%]">
            <BbSlider @bind-Value="_presetValue" DefaultValue="50" />
        </div>
        <p class="text-sm text-muted-foreground">Value: @_presetValue</p>
        <CodeBlock Source="Components/Slider/default-value.txt" />
    </div>

    <!-- Custom Range -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Custom Range</h2>
            <p class="text-sm text-muted-foreground">
                Slider with custom min and max values.
            </p>
        </div>
        <div class="w-[60%]">
            <BbSlider @bind-Value="_rangeValue" Min="0" Max="10" Step="1" />
        </div>
        <p class="text-sm text-muted-foreground">Value: @_rangeValue (0-10)</p>
        <CodeBlock Source="Components/Slider/custom-range.txt" />
    </div>

    <!-- Step Size -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Step Size</h2>
            <p class="text-sm text-muted-foreground">
                Slider with custom step increments.
            </p>
        </div>
        <div class="w-[60%]">
            <BbSlider @bind-Value="_stepValue" Step="10" />
        </div>
        <p class="text-sm text-muted-foreground">Value: @_stepValue (step: 10)</p>
        <CodeBlock Source="Components/Slider/step-size.txt" />
    </div>

    <!-- Disabled -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Disabled</h2>
            <p class="text-sm text-muted-foreground">
                A disabled slider.
            </p>
        </div>
        <div class="w-[60%]">
            <BbSlider Value="50" Disabled="true" />
        </div>
        <CodeBlock Source="Components/Slider/disabled.txt" />
    </div>

    <!-- Custom Track & Thumb Styling -->
    <div class="space-y-4">
        <div class="space-y-2">
            <div class="flex items-center gap-2">
                <h2 class="text-2xl font-semibold">Custom Track &amp; Thumb Styling</h2>
                <span class="inline-flex items-center rounded-full bg-primary/10 px-2 py-0.5 text-xs font-medium text-primary ring-1 ring-inset ring-primary/20">v3</span>
            </div>
            <p class="text-sm text-muted-foreground">
                Use <code class="text-xs bg-muted px-1 py-0.5 rounded">TrackClass</code> and <code class="text-xs bg-muted px-1 py-0.5 rounded">ThumbClass</code> to customize individual slider parts without CSS hacks.
            </p>
        </div>
        <div class="space-y-6 w-[60%]">
            <div class="space-y-2">
                <p class="text-sm text-muted-foreground">Green track and thumb</p>
                <BbSlider @bind-Value="_customTrackValue" TrackClass="bg-green-200 dark:bg-green-900" ThumbClass="border-green-500" />
            </div>
            <div class="space-y-2">
                <p class="text-sm text-muted-foreground">Blue track, larger thumb</p>
                <BbSlider @bind-Value="_customThumbValue" TrackClass="bg-blue-200 dark:bg-blue-900" ThumbClass="border-blue-500 h-6 w-6" />
            </div>
        </div>
        <CodeBlock Source="Components/Slider/custom-track-thumb.txt" />
    </div>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>

        <div class="space-y-4">
            <ApiReference ComponentName="Slider">
                <ApiParameter Name="Value" Type="double">
                    Current value
                </ApiParameter>
                <ApiParameter Name="Min" Type="double" Default="0">
                    Minimum value.
                </ApiParameter>
                <ApiParameter Name="Max" Type="double" Default="100">
                    Maximum value.
                </ApiParameter>
                <ApiParameter Name="Step" Type="double" Default="1">
                    Step increment.
                </ApiParameter>
                <ApiParameter Name="Disabled" Type="bool">
                    Disables the slider
                </ApiParameter>
                <ApiParameter Name="TrackClass" Type="string?">
                    Additional CSS classes for the track
                </ApiParameter>
                <ApiParameter Name="ThumbClass" Type="string?">
                    Additional CSS classes for the thumb
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>

@code {
    private double _basicValue = 0;
    private double _presetValue = 50;
    private double _rangeValue = 5;
    private double _stepValue = 50;
    private double _customTrackValue = 40;
    private double _customThumbValue = 60;
}
