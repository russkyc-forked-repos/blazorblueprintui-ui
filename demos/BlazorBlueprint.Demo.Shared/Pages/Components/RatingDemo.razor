@page "/components/rating"
<PageTitle>Rating Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Rating Component</h1>
            <p class="text-xl text-muted-foreground">
                A customizable rating component with star, heart, or circle icons and half-rating support.
            </p>
        </div>
    </div>

    <!-- Basic Star Rating -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Star Rating</h2>
            <p class="text-sm text-muted-foreground">
                Click to rate, click the same star again to clear.
            </p>
        </div>
        <BbRating @bind-Value="_starValue" />
        <p class="text-sm text-muted-foreground">Rating: @_starValue / 5</p>
        <CodeBlock Source="Components/Rating/basic.txt" />
    </div>

    <!-- Heart Rating -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Heart Rating</h2>
            <p class="text-sm text-muted-foreground">
                Using heart icons instead of stars.
            </p>
        </div>
        <BbRating @bind-Value="_heartValue" Icon="RatingIcon.Heart" />
        <p class="text-sm text-muted-foreground">Rating: @_heartValue / 5</p>
        <CodeBlock Source="Components/Rating/heart.txt" />
    </div>

    <!-- Circle Rating -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Circle Rating</h2>
            <p class="text-sm text-muted-foreground">
                Using circle icons.
            </p>
        </div>
        <BbRating @bind-Value="_circleValue" Icon="RatingIcon.Circle" />
        <p class="text-sm text-muted-foreground">Rating: @_circleValue / 5</p>
        <CodeBlock Source="Components/Rating/circle.txt" />
    </div>

    <!-- Half Rating -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Half Rating Support</h2>
            <p class="text-sm text-muted-foreground">
                Allows half-star ratings for more precision. Use arrow keys for precise control.
            </p>
        </div>
        <BbRating @bind-Value="_halfValue" AllowHalf="true" />
        <p class="text-sm text-muted-foreground">Rating: @_halfValue / 5</p>
        <CodeBlock Source="Components/Rating/half.txt" />
    </div>

    <!-- Custom Max -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Custom Max (10 Stars)</h2>
            <p class="text-sm text-muted-foreground">
                Rating with 10 stars maximum.
            </p>
        </div>
        <BbRating @bind-Value="_maxValue" Max="10" Size="RatingSize.Small" />
        <p class="text-sm text-muted-foreground">Rating: @_maxValue / 10</p>
        <CodeBlock Source="Components/Rating/custom-max.txt" />
    </div>

    <!-- Sizes -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Sizes</h2>
            <p class="text-sm text-muted-foreground">
                Small, default, and large icon sizes.
            </p>
        </div>
        <div class="space-y-4">
            <div class="flex items-center gap-4">
                <span class="text-sm text-muted-foreground w-16">Small:</span>
                <BbRating @bind-Value="_sizeSmall" Size="RatingSize.Small" />
            </div>
            <div class="flex items-center gap-4">
                <span class="text-sm text-muted-foreground w-16">Default:</span>
                <BbRating @bind-Value="_sizeDefault" Size="RatingSize.Default" />
            </div>
            <div class="flex items-center gap-4">
                <span class="text-sm text-muted-foreground w-16">Large:</span>
                <BbRating @bind-Value="_sizeLarge" Size="RatingSize.Large" />
            </div>
        </div>
        <CodeBlock Source="Components/Rating/sizes.txt" />
    </div>

    <!-- Read-Only -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Read-Only</h2>
            <p class="text-sm text-muted-foreground">
                Display-only rating (cannot be changed).
            </p>
        </div>
        <div class="space-y-2">
            <div class="flex items-center gap-2">
                <BbRating Value="4" ReadOnly="true" />
                <span class="text-sm text-muted-foreground">4.0</span>
            </div>
            <div class="flex items-center gap-2">
                <BbRating Value="3.5" ReadOnly="true" AllowHalf="true" />
                <span class="text-sm text-muted-foreground">3.5</span>
            </div>
            <div class="flex items-center gap-2">
                <BbRating Value="2" ReadOnly="true" Icon="RatingIcon.Heart" />
                <span class="text-sm text-muted-foreground">2.0</span>
            </div>
        </div>
        <CodeBlock Source="Components/Rating/read-only.txt" />
    </div>

    <!-- No Clear -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Disable Clear</h2>
            <p class="text-sm text-muted-foreground">
                Cannot clear the rating once set (minimum 1 star).
            </p>
        </div>
        <BbRating @bind-Value="_noClearValue" AllowClear="false" />
        <p class="text-sm text-muted-foreground">Rating: @_noClearValue / 5</p>
        <CodeBlock Source="Components/Rating/no-clear.txt" />
    </div>

    <!-- Disabled -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Disabled</h2>
            <p class="text-sm text-muted-foreground">
                A disabled rating component.
            </p>
        </div>
        <BbRating Value="3" Disabled="true" />
        <CodeBlock Source="Components/Rating/disabled.txt" />
    </div>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>

        <div class="space-y-4">
            <ApiReference ComponentName="Rating">
                <ApiParameter Name="Value" Type="double">
                    Current rating value.
                </ApiParameter>
                <ApiParameter Name="Max" Type="int" Default="5">
                    Maximum rating.
                </ApiParameter>
                <ApiParameter Name="AllowHalf" Type="bool" Default="false">
                    Enable half ratings.
                </ApiParameter>
                <ApiParameter Name="AllowClear" Type="bool" Default="true">
                    Allow clearing by clicking same value.
                </ApiParameter>
                <ApiParameter Name="ReadOnly" Type="bool" Default="false">
                    Display-only mode.
                </ApiParameter>
                <ApiParameter Name="Disabled" Type="bool" Default="false">
                    Disables the rating.
                </ApiParameter>
                <ApiParameter Name="Icon" Type="RatingIcon" Default="Star">
                    Icon type (Star, Heart, Circle).
                </ApiParameter>
                <ApiParameter Name="Size" Type="RatingSize" Default="Default">
                    Icon size (Small, Default, Large).
                </ApiParameter>
                <ApiParameter Name="ActiveColor" Type="string?">
                    Custom color for filled icons.
                </ApiParameter>
                <ApiParameter Name="InactiveColor" Type="string?">
                    Custom color for empty icons.
                </ApiParameter>
                <ApiParameter Name="IconTemplate" Type="RenderFragment<RatingIconContext>?">
                    Custom icon template.
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>

@code {
    private double _starValue = 0;
    private double _heartValue = 0;
    private double _circleValue = 0;
    private double _halfValue = 0;
    private double _maxValue = 7;
    private double _sizeSmall = 3;
    private double _sizeDefault = 3;
    private double _sizeLarge = 3;
    private double _noClearValue = 1;
}
