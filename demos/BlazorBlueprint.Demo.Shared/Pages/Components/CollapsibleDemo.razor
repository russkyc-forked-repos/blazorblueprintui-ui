@page "/components/collapsible"
<PageTitle>Collapsible Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
        <h1 class="text-4xl font-bold tracking-tight">Collapsible Component</h1>
        <p class="text-xl text-muted-foreground">
            An interactive component which expands/collapses a panel.
        </p>
        </div>
    </div>

    <div class="space-y-6">
    </div>

    <!-- AsChild Pattern -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">AsChild Pattern</h2>
            <p class="text-sm text-muted-foreground">
                Use AsChild to compose triggers with your own styled Button components.
            </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
            <!-- Without AsChild -->
            <div class="space-y-3 p-4 border rounded-lg">
                <h3 class="text-lg font-medium">Without AsChild</h3>
                <p class="text-sm text-muted-foreground">
                    CollapsibleTrigger renders its own button with inline classes.
                </p>
                <BbCollapsible Class="border rounded-lg max-w-sm">
                    <div class="px-4 py-3">
                        <BbCollapsibleTrigger AsChild="false" Class="flex w-full h-9 items-center justify-between text-sm font-medium hover:bg-accent hover:text-accent-foreground rounded-md px-3 [&_svg]:transition-transform [&_svg]:duration-200 data-[state=open]:[&_svg]:rotate-180">
                            <span>Show more</span>
                            <LucideIcon Name="chevron-down" Size="16" />
                        </BbCollapsibleTrigger>
                    </div>
                    <BbCollapsibleContent Class="px-4 pb-4">
                        <p class="text-sm text-muted-foreground">Hidden content revealed!</p>
                    </BbCollapsibleContent>
                </BbCollapsible>
            </div>

            <!-- With AsChild -->
            <div class="space-y-3 p-4 border rounded-lg">
                <h3 class="text-lg font-medium">With AsChild</h3>
                <p class="text-sm text-muted-foreground">
                    Button receives trigger behavior via TriggerContext.
                </p>
                <BbCollapsible Class="border rounded-lg max-w-sm">
                    <div class="px-4 py-3">
                        <BbCollapsibleTrigger>
                            <BbButton Variant="ButtonVariant.Ghost" Size="ButtonSize.Small" Class="w-full justify-between">
                                <span>Toggle Section</span>
                                <LucideIcon Name="chevron-down" Size="16" />
                            </BbButton>
                        </BbCollapsibleTrigger>
                    </div>
                    <BbCollapsibleContent Class="px-4 pb-4">
                        <p class="text-sm text-muted-foreground">Content using Button with AsChild!</p>
                    </BbCollapsibleContent>
                </BbCollapsible>
            </div>
        </div>
        <CodeBlock Source="Components/Collapsible/as-child.txt" />
    </div>

    <!-- Basic Usage -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Usage</h2>
            <p class="text-sm text-muted-foreground">
                A simple collapsible with trigger and content.
            </p>
        </div>
        <div class="max-w-md">
            <BbCollapsible Class="border rounded-lg">
                <div class="px-4 py-3">
                    <BbCollapsibleTrigger AsChild="false" Class="flex w-full items-center justify-between rounded-md hover:bg-accent hover:text-accent-foreground [&_svg]:transition-transform [&_svg]:duration-200 data-[state=open]:[&_svg]:rotate-180">
                        <span>Can I use this in my project?</span>
                        <LucideIcon Name="chevron-down" Size="16" />
                    </BbCollapsibleTrigger>
                </div>
                <BbCollapsibleContent Class="px-4 pb-4">
                    <div class="text-sm text-muted-foreground">
                        Yes! This component is free to use in your projects.
                    </div>
                </BbCollapsibleContent>
            </BbCollapsible>
        </div>
        <CodeBlock Source="Components/Collapsible/basic.txt" />
    </div>

    <!-- Controlled Collapsible -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Controlled Mode</h2>
            <p class="text-sm text-muted-foreground">
                Control the open state programmatically.
            </p>
        </div>
        <div class="max-w-md space-y-4">
            <div class="flex gap-2">
                <BbButton Size="ButtonSize.Small" @onclick="@(() => isControlledOpen = true)">Open</BbButton>
                <BbButton Size="ButtonSize.Small" Variant="ButtonVariant.Outline" @onclick="@(() => isControlledOpen = false)">Close</BbButton>
                <BbButton Size="ButtonSize.Small" Variant="ButtonVariant.Secondary" @onclick="@(() => isControlledOpen = !isControlledOpen)">Toggle</BbButton>
            </div>
            <BbCollapsible Open="@isControlledOpen"
                         OpenChanged="@((bool open) => isControlledOpen = open)"
                         Class="border rounded-lg">
                <div class="px-4 py-3">
                    <BbCollapsibleTrigger AsChild="false" Class="flex w-full items-center justify-between rounded-md hover:bg-accent hover:text-accent-foreground">
                        <span>Controlled Content (@(isControlledOpen ? "Open" : "Closed"))</span>
                        <LucideIcon Name="@(isControlledOpen ? "chevron-up" : "chevron-down")" Size="16" />
                    </BbCollapsibleTrigger>
                </div>
                <BbCollapsibleContent Class="px-4 pb-4">
                    <div class="text-sm">
                        The parent component controls this collapsible's state.
                    </div>
                </BbCollapsibleContent>
            </BbCollapsible>
        </div>
        <CodeBlock Source="Components/Collapsible/controlled.txt" />
    </div>

    <!-- Disabled State -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Disabled State</h2>
            <p class="text-sm text-muted-foreground">
                Disable interaction with the collapsible.
            </p>
        </div>
        <div class="max-w-md">
            <BbCollapsible Disabled Class="border rounded-lg opacity-50">
                <div class="px-4 py-3">
                    <BbCollapsibleTrigger AsChild="false" Class="flex w-full items-center justify-between rounded-md hover:bg-accent hover:text-accent-foreground [&_svg]:transition-transform [&_svg]:duration-200 data-[state=open]:[&_svg]:rotate-180">
                        <span>Disabled Collapsible</span>
                        <LucideIcon Name="chevron-down" Size="16" />
                    </BbCollapsibleTrigger>
                </div>
                <BbCollapsibleContent Class="px-4 pb-4">
                    <div class="text-sm">
                        This content cannot be toggled.
                    </div>
                </BbCollapsibleContent>
            </BbCollapsible>
        </div>
        <CodeBlock Source="Components/Collapsible/disabled.txt" />
    </div>

    <!-- Accordion Style -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Accordion Style (Multiple Collapsibles)</h2>
            <p class="text-sm text-muted-foreground">
                Multiple collapsibles working independently.
            </p>
        </div>
        <div class="max-w-md space-y-2">
            @foreach (var item in faqItems)
            {
                <BbCollapsible Class="border rounded-lg">
                    <div class="px-4 py-3">
                        <BbCollapsibleTrigger AsChild="false" Class="flex w-full items-center justify-between text-left [&_svg]:transition-transform [&_svg]:duration-200 data-[state=open]:[&_svg]:rotate-180">
                            <span class="font-medium">@item.Question</span>
                            <LucideIcon Name="chevron-down" Size="16" />
                        </BbCollapsibleTrigger>
                    </div>
                    <BbCollapsibleContent Class="px-4 pb-4 border-t">
                        <div class="pt-4 text-sm text-muted-foreground">
                            @item.Answer
                        </div>
                    </BbCollapsibleContent>
                </BbCollapsible>
            }
        </div>
        <CodeBlock Source="Components/Collapsible/accordion.txt" />
    </div>

    <!-- With Icons and Badges -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Icons and Badges</h2>
            <p class="text-sm text-muted-foreground">
                Enhance collapsibles with visual indicators.
            </p>
        </div>
        <div class="max-w-md space-y-2">
            <BbCollapsible Class="border rounded-lg">
                <div class="px-4 py-3">
                    <BbCollapsibleTrigger AsChild="false" Class="flex w-full items-center justify-between [&>svg]:transition-transform [&>svg]:duration-200 data-[state=open]:[&>svg]:rotate-180">
                        <div class="flex items-center gap-2">
                            <LucideIcon Name="star" Size="16" />
                            <span class="font-medium">Premium Features</span>
                            <BbBadge Variant="BadgeVariant.Default" Class="text-[10px] px-1.5 py-0">New</BbBadge>
                        </div>
                        <LucideIcon Name="chevron-down" Size="16" />
                    </BbCollapsibleTrigger>
                </div>
                <BbCollapsibleContent Class="px-4 pb-4">
                    <div class="space-y-2 text-sm">
                        <div class="flex items-center gap-2">
                            <LucideIcon Name="check" Size="14" Class="text-green-500" />
                            <span>Advanced analytics</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <LucideIcon Name="check" Size="14" Class="text-green-500" />
                            <span>Priority support</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <LucideIcon Name="check" Size="14" Class="text-green-500" />
                            <span>Custom branding</span>
                        </div>
                    </div>
                </BbCollapsibleContent>
            </BbCollapsible>
        </div>
        <CodeBlock Source="Components/Collapsible/icons-badges.txt" />
    </div>

    <!-- Nested Collapsibles -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Nested Collapsibles</h2>
            <p class="text-sm text-muted-foreground">
                Collapsibles can contain other collapsibles for hierarchical content.
            </p>
        </div>
        <div class="max-w-md">
            <BbCollapsible Class="border rounded-lg">
                <div class="px-4 py-3">
                    <BbCollapsibleTrigger AsChild="false" Class="flex w-full items-center justify-between [&_svg]:transition-transform [&_svg]:duration-200 data-[state=open]:[&_svg]:rotate-180">
                        <span class="font-medium">Parent Section</span>
                        <LucideIcon Name="chevron-down" Size="16" />
                    </BbCollapsibleTrigger>
                </div>
                <BbCollapsibleContent Class="px-4 pb-4">
                    <div class="space-y-2">
                        <p class="text-sm text-muted-foreground mb-2">
                            This parent contains nested collapsibles.
                        </p>

                        <BbCollapsible Class="border rounded-md">
                            <div class="px-3 py-2 bg-muted/50">
                                <BbCollapsibleTrigger AsChild="false" Class="flex w-full items-center justify-between text-sm [&_svg]:transition-transform [&_svg]:duration-200 data-[state=open]:[&_svg]:rotate-180">
                                    <span>Child Section 1</span>
                                    <LucideIcon Name="chevron-down" Size="14" />
                                </BbCollapsibleTrigger>
                            </div>
                            <BbCollapsibleContent Class="px-3 py-2 text-sm text-muted-foreground">
                                Nested content for child section 1.
                            </BbCollapsibleContent>
                        </BbCollapsible>

                        <BbCollapsible Class="border rounded-md">
                            <div class="px-3 py-2 bg-muted/50">
                                <BbCollapsibleTrigger AsChild="false" Class="flex w-full items-center justify-between text-sm [&_svg]:transition-transform [&_svg]:duration-200 data-[state=open]:[&_svg]:rotate-180">
                                    <span>Child Section 2</span>
                                    <LucideIcon Name="chevron-down" Size="14" />
                                </BbCollapsibleTrigger>
                            </div>
                            <BbCollapsibleContent Class="px-3 py-2 text-sm text-muted-foreground">
                                Nested content for child section 2.
                            </BbCollapsibleContent>
                        </BbCollapsible>
                    </div>
                </BbCollapsibleContent>
            </BbCollapsible>
        </div>
        <CodeBlock Source="Components/Collapsible/nested.txt" />
    </div>

    <!-- With Animations -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Smooth Animations</h2>
            <p class="text-sm text-muted-foreground">
                Add CSS transitions for smooth expand/collapse effects.
            </p>
        </div>
        <div class="max-w-md">
            <BbCollapsible Class="border rounded-lg overflow-hidden">
                <div class="px-4 py-3">
                    <BbCollapsibleTrigger AsChild="false" Class="flex w-full items-center justify-between rounded-md hover:bg-accent hover:text-accent-foreground [&_svg]:transition-transform [&_svg]:duration-200 data-[state=open]:[&_svg]:rotate-180">
                        <span>Animated Content</span>
                        <LucideIcon Name="chevron-down" Size="16" />
                    </BbCollapsibleTrigger>
                </div>
                <BbCollapsibleContent Class="px-4 pb-4 transition-all duration-300 ease-in-out">
                    <div class="text-sm animate-in fade-in duration-500">
                        <p class="mb-2">This content animates smoothly when expanding and collapsing.</p>
                        <p class="text-muted-foreground">CSS transitions create a polished user experience.</p>
                    </div>
                </BbCollapsibleContent>
            </BbCollapsible>
        </div>
        <CodeBlock Source="Components/Collapsible/animations.txt" />
    </div>

    <!-- Accessibility Notes -->
    <AccessibilityList>
        <AriaAttributes>
            <AccessibilityItem>
                <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-expanded</code> reflects the current state
            </AccessibilityItem>
            <AccessibilityItem>
                Content uses region role and <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-hidden</code>
            </AccessibilityItem>
            <AccessibilityItem>
                Focus remains on trigger after expanding/collapsing
            </AccessibilityItem>
            <AccessibilityItem>
                Proper button elements for triggers
            </AccessibilityItem>
        </AriaAttributes>
        <KeyboardNavigation>
            <KeyboardShortcutItem Description="Activate trigger">
                <BbKbd>Space</BbKbd> or <BbKbd>Enter</BbKbd>
            </KeyboardShortcutItem>
        </KeyboardNavigation>
    </AccessibilityList>

    <!-- API Reference -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
        </div>
        <div class="border rounded-lg p-6 space-y-6">
            <!-- Collapsible -->
            <div>
                <h3 class="text-lg font-semibold mb-3">Collapsible</h3>
                <div class="space-y-3">
                    <div>
                        <p class="font-mono text-sm font-medium mb-1">Open</p>
                        <p class="text-sm text-muted-foreground">
                            Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">bool</code> |
                            Default: <code class="text-xs bg-muted px-1 py-0.5 rounded">false</code>
                        </p>
                        <p class="text-sm text-muted-foreground mt-1">
                            Controls whether the collapsible is expanded.
                        </p>
                    </div>
                    <BbSeparator />
                    <div>
                        <p class="font-mono text-sm font-medium mb-1">OpenChanged</p>
                        <p class="text-sm text-muted-foreground">
                            Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">EventCallback&lt;bool&gt;</code>
                        </p>
                        <p class="text-sm text-muted-foreground mt-1">
                            Callback invoked when the open state changes.
                        </p>
                    </div>
                    <BbSeparator />
                    <div>
                        <p class="font-mono text-sm font-medium mb-1">Disabled</p>
                        <p class="text-sm text-muted-foreground">
                            Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">bool</code> |
                            Default: <code class="text-xs bg-muted px-1 py-0.5 rounded">false</code>
                        </p>
                        <p class="text-sm text-muted-foreground mt-1">
                            Prevents toggling when true.
                        </p>
                    </div>
                </div>
            </div>

            <BbSeparator />

            <!-- CollapsibleTrigger -->
            <div>
                <h3 class="text-lg font-semibold mb-3">CollapsibleTrigger</h3>
                <div>
                    <p class="font-mono text-sm font-medium mb-1">Class</p>
                    <p class="text-sm text-muted-foreground">
                        Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string?</code>
                    </p>
                    <p class="text-sm text-muted-foreground mt-1">
                        Additional CSS classes for the trigger button.
                    </p>
                </div>
            </div>

            <BbSeparator />

            <!-- CollapsibleContent -->
            <div>
                <h3 class="text-lg font-semibold mb-3">CollapsibleContent</h3>
                <div>
                    <p class="font-mono text-sm font-medium mb-1">Class</p>
                    <p class="text-sm text-muted-foreground">
                        Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string?</code>
                    </p>
                    <p class="text-sm text-muted-foreground mt-1">
                        Additional CSS classes for the content container.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool isControlledOpen = false;

    private List<FaqItem> faqItems = new()
    {
        new FaqItem
        {
            Question = "What is a collapsible component?",
            Answer = "A collapsible is an interactive component that allows users to show or hide content by clicking a trigger element. It's commonly used for FAQs, accordion menus, and expandable sections."
        },
        new FaqItem
        {
            Question = "How is it different from an accordion?",
            Answer = "While both use similar patterns, an accordion typically allows only one section to be open at a time, whereas individual collapsibles can all be open simultaneously. Collapsibles are the building blocks for creating accordions."
        },
        new FaqItem
        {
            Question = "Can I nest collapsibles?",
            Answer = "Yes! Collapsibles can be nested to create hierarchical expandable content structures, perfect for navigation menus or multi-level FAQs."
        },
        new FaqItem
        {
            Question = "Does it include accessibility features?",
            Answer = "Yes. The component includes ARIA attributes (aria-expanded, aria-controls) and keyboard support (Space/Enter to toggle)."
        }
    };

    private class FaqItem
    {
        public string Question { get; set; } = string.Empty;
        public string Answer { get; set; } = string.Empty;
    }
}
