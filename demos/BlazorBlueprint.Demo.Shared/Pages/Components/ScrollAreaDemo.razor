@page "/components/scroll-area"
<PageTitle>Scroll Area Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Scroll Area Component</h1>
            <p class="text-xl text-muted-foreground">
                Augments native scroll functionality with custom styling.
            </p>
        </div>
    </div>

    <!-- Basic Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Example</h2>
            <p class="text-sm text-muted-foreground">
                A scrollable area with vertical scrolling.
            </p>
        </div>
        <BbScrollArea Height="200px" Class="w-[350px] rounded-md border p-4">
            <div class="space-y-4">
                <h4 class="text-sm font-medium leading-none">Tags</h4>
                @foreach (var tag in _tags)
                {
                    <div class="text-sm">@tag</div>
                    <BbSeparator />
                }
            </div>
        </BbScrollArea>
        <CodeBlock Source="Components/ScrollArea/basic.txt" />
    </div>

    <!-- Horizontal Scrolling -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Horizontal Scrolling</h2>
            <p class="text-sm text-muted-foreground">
                A scrollable area with horizontal scrolling.
            </p>
        </div>
        <BbScrollArea Orientation="ScrollAreaOrientation.Horizontal" Class="w-full whitespace-nowrap rounded-md border">
            <div class="flex w-max space-x-4 p-4">
                @for (int i = 1; i <= 10; i++)
                {
                    <div class="shrink-0">
                        <div class="overflow-hidden rounded-md">
                            <div class="h-[150px] w-[250px] bg-muted flex items-center justify-center">
                                <span class="text-2xl font-semibold">Image @i</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </BbScrollArea>
        <CodeBlock Source="Components/ScrollArea/horizontal.txt" />
    </div>

    <!-- Long Content -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Long Content</h2>
            <p class="text-sm text-muted-foreground">
                Scroll area with extensive content.
            </p>
        </div>
        <BbScrollArea MaxHeight="300px" Class="w-[350px] rounded-md border p-4">
            <div class="space-y-4">
                <h4 class="text-sm font-medium leading-none mb-4">Lorem Ipsum</h4>
                @for (int i = 0; i < 5; i++)
                {
                    <p class="text-sm text-muted-foreground">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                    </p>
                }
            </div>
        </BbScrollArea>
        <CodeBlock Source="Components/ScrollArea/long-content.txt" />
    </div>

    <!-- Fill Container -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Fill Container</h2>
            <p class="text-sm text-muted-foreground">
                Automatically fills remaining vertical space in a flex column parent.
                The scroll area excludes sibling elements like headers and footers.
            </p>
        </div>
        <div class="h-[400px] border rounded-md flex flex-col">
            <div class="flex h-12 items-center border-b px-4 shrink-0">
                <h4 class="text-sm font-medium">Header (excluded from scroll)</h4>
            </div>
            <BbScrollArea FillContainer="true" Class="px-4">
                <div class="space-y-4 py-4">
                    <h4 class="text-sm font-medium leading-none">Scrollable Content</h4>
                    @for (int i = 1; i <= 30; i++)
                    {
                        <div class="text-sm">Item @i</div>
                        <BbSeparator />
                    }
                </div>
            </BbScrollArea>
            <div class="flex h-12 items-center border-t px-4 shrink-0">
                <span class="text-sm text-muted-foreground">Footer (excluded from scroll)</span>
            </div>
        </div>
        <CodeBlock Source="Components/ScrollArea/fill-container.txt" />
    </div>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>

        <div class="space-y-4">
            <ApiReference ComponentName="ScrollArea">
                <ApiParameter Name="Orientation" Type="ScrollAreaOrientation" Default="Vertical">
                    The orientation of the scroll area. Options: Vertical (default), Horizontal, or Both.
                </ApiParameter>
                <ApiParameter Name="Type" Type="ScrollAreaType" Default="Auto">
                    Controls scrollbar visibility behavior. Options: Auto, Always, Hover, or Hidden.
                </ApiParameter>
                <ApiParameter Name="Height" Type="string?">
                    Fixed height applied as an inline style (e.g., "200px").
                </ApiParameter>
                <ApiParameter Name="MaxHeight" Type="string?">
                    Maximum height applied as an inline style (e.g., "300px").
                </ApiParameter>
                <ApiParameter Name="FillContainer" Type="bool" Default="false">
                    When true, automatically fills remaining vertical space in a flex column parent container,
                    excluding sibling elements. Takes precedence over Height and MaxHeight.
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>

@code {
    private readonly string[] _tags = new[]
    {
        "React", "Vue", "Angular", "Svelte", "Blazor",
        "Next.js", "Nuxt", "Gatsby", "Remix", "Astro",
        "TypeScript", "JavaScript", "C#", "Python", "Go"
    };
}
