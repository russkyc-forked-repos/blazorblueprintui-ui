@page "/components/badge"

<PageTitle>Badge Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
        <h1 class="text-4xl font-bold tracking-tight">Badge Component</h1>
        <p class="text-xl text-muted-foreground">
            Displays a badge or a component that looks like a badge.
        </p>
        </div>
    </div>

    <div class="space-y-6">
    </div>

    <!-- All Variants -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Variants</h2>
            <p class="text-sm text-muted-foreground">
                Four badge variants for different use cases.
            </p>
        </div>
        <div class="flex flex-wrap gap-4">
            <BbBadge Variant="BadgeVariant.Default">Default</BbBadge>
            <BbBadge Variant="BadgeVariant.Secondary">Secondary</BbBadge>
            <BbBadge Variant="BadgeVariant.Destructive">Destructive</BbBadge>
            <BbBadge Variant="BadgeVariant.Outline">Outline</BbBadge>
        </div>

        <CodeBlock Source="Components/Badge/variants.txt" />
    </div>

    <!-- Usage Examples -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Usage Examples</h2>
            <p class="text-sm text-muted-foreground">
                Common use cases for badges.
            </p>
        </div>
        <div class="space-y-6">
            <!-- Status Indicators -->
            <div class="space-y-3">
                <h3 class="text-lg font-medium">Status Indicators</h3>
                <div class="flex flex-wrap gap-3">
                    <div class="flex items-center gap-2">
                        <span class="text-sm">Active:</span>
                        <BbBadge Variant="BadgeVariant.Default">Active</BbBadge>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-sm">Pending:</span>
                        <BbBadge Variant="BadgeVariant.Secondary">Pending</BbBadge>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-sm">Error:</span>
                        <BbBadge Variant="BadgeVariant.Destructive">Error</BbBadge>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-sm">Draft:</span>
                        <BbBadge Variant="BadgeVariant.Outline">Draft</BbBadge>
                    </div>
                </div>
            </div>

            <!-- Notification Counts -->
            <div class="space-y-3">
                <h3 class="text-lg font-medium">Notification Counts</h3>
                <div class="flex flex-wrap gap-4 items-center">
                    <div class="flex items-center gap-2">
                        <span class="text-sm">Messages</span>
                        <BbBadge Variant="BadgeVariant.Default">3</BbBadge>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-sm">Unread</span>
                        <BbBadge Variant="BadgeVariant.Destructive">12</BbBadge>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-sm">Completed</span>
                        <BbBadge Variant="BadgeVariant.Secondary">24</BbBadge>
                    </div>
                </div>
            </div>

            <!-- Tags/Labels -->
            <div class="space-y-3">
                <h3 class="text-lg font-medium">Tags/Labels</h3>
                <div class="flex flex-wrap gap-2">
                    <BbBadge Variant="BadgeVariant.Outline">React</BbBadge>
                    <BbBadge Variant="BadgeVariant.Outline">TypeScript</BbBadge>
                    <BbBadge Variant="BadgeVariant.Outline">Tailwind CSS</BbBadge>
                    <BbBadge Variant="BadgeVariant.Outline">Blazor</BbBadge>
                    <BbBadge Variant="BadgeVariant.Outline">C#</BbBadge>
                </div>
            </div>

            <!-- Feature Flags -->
            <div class="space-y-3">
                <h3 class="text-lg font-medium">Feature Flags</h3>
                <div class="flex flex-wrap gap-4 items-center">
                    <div class="flex items-center gap-2">
                        <span class="text-sm">New Feature</span>
                        <BbBadge Variant="BadgeVariant.Default">NEW</BbBadge>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-sm">Beta</span>
                        <BbBadge Variant="BadgeVariant.Secondary">BETA</BbBadge>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-sm">Deprecated</span>
                        <BbBadge Variant="BadgeVariant.Destructive">DEPRECATED</BbBadge>
                    </div>
                </div>
            </div>
        </div>

        <CodeBlock Source="Components/Badge/usage.txt" />
    </div>

    <!-- In Lists/Cards -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">In Lists</h2>
            <p class="text-sm text-muted-foreground">
                Badges combined with other components.
            </p>
        </div>
        <div class="max-w-md border rounded-lg divide-y">
            <div class="p-4 flex items-center justify-between">
                <div class="space-y-1">
                    <h4 class="text-sm font-medium">Project Alpha</h4>
                    <p class="text-sm text-muted-foreground">Active development</p>
                </div>
                <BbBadge Variant="BadgeVariant.Default">In Progress</BbBadge>
            </div>
            <div class="p-4 flex items-center justify-between">
                <div class="space-y-1">
                    <h4 class="text-sm font-medium">Project Beta</h4>
                    <p class="text-sm text-muted-foreground">Under review</p>
                </div>
                <BbBadge Variant="BadgeVariant.Secondary">Review</BbBadge>
            </div>
            <div class="p-4 flex items-center justify-between">
                <div class="space-y-1">
                    <h4 class="text-sm font-medium">Project Gamma</h4>
                    <p class="text-sm text-muted-foreground">Deployment failed</p>
                </div>
                <BbBadge Variant="BadgeVariant.Destructive">Failed</BbBadge>
            </div>
            <div class="p-4 flex items-center justify-between">
                <div class="space-y-1">
                    <h4 class="text-sm font-medium">Project Delta</h4>
                    <p class="text-sm text-muted-foreground">Planning phase</p>
                </div>
                <BbBadge Variant="BadgeVariant.Outline">Draft</BbBadge>
            </div>
        </div>

        <CodeBlock Source="Components/Badge/in-lists.txt" />
    </div>

    <!-- Custom Styling -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Custom Styling</h2>
            <p class="text-sm text-muted-foreground">
                Override styles with the Class parameter.
            </p>
        </div>
        <div class="flex flex-wrap gap-4">
            <BbBadge Variant="BadgeVariant.Default" Class="text-lg px-4 py-1">Large Badge</BbBadge>
            <BbBadge Variant="BadgeVariant.Secondary" Class="rounded-sm">Square Corners</BbBadge>
            <BbBadge Variant="BadgeVariant.Outline" Class="border-2 border-blue-500 text-blue-500">Custom Color</BbBadge>
            <BbBadge Variant="BadgeVariant.Default" Class="bg-gradient-to-r from-purple-500 to-pink-500 border-0">Gradient</BbBadge>
        </div>

        <CodeBlock Source="Components/Badge/custom-styling.txt" />
    </div>

    <!-- Custom Variants -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Custom Variants</h2>
            <p class="text-sm text-muted-foreground">
                Create your own variants using the <code class="text-xs bg-muted px-1 py-0.5 rounded">Class</code> parameter. TailwindMerge ensures your classes override the built-in variant styles.
            </p>
        </div>
        <div class="flex flex-wrap gap-4">
            <BbBadge Class="border-transparent bg-green-600 text-white hover:bg-green-700">Success</BbBadge>
            <BbBadge Class="border-transparent bg-blue-600 text-white hover:bg-blue-700">Info</BbBadge>
            <BbBadge Class="border-transparent bg-amber-500 text-white hover:bg-amber-600">Warning</BbBadge>
            <BbBadge Class="border-transparent bg-gradient-to-r from-purple-500 to-pink-500 text-white hover:from-purple-600 hover:to-pink-600">Brand</BbBadge>
        </div>

        <CodeBlock Source="Components/Badge/custom-variants.txt" />
    </div>

    <!-- With Icons -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Icons</h2>
            <p class="text-sm text-muted-foreground">
                Badges can include icons or other content.
            </p>
        </div>
        <div class="flex flex-wrap gap-4">
            <BbBadge Variant="BadgeVariant.Default">
                <LucideIcon Name="check" Size="12" Class="mr-1" />
                Verified
            </BbBadge>
            <BbBadge Variant="BadgeVariant.Destructive">
                <LucideIcon Name="x" Size="12" Class="mr-1" />
                Closed
            </BbBadge>
            <BbBadge Variant="BadgeVariant.Secondary">
                <LucideIcon Name="star" Size="12" Class="mr-1" />
                Featured
            </BbBadge>
            <BbBadge Variant="BadgeVariant.Outline">
                <LucideIcon Name="heart" Size="12" Class="mr-1" />
                Favorite
            </BbBadge>
        </div>

        <CodeBlock Source="Components/Badge/with-icons.txt" />
    </div>

    <!-- Notification Dot -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Notification Dot</h2>
            <p class="text-sm text-muted-foreground">
                Add a small dot indicator to badges using <code class="text-xs bg-muted px-1 py-0.5 rounded">ShowDot</code>.
                Control the position with <code class="text-xs bg-muted px-1 py-0.5 rounded">DotPosition</code> and the color with <code class="text-xs bg-muted px-1 py-0.5 rounded">DotClass</code>.
            </p>
        </div>
        <div class="space-y-4">
            <div class="flex flex-wrap gap-6">
                <BbBadge Variant="BadgeVariant.Default" ShowDot>Default</BbBadge>
                <BbBadge Variant="BadgeVariant.Secondary" ShowDot>Secondary</BbBadge>
                <BbBadge Variant="BadgeVariant.Destructive" ShowDot DotClass="bg-destructive">Destructive</BbBadge>
                <BbBadge Variant="BadgeVariant.Outline" ShowDot>Outline</BbBadge>
            </div>
            <div class="flex flex-wrap gap-6">
                <BbBadge ShowDot DotPosition="BadgeDotPosition.TopRight">Top Right</BbBadge>
                <BbBadge ShowDot DotPosition="BadgeDotPosition.TopLeft">Top Left</BbBadge>
                <BbBadge ShowDot DotPosition="BadgeDotPosition.BottomRight">Bottom Right</BbBadge>
                <BbBadge ShowDot DotPosition="BadgeDotPosition.BottomLeft">Bottom Left</BbBadge>
            </div>
            <div class="flex flex-wrap gap-6">
                <BbBadge Variant="BadgeVariant.Outline" ShowDot DotClass="bg-green-500">Online</BbBadge>
                <BbBadge Variant="BadgeVariant.Outline" ShowDot DotClass="bg-yellow-500">Away</BbBadge>
                <BbBadge Variant="BadgeVariant.Outline" ShowDot DotClass="bg-red-500">Busy</BbBadge>
                <BbBadge Variant="BadgeVariant.Outline" ShowDot DotClass="bg-gray-400">Offline</BbBadge>
            </div>
        </div>

        <CodeBlock Source="Components/Badge/notification-dot.txt" />
    </div>

    <!-- Accessibility -->
    <AccessibilityList>
        <AriaAttributes>
            <AccessibilityItem>
                Keep text concise: Badges work best with 1-2 words or small numbers.
            </AccessibilityItem>
            <AccessibilityItem>
                Badge text should be self-explanatory and meaningful.
            </AccessibilityItem>
            <AccessibilityItem>
                Don't rely solely on color to convey meaning. Include text.
            </AccessibilityItem>
            <AccessibilityItem>
                Ensure the badge's meaning is clear from surrounding content.
            </AccessibilityItem>
        </AriaAttributes>
    </AccessibilityList>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>

        <div class="space-y-4">
            <ApiReference ComponentName="Badge">
                <ApiParameter Name="Variant" Type="BadgeVariant" Default="Default">
                    The visual style variant. Options: Default, Secondary, Destructive, Outline.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?">
                    Additional CSS classes to apply to the badge element.
                </ApiParameter>
                <ApiParameter Name="ChildContent" Type="RenderFragment?">
                    The content to display inside the badge (text, icons, numbers, etc.).
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>
