@page "/components/resizable"
<PageTitle>Resizable Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Resizable Component</h1>
            <p class="text-xl text-muted-foreground">
                Resizable panels with drag handles for adjustable layouts.
            </p>
        </div>
    </div>

    <!-- Basic Horizontal -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Horizontal Layout</h2>
            <p class="text-sm text-muted-foreground">
                Two panels side by side with a draggable handle.
            </p>
        </div>
        <div class="h-[200px] border rounded-lg overflow-hidden">
            <BbResizablePanelGroup Direction="ResizableDirection.Horizontal">
                <BbResizablePanel DefaultSize="50">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Panel One</span>
                    </div>
                </BbResizablePanel>
                <BbResizableHandle />
                <BbResizablePanel DefaultSize="50">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Panel Two</span>
                    </div>
                </BbResizablePanel>
            </BbResizablePanelGroup>
        </div>
        <CodeBlock Source="Components/Resizable/horizontal.txt" />
    </div>

    <!-- Vertical Layout -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Vertical Layout</h2>
            <p class="text-sm text-muted-foreground">
                Two panels stacked vertically.
            </p>
        </div>
        <div class="h-[300px] border rounded-lg overflow-hidden">
            <BbResizablePanelGroup Direction="ResizableDirection.Vertical">
                <BbResizablePanel DefaultSize="30">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Header</span>
                    </div>
                </BbResizablePanel>
                <BbResizableHandle />
                <BbResizablePanel DefaultSize="70">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Content</span>
                    </div>
                </BbResizablePanel>
            </BbResizablePanelGroup>
        </div>
        <CodeBlock Source="Components/Resizable/vertical.txt" />
    </div>

    <!-- Without Handle Icon -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Without Handle Icon</h2>
            <p class="text-sm text-muted-foreground">
                Clean divider without the grip handle icon.
            </p>
        </div>
        <div class="h-[200px] border rounded-lg overflow-hidden">
            <BbResizablePanelGroup Direction="ResizableDirection.Horizontal">
                <BbResizablePanel DefaultSize="50">
                    <div class="flex h-full items-center justify-center p-6 bg-muted/50">
                        <span class="font-semibold">Left</span>
                    </div>
                </BbResizablePanel>
                <BbResizableHandle WithHandle="false" />
                <BbResizablePanel DefaultSize="50">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Right</span>
                    </div>
                </BbResizablePanel>
            </BbResizablePanelGroup>
        </div>
        <CodeBlock Source="Components/Resizable/without-handle-icon.txt" />
    </div>

    <!-- Three Panels -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Three Panels</h2>
            <p class="text-sm text-muted-foreground">
                Multiple panels in a single group.
            </p>
        </div>
        <div class="h-[200px] border rounded-lg overflow-hidden">
            <BbResizablePanelGroup Direction="ResizableDirection.Horizontal">
                <BbResizablePanel DefaultSize="25">
                    <div class="flex h-full items-center justify-center p-6 bg-muted/30">
                        <span class="font-semibold">Sidebar</span>
                    </div>
                </BbResizablePanel>
                <BbResizableHandle />
                <BbResizablePanel DefaultSize="50">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Main Content</span>
                    </div>
                </BbResizablePanel>
                <BbResizableHandle />
                <BbResizablePanel DefaultSize="25">
                    <div class="flex h-full items-center justify-center p-6 bg-muted/30">
                        <span class="font-semibold">Details</span>
                    </div>
                </BbResizablePanel>
            </BbResizablePanelGroup>
        </div>
        <CodeBlock Source="Components/Resizable/three-panels.txt" />
    </div>

    <!-- Nested Layout -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Nested Layout</h2>
            <p class="text-sm text-muted-foreground">
                Complex layout with nested resizable panels.
            </p>
        </div>
        <div class="h-[400px] border rounded-lg overflow-hidden">
            <BbResizablePanelGroup Direction="ResizableDirection.Horizontal">
                <BbResizablePanel DefaultSize="30">
                    <div class="flex h-full items-center justify-center p-6 bg-muted/30">
                        <span class="font-semibold">Sidebar</span>
                    </div>
                </BbResizablePanel>
                <BbResizableHandle />
                <BbResizablePanel DefaultSize="70">
                    <BbResizablePanelGroup Direction="ResizableDirection.Vertical">
                        <BbResizablePanel DefaultSize="60">
                            <div class="flex h-full items-center justify-center p-6">
                                <span class="font-semibold">Main Content</span>
                            </div>
                        </BbResizablePanel>
                        <BbResizableHandle />
                        <BbResizablePanel DefaultSize="40">
                            <div class="flex h-full items-center justify-center p-6 bg-muted/20">
                                <span class="font-semibold">Terminal / Output</span>
                            </div>
                        </BbResizablePanel>
                    </BbResizablePanelGroup>
                </BbResizablePanel>
            </BbResizablePanelGroup>
        </div>
        <CodeBlock Source="Components/Resizable/nested.txt" />
    </div>

    <AccessibilityList>
        <AriaAttributes>
            <AccessibilityItem>Resize handles use <code>role="separator"</code> with <code>aria-orientation</code></AccessibilityItem>
            <AccessibilityItem><code>aria-valuenow</code>, <code>aria-valuemin</code>, and <code>aria-valuemax</code> reflect panel sizes</AccessibilityItem>
            <AccessibilityItem>Panels are properly labeled for assistive technologies</AccessibilityItem>
        </AriaAttributes>
        <KeyboardNavigation>
            <KeyboardShortcutItem Description="Focus resize handles">
                <BbKbd>Tab</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Resize panels">
                <BbKbd>Arrow Keys</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Resize panels by larger increment">
                <BbKbd>Page Up</BbKbd> / <BbKbd>Page Down</BbKbd>
            </KeyboardShortcutItem>
            <KeyboardShortcutItem Description="Collapse / expand panel">
                <BbKbd>Home</BbKbd> / <BbKbd>End</BbKbd>
            </KeyboardShortcutItem>
        </KeyboardNavigation>
    </AccessibilityList>

    <!-- API Reference -->
    <section class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
            <p class="text-muted-foreground">Component properties and parameters.</p>
        </div>

        <div class="space-y-4">
            <ApiReference ComponentName="ResizablePanelGroup">
                <ApiParameter Name="Direction" Type="ResizableDirection" Default="Horizontal">
                    The direction of the panels. Options: Horizontal, Vertical.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?" Default="null">
                    Additional CSS classes for the panel group container.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="ResizablePanel">
                <ApiParameter Name="DefaultSize" Type="double" Default="50">
                    The default size as a percentage (0-100).
                </ApiParameter>
                <ApiParameter Name="MinSize" Type="double" Default="10">
                    The minimum size as a percentage (0-100).
                </ApiParameter>
                <ApiParameter Name="MaxSize" Type="double" Default="100">
                    The maximum size as a percentage (0-100).
                </ApiParameter>
                <ApiParameter Name="Collapsible" Type="bool" Default="false">
                    Whether the panel can be collapsed.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?" Default="null">
                    Additional CSS classes for the panel.
                </ApiParameter>
            </ApiReference>

            <ApiReference ComponentName="ResizableHandle">
                <ApiParameter Name="WithHandle" Type="bool" Default="true">
                    Whether to show the grip handle icon.
                </ApiParameter>
                <ApiParameter Name="Class" Type="string?" Default="null">
                    Additional CSS classes for the handle.
                </ApiParameter>
            </ApiReference>
        </div>
    </section>
</div>
