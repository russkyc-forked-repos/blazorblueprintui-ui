@page "/charts/radial"
@using BlazorBlueprint.Icons.Lucide.Components
<PageTitle>Radial Chart - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-6xl">
    <div class="rounded-lg border border-yellow-500/50 bg-yellow-500/10 p-4 text-sm text-yellow-700 dark:text-yellow-400">
        This page is a <strong>work in progress</strong>. The radial chart components are under active development and may not render correctly yet.
    </div>
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Radial Chart</h1>
            <p class="text-xl text-muted-foreground">
                Display progress and percentages with circular gauges and radial bars.
            </p>
        </div>
    </div>

    <!-- Grid of chart variants -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <!-- Radial Chart -->
        <div>
            <div class="rounded-xl border bg-card text-card-foreground shadow-sm">
                <div class="flex flex-col space-y-1.5 p-6">
                    <h3 class="font-semibold leading-none tracking-tight">Radial Chart</h3>
                    <p class="text-sm text-muted-foreground">January - June 2024</p>
                </div>
                <div class="p-6 pt-0">
                    <BbRadialBarChart Data="@_browserData" Height="250px">
                        <BbChartTooltip />
                        <BbRadialBar DataKey="visitors" NameKey="browser" />
                    </BbRadialBarChart>
                </div>
                <div class="flex flex-col gap-2 p-6 pt-0">
                    <div class="flex gap-2 items-center font-medium leading-none">
                        Trending up by 5.2% this month <LucideIcon Name="trending-up" Size="16" />
                    </div>
                    <div class="text-sm text-muted-foreground leading-none">
                        Showing total visitors for the last 6 months
                    </div>
                </div>
            </div>
            <CodeBlock Source="Charts/RadialChart/default.txt" />
        </div>

        <!-- Label -->
        <div>
            <div class="rounded-xl border bg-card text-card-foreground shadow-sm">
                <div class="flex flex-col space-y-1.5 p-6">
                    <h3 class="font-semibold leading-none tracking-tight">Radial Chart - Label</h3>
                    <p class="text-sm text-muted-foreground">January - June 2024</p>
                </div>
                <div class="p-6 pt-0">
                    <BbRadialBarChart Data="@_browserData" Height="250px">
                        <BbChartTooltip />
                        <BbRadialBar DataKey="visitors" NameKey="browser" ShowLabels="true" />
                    </BbRadialBarChart>
                </div>
                <div class="flex flex-col gap-2 p-6 pt-0">
                    <div class="flex gap-2 items-center font-medium leading-none">
                        Trending up by 5.2% this month <LucideIcon Name="trending-up" Size="16" />
                    </div>
                    <div class="text-sm text-muted-foreground leading-none">
                        Showing total visitors for the last 6 months
                    </div>
                </div>
            </div>
            <CodeBlock Source="Charts/RadialChart/label.txt" />
        </div>

        <!-- Grid -->
        <div>
            <div class="rounded-xl border bg-card text-card-foreground shadow-sm">
                <div class="flex flex-col space-y-1.5 p-6">
                    <h3 class="font-semibold leading-none tracking-tight">Radial Chart - Grid</h3>
                    <p class="text-sm text-muted-foreground">January - June 2024</p>
                </div>
                <div class="p-6 pt-0">
                    <BbRadialBarChart Data="@_browserData" Height="250px">
                        <BbChartTooltip />
                        <BbRadialBar DataKey="visitors" NameKey="browser" ShowBackground="true" />
                    </BbRadialBarChart>
                </div>
                <div class="flex flex-col gap-2 p-6 pt-0">
                    <div class="flex gap-2 items-center font-medium leading-none">
                        Trending up by 5.2% this month <LucideIcon Name="trending-up" Size="16" />
                    </div>
                    <div class="text-sm text-muted-foreground leading-none">
                        Showing total visitors for the last 6 months
                    </div>
                </div>
            </div>
            <CodeBlock Source="Charts/RadialChart/grid.txt" />
        </div>

        <!-- Text -->
        <div>
            <div class="rounded-xl border bg-card text-card-foreground shadow-sm">
                <div class="flex flex-col space-y-1.5 p-6">
                    <h3 class="font-semibold leading-none tracking-tight">Radial Chart - Text</h3>
                    <p class="text-sm text-muted-foreground">January - June 2024</p>
                </div>
                <div class="p-6 pt-0">
                    <BbRadialBarChart Data="@_safariData" Height="250px" InnerRadius="60%" OuterRadius="80%">
                        <BbChartTooltip />
                        <BbRadialBar DataKey="visitors" NameKey="browser" Color="var(--chart-2)">
                            <BbCenterLabel Value="200" Title="Visitors" />
                        </BbRadialBar>
                    </BbRadialBarChart>
                </div>
                <div class="flex flex-col gap-2 p-6 pt-0">
                    <div class="flex gap-2 items-center font-medium leading-none">
                        Trending up by 5.2% this month <LucideIcon Name="trending-up" Size="16" />
                    </div>
                    <div class="text-sm text-muted-foreground leading-none">
                        Showing total visitors for the last 6 months
                    </div>
                </div>
            </div>
            <CodeBlock Source="Charts/RadialChart/text.txt" />
        </div>

        <!-- Shape -->
        <div>
            <div class="rounded-xl border bg-card text-card-foreground shadow-sm">
                <div class="flex flex-col space-y-1.5 p-6">
                    <h3 class="font-semibold leading-none tracking-tight">Radial Chart - Shape</h3>
                    <p class="text-sm text-muted-foreground">January - June 2024</p>
                </div>
                <div class="p-6 pt-0">
                    <BbRadialBarChart Data="@_safariShapeData" Height="250px" InnerRadius="40%" OuterRadius="80%">
                        <BbChartTooltip />
                        <BbRadialBar DataKey="visitors" NameKey="browser" Color="var(--chart-2)" ShowBackground="true">
                            <BbCenterLabel Value="1,260" Title="Visitors" />
                        </BbRadialBar>
                    </BbRadialBarChart>
                </div>
                <div class="flex flex-col gap-2 p-6 pt-0">
                    <div class="flex gap-2 items-center font-medium leading-none">
                        Trending up by 5.2% this month <LucideIcon Name="trending-up" Size="16" />
                    </div>
                    <div class="text-sm text-muted-foreground leading-none">
                        Showing total visitors for the last 6 months
                    </div>
                </div>
            </div>
            <CodeBlock Source="Charts/RadialChart/shape.txt" />
        </div>

        <!-- Stacked -->
        <div>
            <div class="rounded-xl border bg-card text-card-foreground shadow-sm">
                <div class="flex flex-col space-y-1.5 p-6">
                    <h3 class="font-semibold leading-none tracking-tight">Radial Chart - Stacked</h3>
                    <p class="text-sm text-muted-foreground">January - June 2024</p>
                </div>
                <div class="p-6 pt-0">
                    <BbRadialBarChart Data="@_stackedData" Height="250px" InnerRadius="40%" OuterRadius="80%">
                        <BbChartTooltip />
                        <BbRadialBar DataKey="desktop" NameKey="month" Color="var(--chart-1)" Stacked="true" ShowBackground="true" />
                        <BbRadialBar DataKey="mobile" NameKey="month" Color="var(--chart-2)" Stacked="true">
                            <BbCenterLabel Value="1,830" Title="Visitors" />
                        </BbRadialBar>
                    </BbRadialBarChart>
                </div>
                <div class="flex flex-col gap-2 p-6 pt-0">
                    <div class="flex gap-2 items-center font-medium leading-none">
                        Trending up by 5.2% this month <LucideIcon Name="trending-up" Size="16" />
                    </div>
                    <div class="text-sm text-muted-foreground leading-none">
                        Showing total visitors for the last 6 months
                    </div>
                </div>
            </div>
            <CodeBlock Source="Charts/RadialChart/stacked.txt" />
        </div>
    </div>
</div>

@code {
    public class BrowserData
    {
        public string Browser { get; set; } = "";
        public int Visitors { get; set; }
    }

    public class MonthlyData
    {
        public string Month { get; set; } = "";
        public int Desktop { get; set; }
        public int Mobile { get; set; }
    }

    private readonly List<BrowserData> _browserData =
    [
        new() { Browser = "Chrome", Visitors = 275 },
        new() { Browser = "Safari", Visitors = 200 },
        new() { Browser = "Firefox", Visitors = 187 },
        new() { Browser = "Edge", Visitors = 173 },
        new() { Browser = "Other", Visitors = 90 }
    ];

    private readonly List<BrowserData> _safariData =
    [
        new() { Browser = "Safari", Visitors = 200 }
    ];

    private readonly List<BrowserData> _safariShapeData =
    [
        new() { Browser = "Safari", Visitors = 1260 }
    ];

    private readonly List<MonthlyData> _stackedData =
    [
        new() { Month = "January", Desktop = 1260, Mobile = 570 }
    ];
}
