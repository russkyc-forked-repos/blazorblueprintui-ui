@page "/charts/line"
@using BlazorBlueprint.Icons.Lucide.Components
<PageTitle>Line Chart - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-6xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Line Chart</h1>
            <p class="text-xl text-muted-foreground">
                Visualize trends and changes over time with connected data points.
            </p>
        </div>
    </div>

    <!-- Interactive Line Chart (full width hero) -->
    <div class="rounded-xl border bg-card text-card-foreground shadow-sm">
        <div class="flex items-start justify-between p-6">
            <div class="flex flex-col space-y-1.5">
                <h3 class="font-semibold leading-none tracking-tight">Line Chart - Interactive</h3>
                <p class="text-sm text-muted-foreground">Showing total visitors for the last 3 months</p>
            </div>
            <div class="flex">
                <div class="flex flex-col gap-1 border-l px-6 py-0.5">
                    <span class="text-xs text-muted-foreground">Desktop</span>
                    <span class="text-2xl font-bold leading-none">@_chartData.Sum(d => d.Desktop).ToString("N0")</span>
                </div>
                <div class="flex flex-col gap-1 border-l px-6 py-0.5">
                    <span class="text-xs text-muted-foreground">Mobile</span>
                    <span class="text-2xl font-bold leading-none">@_chartData.Sum(d => d.Mobile).ToString("N0")</span>
                </div>
            </div>
        </div>
        <div class="p-6 pt-0">
            <BbLineChart Data="@_chartData" Height="300px">
                <BbXAxis DataKey="date" />
                <BbYAxis />
                <BbChartTooltip />
                <BbLine DataKey="desktop" Name="Desktop" Color="var(--chart-1)" Curve="CurveType.Smooth" ShowDots="false" />
            </BbLineChart>
        </div>
    </div>
    <CodeBlock Source="Charts/LineChart/interactive.txt" />

    <!-- Grid of chart variants -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <!-- Default -->
        <div>
            <div class="rounded-xl border bg-card text-card-foreground shadow-sm">
                <div class="flex flex-col space-y-1.5 p-6">
                    <h3 class="font-semibold leading-none tracking-tight">Line Chart</h3>
                    <p class="text-sm text-muted-foreground">January - June 2024</p>
                </div>
                <div class="p-6 pt-0">
                    <BbLineChart Data="@_monthlyData" Height="200px">
                        <BbXAxis DataKey="month" />
                        <BbYAxis Show="false" />
                        <BbChartTooltip />
                        <BbLine DataKey="desktop" Name="Desktop" Color="var(--chart-1)" Curve="CurveType.Smooth" ShowDots="false" />
                        <BbLine DataKey="mobile" Name="Mobile" Color="var(--chart-2)" Curve="CurveType.Smooth" ShowDots="false" />
                    </BbLineChart>
                </div>
                <div class="flex flex-col gap-2 p-6 pt-0">
                    <div class="flex gap-2 items-center font-medium leading-none">
                        Trending up by 5.2% this month <LucideIcon Name="trending-up" Size="16" />
                    </div>
                    <div class="text-sm text-muted-foreground leading-none">
                        Showing total visitors for the last 6 months
                    </div>
                </div>
            </div>
            <CodeBlock Source="Charts/LineChart/default.txt" />
        </div>

        <!-- Linear -->
