    <!-- API Reference -->
    <div class="space-y-4">
        <h2 class="text-2xl font-semibold">API Reference</h2>
        <div class="border rounded-lg p-6 space-y-4">
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">RadarChart.IndicatorKey</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    The property name for category labels on the radar axes.
                </p>
            </div>
            <BbSeparator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">RadarChart.Shape</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string</code> (default: "polygon")
                </p>
                <p class="text-sm text-muted-foreground">
                    The radar grid shape. Use "polygon" for angular or "circle" for circular.
                </p>
            </div>
            <BbSeparator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">RadarChart.ShowAxisLines</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">bool</code> (default: true)
                </p>
                <p class="text-sm text-muted-foreground">
                    Whether to show the lines from center to each vertex.
                </p>
            </div>
            <BbSeparator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">RadarChart.ShowGridLines</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">bool</code> (default: true)
                </p>
                <p class="text-sm text-muted-foreground">
                    Whether to show the polygon/circle grid lines.
                </p>
            </div>
            <BbSeparator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">RadarChart.GridFill</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">bool</code> (default: false)
                </p>
                <p class="text-sm text-muted-foreground">
                    Whether to fill the split areas between grid lines with alternating colors.
                </p>
            </div>
            <BbSeparator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">RadarChart.MaxValue</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">double?</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    Maximum value for all radar axes. Applied to auto-generated indicators.
                </p>
            </div>
            <BbSeparator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">Radar.DataKey</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    The property name for the values to plot on the radar polygon.
                </p>
            </div>
            <BbSeparator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">Radar.ShowDots</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">bool</code> (default: true)
                </p>
                <p class="text-sm text-muted-foreground">
                    Whether to show dot markers at polygon vertices.
                </p>
            </div>
            <BbSeparator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">Radar.FillOpacity</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">double</code> (default: 0.25)
                </p>
                <p class="text-sm text-muted-foreground">
                    Opacity of the filled area (0.0 to 1.0). Set to 0 for lines only.
                </p>
            </div>
        </div>
