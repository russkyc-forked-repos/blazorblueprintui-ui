@page "/primitives/dialog"
<PageTitle>Dialog Primitive - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div class="space-y-3">
        <h1 class="text-4xl font-bold tracking-tight">Dialog Primitive</h1>
        <p class="text-xl text-muted-foreground">
            Headless, unstyled dialog primitive with full accessibility support.
        </p>
    </div>

    <div class="space-y-6">
        <!-- AsChild Pattern -->
        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">AsChild Pattern</h2>
                <p class="text-muted-foreground">
                    Use AsChild to compose triggers with your own styled elements.
                </p>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
                <!-- Without AsChild -->
                <div class="space-y-3 p-4 border rounded-lg">
                    <h3 class="text-lg font-medium">Without AsChild</h3>
                    <p class="text-sm text-muted-foreground">
                        DialogTrigger renders its own button element.
                    </p>
                    <BlazorBlueprint.Primitives.Dialog.BbDialog>
                        <BlazorBlueprint.Primitives.Dialog.BbDialogTrigger class="px-3 py-2 border rounded text-sm">
                            Open Dialog
                        </BlazorBlueprint.Primitives.Dialog.BbDialogTrigger>
                        <BlazorBlueprint.Primitives.Dialog.BbDialogPortal>
                            <BlazorBlueprint.Primitives.Dialog.BbDialogOverlay class="fixed inset-0 bg-black/50 z-50" />
                            <BlazorBlueprint.Primitives.Dialog.BbDialogContent class="fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-background p-6 rounded-lg border max-w-md z-50">
                                <BlazorBlueprint.Primitives.Dialog.BbDialogTitle class="text-lg font-semibold mb-2">Without AsChild</BlazorBlueprint.Primitives.Dialog.BbDialogTitle>
                                <BlazorBlueprint.Primitives.Dialog.BbDialogDescription class="text-sm text-muted-foreground mb-4">
                                    Trigger rendered its own button element.
                                </BlazorBlueprint.Primitives.Dialog.BbDialogDescription>
                                <BlazorBlueprint.Primitives.Dialog.BbDialogClose class="px-3 py-2 border rounded text-sm">Close</BlazorBlueprint.Primitives.Dialog.BbDialogClose>
                            </BlazorBlueprint.Primitives.Dialog.BbDialogContent>
                        </BlazorBlueprint.Primitives.Dialog.BbDialogPortal>
                    </BlazorBlueprint.Primitives.Dialog.BbDialog>
                </div>

                <!-- With AsChild -->
                <div class="space-y-3 p-4 border rounded-lg">
                    <h3 class="text-lg font-medium">With AsChild</h3>
                    <p class="text-sm text-muted-foreground">
                        Button receives click behavior via TriggerContext.
                    </p>
                    <BlazorBlueprint.Primitives.Dialog.BbDialog>
                        <BlazorBlueprint.Primitives.Dialog.BbDialogTrigger AsChild>
                            <BbButton Variant="ButtonVariant.Outline">Open Dialog</BbButton>
                        </BlazorBlueprint.Primitives.Dialog.BbDialogTrigger>
                        <BlazorBlueprint.Primitives.Dialog.BbDialogPortal>
                            <BlazorBlueprint.Primitives.Dialog.BbDialogOverlay class="fixed inset-0 bg-black/50 z-50" />
                            <BlazorBlueprint.Primitives.Dialog.BbDialogContent class="fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-background p-6 rounded-lg border max-w-md z-50">
                                <BlazorBlueprint.Primitives.Dialog.BbDialogTitle class="text-lg font-semibold mb-2">With AsChild</BlazorBlueprint.Primitives.Dialog.BbDialogTitle>
                                <BlazorBlueprint.Primitives.Dialog.BbDialogDescription class="text-sm text-muted-foreground mb-4">
                                    Button component handles the trigger behavior.
                                </BlazorBlueprint.Primitives.Dialog.BbDialogDescription>
                                <BlazorBlueprint.Primitives.Dialog.BbDialogClose AsChild>
                                    <BbButton Variant="ButtonVariant.Secondary">Close</BbButton>
                                </BlazorBlueprint.Primitives.Dialog.BbDialogClose>
                            </BlazorBlueprint.Primitives.Dialog.BbDialogContent>
                        </BlazorBlueprint.Primitives.Dialog.BbDialogPortal>
                    </BlazorBlueprint.Primitives.Dialog.BbDialog>
                </div>
            </div>

            <CodeBlock Source="Primitives/Dialog/as-child.txt" />
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Basic Headless Primitive</h2>
                <p class="text-muted-foreground">
                    The primitive provides behavior and accessibility without styling.
                </p>
            </div>

            <div class="rounded-lg border bg-card p-6 max-w-md">
                <BlazorBlueprint.Primitives.Dialog.BbDialog>
                    <BlazorBlueprint.Primitives.Dialog.BbDialogTrigger class="px-3 py-2 border rounded text-sm">
                        Open Dialog
                    </BlazorBlueprint.Primitives.Dialog.BbDialogTrigger>

                    <BlazorBlueprint.Primitives.Dialog.BbDialogPortal>
                        <BlazorBlueprint.Primitives.Dialog.BbDialogOverlay class="fixed inset-0 bg-black/50 z-50" />

                        <BlazorBlueprint.Primitives.Dialog.BbDialogContent class="fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-background p-6 rounded-lg border max-w-md z-50">
                            <BlazorBlueprint.Primitives.Dialog.BbDialogTitle class="text-lg font-semibold mb-2">
                                Dialog Title
                            </BlazorBlueprint.Primitives.Dialog.BbDialogTitle>

                            <BlazorBlueprint.Primitives.Dialog.BbDialogDescription class="text-sm text-muted-foreground mb-4">
                                This is a basic dialog using the unstyled primitive components.
                            </BlazorBlueprint.Primitives.Dialog.BbDialogDescription>

                            <div class="flex justify-end gap-2">
                                <BlazorBlueprint.Primitives.Dialog.BbDialogClose class="px-3 py-2 border rounded text-sm">
                                    Close
                                </BlazorBlueprint.Primitives.Dialog.BbDialogClose>
                            </div>
                        </BlazorBlueprint.Primitives.Dialog.BbDialogContent>
                    </BlazorBlueprint.Primitives.Dialog.BbDialogPortal>
                </BlazorBlueprint.Primitives.Dialog.BbDialog>
            </div>

            <CodeBlock Source="Primitives/Dialog/basic.txt" />
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Controlled State</h2>
                <p class="text-muted-foreground">
                    Control the dialog's open state from your component code.
                </p>
            </div>

            <div class="space-y-4">
                <div class="flex gap-2">
                    <button @onclick="() => isControlledOpen = true"
                            class="px-3 py-2 border rounded text-sm">
                        Open Dialog
                    </button>
                    <button @onclick="() => isControlledOpen = false"
                            class="px-3 py-2 border rounded text-sm"
                            disabled="@(!isControlledOpen)">
                        Close from Outside
                    </button>
                </div>

                <div class="rounded-lg border bg-card p-6 max-w-md">
                    <BlazorBlueprint.Primitives.Dialog.BbDialog @bind-Open="isControlledOpen">
                        <BlazorBlueprint.Primitives.Dialog.BbDialogPortal>
                            <BlazorBlueprint.Primitives.Dialog.BbDialogOverlay class="fixed inset-0 bg-black/50 z-50" />

                            <BlazorBlueprint.Primitives.Dialog.BbDialogContent class="fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-background p-6 rounded-lg border max-w-md z-50">
                                <BlazorBlueprint.Primitives.Dialog.BbDialogTitle class="text-lg font-semibold mb-2">
                                    Controlled Dialog
                                </BlazorBlueprint.Primitives.Dialog.BbDialogTitle>

                                <BlazorBlueprint.Primitives.Dialog.BbDialogDescription class="text-sm text-muted-foreground mb-4">
                                    This dialog's state is controlled by the parent component. The "Close from Outside" button demonstrates external state control.
                                </BlazorBlueprint.Primitives.Dialog.BbDialogDescription>

                                <p class="mb-4">Open state: <strong>@isControlledOpen</strong></p>

                                <BlazorBlueprint.Primitives.Dialog.BbDialogClose class="px-3 py-2 border rounded text-sm">
                                    Close
                                </BlazorBlueprint.Primitives.Dialog.BbDialogClose>
                            </BlazorBlueprint.Primitives.Dialog.BbDialogContent>
                        </BlazorBlueprint.Primitives.Dialog.BbDialogPortal>
                    </BlazorBlueprint.Primitives.Dialog.BbDialog>
                </div>

                <CodeBlock Source="Primitives/Dialog/controlled.txt" />
            </div>
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Modal Behavior</h2>
                <p class="text-muted-foreground">
                    By default, dialogs are modal. Clicking overlay or pressing Escape closes the dialog.
                </p>
            </div>

            <div class="rounded-lg border bg-card p-6 max-w-md">
                <BlazorBlueprint.Primitives.Dialog.BbDialog>
                    <BlazorBlueprint.Primitives.Dialog.BbDialogTrigger class="px-3 py-2 border rounded text-sm">
                        Open Modal Dialog
                    </BlazorBlueprint.Primitives.Dialog.BbDialogTrigger>

                    <BlazorBlueprint.Primitives.Dialog.BbDialogPortal>
                        <BlazorBlueprint.Primitives.Dialog.BbDialogOverlay class="fixed inset-0 bg-black/50 z-50" />

                        <BlazorBlueprint.Primitives.Dialog.BbDialogContent class="fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-background p-6 rounded-lg border max-w-md z-50">
                            <BlazorBlueprint.Primitives.Dialog.BbDialogTitle class="text-lg font-semibold mb-2">
                                Modal Dialog
                            </BlazorBlueprint.Primitives.Dialog.BbDialogTitle>

                            <BlazorBlueprint.Primitives.Dialog.BbDialogDescription class="text-sm text-muted-foreground mb-4">
                                Try clicking the overlay or pressing Escape to close this dialog.
                            </BlazorBlueprint.Primitives.Dialog.BbDialogDescription>

                            <ul class="text-sm space-y-1 mb-4">
                                <li>✓ Click overlay to close</li>
                                <li>✓ Press Escape to close</li>
                                <li>✓ Click close button</li>
                                <li>✓ Focus trapped inside dialog</li>
                                <li>✓ Body scroll locked</li>
                            </ul>

                            <BlazorBlueprint.Primitives.Dialog.BbDialogClose class="px-3 py-2 border rounded text-sm">
                                Close
                            </BlazorBlueprint.Primitives.Dialog.BbDialogClose>
                        </BlazorBlueprint.Primitives.Dialog.BbDialogContent>
                    </BlazorBlueprint.Primitives.Dialog.BbDialogPortal>
                </BlazorBlueprint.Primitives.Dialog.BbDialog>
            </div>
        </section>

        <AccessibilityList>
            <AriaAttributes>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">role="dialog"</code> for screen readers
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-modal="true"</code> indicates modal behavior
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-labelledby</code> links title to dialog
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-describedby</code> links description to dialog
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-haspopup="dialog"</code> on trigger button
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-expanded</code> on trigger reflects open state
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-controls</code> on trigger links to content
                </AccessibilityItem>
                <AccessibilityItem>
                    Automatic focus trap and restoration
                </AccessibilityItem>
                <AccessibilityItem>
                    Body scroll lock when dialog is open
                </AccessibilityItem>
                <AccessibilityItem>
                    Portal rendering for proper z-index stacking
                </AccessibilityItem>
            </AriaAttributes>
            <KeyboardNavigation>
                <KeyboardShortcutItem Description="Open dialog (when trigger is focused)">
                    <BbKbd>Enter</BbKbd> / <BbKbd>Space</BbKbd>
                </KeyboardShortcutItem>
                <KeyboardShortcutItem Description="Close dialog">
                    <BbKbd>Escape</BbKbd>
                </KeyboardShortcutItem>
                <KeyboardShortcutItem Description="Navigate between elements">
                    <BbKbd>Tab</BbKbd>
                </KeyboardShortcutItem>
            </KeyboardNavigation>
        </AccessibilityList>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">API Reference</h2>
                <p class="text-muted-foreground">
                    Component properties and parameters.
                </p>
            </div>

            <div class="space-y-4">
                <ApiReference ComponentName="Dialog">
                    <ApiParameter Name="Open" Type="bool?" Default="null">
                        Controls whether the dialog is open (controlled mode). When null, the dialog manages its own state (uncontrolled mode).
                    </ApiParameter>
                    <ApiParameter Name="OpenChanged" Type="EventCallback&lt;bool&gt;">
                        Callback invoked when the open state changes. Use with <code>@@bind-Open</code> for two-way binding.
                    </ApiParameter>
                    <ApiParameter Name="DefaultOpen" Type="bool" Default="false">
                        Initial open state when in uncontrolled mode.
                    </ApiParameter>
                    <ApiParameter Name="OnOpenChange" Type="EventCallback&lt;bool&gt;">
                        Event callback invoked when the dialog open state changes. Receives the new open state as a parameter.
                    </ApiParameter>
                    <ApiParameter Name="Modal" Type="bool" Default="true">
                        Whether the dialog is modal (blocks interaction with rest of page).
                    </ApiParameter>
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        The child content to render within the dialog context. Typically includes DialogTrigger, DialogPortal, and other dialog parts.
                    </ApiParameter>
                </ApiReference>

                <ApiReference ComponentName="DialogTrigger">
                    <ApiParameter Name="AsChild" Type="bool" Default="false">
                        When true, the trigger does not render its own button element. Instead, it passes trigger behavior via TriggerContext to child components.
                    </ApiParameter>
                    <ApiParameter Name="OnClick" Type="EventCallback&lt;MouseEventArgs&gt;">
                        Custom click handler. If provided, this is called in addition to (or instead of) the default toggle behavior.
                    </ApiParameter>
                    <ApiParameter Name="CustomClickHandling" Type="bool" Default="false">
                        Whether to use custom click handling. When true, only OnClick is invoked (dialog does not toggle).
                    </ApiParameter>
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        The content to display inside the trigger button.
                    </ApiParameter>
                    <ApiParameter Name="AdditionalAttributes" Type="Dictionary&lt;string, object&gt;?">
                        Additional HTML attributes applied to the trigger button element (e.g. <code>class</code>, <code>style</code>).
                    </ApiParameter>
                </ApiReference>

                <ApiReference ComponentName="DialogPortal">
                    <ApiParameter Name="Container" Type="string?">
                        The container element to render the portal into. When null (default), renders into document body via PortalService. When set, renders inline within the current component tree.
                    </ApiParameter>
                    <ApiParameter Name="ForceMount" Type="bool" Default="false">
                        Whether to force rendering in a portal even when the dialog is closed.
                    </ApiParameter>
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        Content rendered at document body level for proper stacking (typically DialogOverlay and DialogContent).
                    </ApiParameter>
                </ApiReference>

                <ApiReference ComponentName="DialogOverlay">
                    <ApiParameter Name="CloseOnClick" Type="bool" Default="true">
                        Whether clicking the overlay should close the dialog.
                    </ApiParameter>
                    <ApiParameter Name="OnClick" Type="EventCallback&lt;MouseEventArgs&gt;">
                        Event callback invoked when the overlay is clicked.
                    </ApiParameter>
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        Content to render within the overlay (typically empty for a simple backdrop).
                    </ApiParameter>
                    <ApiParameter Name="AdditionalAttributes" Type="Dictionary&lt;string, object&gt;?">
                        Additional HTML attributes applied to the overlay div element (e.g. <code>class</code>, <code>style</code>).
                    </ApiParameter>
                </ApiReference>

                <ApiReference ComponentName="DialogContent">
                    <ApiParameter Name="CloseOnEscape" Type="bool" Default="true">
                        Whether pressing Escape should close the dialog.
                    </ApiParameter>
                    <ApiParameter Name="TrapFocus" Type="bool" Default="true">
                        Whether to trap focus within the dialog. Default is true for modal dialogs.
                    </ApiParameter>
                    <ApiParameter Name="LockScroll" Type="bool" Default="true">
                        Whether to lock body scroll when dialog is open. Default is true for modal dialogs.
                    </ApiParameter>
                    <ApiParameter Name="OnEscapeKeyDown" Type="EventCallback&lt;KeyboardEventArgs&gt;">
                        Event callback invoked when the Escape key is pressed.
                    </ApiParameter>
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        The content to render inside the dialog.
                    </ApiParameter>
                    <ApiParameter Name="AdditionalAttributes" Type="Dictionary&lt;string, object&gt;?">
                        Additional HTML attributes applied to the content container (e.g. <code>class</code>, <code>style</code>).
                    </ApiParameter>
                </ApiReference>

                <ApiReference ComponentName="DialogTitle">
                    <ApiParameter Name="As" Type="string" Default="&quot;h2&quot;">
                        The HTML element tag to use for the title.
                    </ApiParameter>
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        The title content to display.
                    </ApiParameter>
                    <ApiParameter Name="AdditionalAttributes" Type="Dictionary&lt;string, object&gt;?">
                        Additional HTML attributes applied to the title element (e.g. <code>class</code>, <code>style</code>).
                    </ApiParameter>
                </ApiReference>

                <ApiReference ComponentName="DialogDescription">
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        The description content to display.
                    </ApiParameter>
                    <ApiParameter Name="AdditionalAttributes" Type="Dictionary&lt;string, object&gt;?">
                        Additional HTML attributes applied to the description element (e.g. <code>class</code>, <code>style</code>).
                    </ApiParameter>
                </ApiReference>

                <ApiReference ComponentName="DialogClose">
                    <ApiParameter Name="AsChild" Type="bool" Default="false">
                        When true, the close does not render its own button element. Instead, it passes trigger behavior via TriggerContext to child components.
                    </ApiParameter>
                    <ApiParameter Name="PreventClose" Type="bool" Default="false">
                        Whether to prevent the default close behavior. When true, only the OnClick handler is invoked.
                    </ApiParameter>
                    <ApiParameter Name="OnClick" Type="EventCallback&lt;MouseEventArgs&gt;">
                        Custom click handler. Called after the dialog is closed.
                    </ApiParameter>
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        The content to display inside the close button.
                    </ApiParameter>
                    <ApiParameter Name="AdditionalAttributes" Type="Dictionary&lt;string, object&gt;?">
                        Additional HTML attributes applied to the close button element (e.g. <code>class</code>, <code>style</code>).
                    </ApiParameter>
                </ApiReference>
            </div>
        </section>
    </div>
</div>

@code {
    private bool isControlledOpen = false;
}
