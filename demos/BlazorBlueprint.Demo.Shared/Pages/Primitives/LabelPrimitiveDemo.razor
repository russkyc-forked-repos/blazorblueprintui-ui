@page "/primitives/label"
<PageTitle>Label Primitive - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Label Primitive</h1>
            <p class="text-xl text-muted-foreground">
                Headless, unstyled label primitive with full accessibility support.
            </p>
        </div>
    </div>

    <div class="space-y-6">
        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Basic Headless Primitive</h2>
                <p class="text-muted-foreground">
                    The primitive provides semantic HTML label element without styling.
                </p>
            </div>

            <div class="rounded-lg border bg-card p-6 max-w-md">
                <div class="space-y-2">
                    <BlazorBlueprint.Primitives.Label.BbLabel For="basic-input" class="text-sm font-medium">
                        Basic label
                    </BlazorBlueprint.Primitives.Label.BbLabel>
                    <input type="text" id="basic-input" placeholder="Click the label to focus" class="w-full px-3 py-2 border border-input rounded-md bg-background" />
                </div>
                <p class="text-sm text-muted-foreground mt-3">
                    Click the label to focus the input field.
                </p>
            </div>

            <CodeBlock Source="Primitives/Label/basic.txt" />
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">With Form Elements</h2>
                <p class="text-muted-foreground">
                    Labels work with all form input types.
                </p>
            </div>

            <div class="rounded-lg border bg-card p-6 max-w-md space-y-4">
                <div class="space-y-2">
                    <BlazorBlueprint.Primitives.Label.BbLabel For="text-input" class="block text-sm font-medium">
                        Text Input
                    </BlazorBlueprint.Primitives.Label.BbLabel>
                    <input type="text" id="text-input" class="w-full px-3 py-2 border border-input rounded-md bg-background" placeholder="Enter text" />
                </div>

                <div class="space-y-2">
                    <BlazorBlueprint.Primitives.Label.BbLabel For="select-input" class="block text-sm font-medium">
                        Select Dropdown
                    </BlazorBlueprint.Primitives.Label.BbLabel>
                    <select id="select-input" class="w-full px-3 py-2 border border-input rounded-md bg-background">
                        <option>Option 1</option>
                        <option>Option 2</option>
                        <option>Option 3</option>
                    </select>
                </div>

                <div class="space-y-2">
                    <BlazorBlueprint.Primitives.Label.BbLabel For="textarea-input" class="block text-sm font-medium">
                        Textarea
                    </BlazorBlueprint.Primitives.Label.BbLabel>
                    <textarea id="textarea-input" rows="3" class="w-full px-3 py-2 border border-input rounded-md bg-background" placeholder="Enter longer text..."></textarea>
                </div>

                <div class="flex items-center gap-2">
                    <input type="checkbox" id="checkbox-input" class="h-4 w-4 border border-input rounded cursor-pointer" />
                    <BlazorBlueprint.Primitives.Label.BbLabel For="checkbox-input" class="text-sm font-medium cursor-pointer">
                        Checkbox Label (clickable)
                    </BlazorBlueprint.Primitives.Label.BbLabel>
                </div>

                <div class="flex items-center gap-2">
                    <input type="radio" id="radio-input" name="radio-group" class="h-4 w-4 border border-input rounded-full cursor-pointer" />
                    <BlazorBlueprint.Primitives.Label.BbLabel For="radio-input" class="text-sm font-medium cursor-pointer">
                        Radio Label (clickable)
                    </BlazorBlueprint.Primitives.Label.BbLabel>
                </div>
            </div>

            <CodeBlock Source="Primitives/Label/form-elements.txt" />
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Required Fields</h2>
                <p class="text-muted-foreground">
                    Common pattern for showing required fields.
                </p>
            </div>

            <div class="rounded-lg border bg-card p-6 max-w-md space-y-4">
                <div class="space-y-2">
                    <BlazorBlueprint.Primitives.Label.BbLabel For="required-input" class="block text-sm font-medium">
                        Username <span class="text-red-500">*</span>
                    </BlazorBlueprint.Primitives.Label.BbLabel>
                    <input type="text" id="required-input" required class="w-full px-3 py-2 border border-input rounded-md bg-background" placeholder="Required field" />
                </div>

                <div class="space-y-2">
                    <BlazorBlueprint.Primitives.Label.BbLabel For="optional-input" class="block text-sm font-medium">
                        Nickname <span class="text-muted-foreground text-xs">(optional)</span>
                    </BlazorBlueprint.Primitives.Label.BbLabel>
                    <input type="text" id="optional-input" class="w-full px-3 py-2 border border-input rounded-md bg-background" placeholder="Optional field" />
                </div>
            </div>

            <CodeBlock Source="Primitives/Label/required.txt" />
        </section>

        <AccessibilityList>
            <AriaAttributes>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">Semantic HTML</code> uses native <code>&lt;label&gt;</code> element for proper semantics
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">for</code> attribute automatically links label to associated input
                </AccessibilityItem>
                <AccessibilityItem>
                    Click target expands to label text, clicking label focuses associated input
                </AccessibilityItem>
                <AccessibilityItem>
                    Screen readers announce label text when the associated input is focused
                </AccessibilityItem>
            </AriaAttributes>
            <KeyboardNavigation>
                <KeyboardShortcutItem Description="Navigate between form inputs">
                    <BbKbd>Tab</BbKbd>
                </KeyboardShortcutItem>
                <KeyboardShortcutItem Description="Click label to focus associated input">
                    <BbKbd>Click</BbKbd>
                </KeyboardShortcutItem>
            </KeyboardNavigation>
        </AccessibilityList>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">API Reference</h2>
                <p class="text-muted-foreground">
                    Component properties and parameters.
                </p>
            </div>

            <div class="space-y-4">
                <ApiReference ComponentName="Label">
                    <ApiParameter Name="For" Type="string?">
                        The ID of the form element this label is associated with. Maps to the HTML <code>for</code> attribute.
                    </ApiParameter>
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        The content to be rendered inside the label element (label text).
                    </ApiParameter>
                    <ApiParameter Name="AdditionalAttributes" Type="Dictionary&lt;string, object&gt;?">
                        Additional HTML attributes applied to the label element (e.g. <code>class</code>, <code>style</code>).
                    </ApiParameter>
                </ApiReference>
            </div>
        </section>
    </div>
</div>

