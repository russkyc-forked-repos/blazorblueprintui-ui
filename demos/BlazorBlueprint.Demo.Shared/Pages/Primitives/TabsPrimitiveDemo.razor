@page "/primitives/tabs"
@using BlazorBlueprint.Primitives.Tabs
<PageTitle>Tabs Primitive - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Tabs Primitive</h1>
            <p class="text-xl text-muted-foreground">
                Headless, unstyled tabs primitive with keyboard support and ARIA attributes.
            </p>
        </div>
    </div>

    <div class="space-y-6">
        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Basic Usage</h2>
                <p class="text-muted-foreground">
                    A simple tabs implementation with minimal inline styles. Use arrow keys to navigate between tabs.
                </p>
            </div>

            <div class="rounded-lg border bg-card p-6">
                <BlazorBlueprint.Primitives.Tabs.BbTabs DefaultValue="tab1">
                    <BlazorBlueprint.Primitives.Tabs.BbTabsList class="flex gap-1 p-1 bg-muted rounded-md w-fit">
                        <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="tab1" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm aria-[selected=true]:bg-background aria-[selected=true]:shadow-sm">
                            Tab 1
                        </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                        <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="tab2" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm aria-[selected=true]:bg-background aria-[selected=true]:shadow-sm">
                            Tab 2
                        </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                        <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="tab3" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm aria-[selected=true]:bg-background aria-[selected=true]:shadow-sm">
                            Tab 3
                        </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsList>

                    <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="tab1" class="p-4 mt-2 border border-border rounded-md">
                        <h3 class="font-semibold mb-2">Tab 1 Content</h3>
                        <p>This is the content for the first tab. Navigate using arrow keys or click to switch tabs.</p>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsContent>

                    <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="tab2" class="p-4 mt-2 border border-border rounded-md">
                        <h3 class="font-semibold mb-2">Tab 2 Content</h3>
                        <p>This is the content for the second tab. The primitive handles all keyboard navigation automatically.</p>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsContent>

                    <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="tab3" class="p-4 mt-2 border border-border rounded-md">
                        <h3 class="font-semibold mb-2">Tab 3 Content</h3>
                        <p>This is the content for the third tab. Press Home/End to jump to first/last tab.</p>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsContent>
                </BlazorBlueprint.Primitives.Tabs.BbTabs>
            </div>

            <CodeBlock Source="Primitives/Tabs/basic.txt" />
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Controlled Tabs</h2>
                <p class="text-muted-foreground">
                    Control the active tab from your component code using @@bind-Value.
                </p>
            </div>

            <div class="space-y-4">
                <div class="flex gap-2">
                    <button @onclick='() => controlledValue = "account"'
                            class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-9 px-3">
                        Show Account
                    </button>
                    <button @onclick='() => controlledValue = "password"'
                            class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-9 px-3">
                        Show Password
                    </button>
                </div>

                <p class="text-xs text-muted-foreground">Current tab: <strong>@controlledValue</strong></p>

                <div class="rounded-lg border bg-card p-6">
                    <BlazorBlueprint.Primitives.Tabs.BbTabs @bind-Value="controlledValue">
                        <BlazorBlueprint.Primitives.Tabs.BbTabsList class="flex gap-1 p-1 bg-muted rounded-md w-fit">
                            <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="account" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm data-[state=active]:bg-background data-[state=active]:shadow-sm">
                                Account
                            </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                            <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="password" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm data-[state=active]:bg-background data-[state=active]:shadow-sm">
                                Password
                            </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                        </BlazorBlueprint.Primitives.Tabs.BbTabsList>

                        <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="account" class="p-4 mt-2 border border-border rounded-md">
                            <h3 class="font-semibold mb-2">Account Settings</h3>
                            <p>Make changes to your account here.</p>
                        </BlazorBlueprint.Primitives.Tabs.BbTabsContent>

                        <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="password" class="p-4 mt-2 border border-border rounded-md">
                            <h3 class="font-semibold mb-2">Password Settings</h3>
                            <p>Change your password here.</p>
                        </BlazorBlueprint.Primitives.Tabs.BbTabsContent>
                    </BlazorBlueprint.Primitives.Tabs.BbTabs>
                </div>

                <CodeBlock Source="Primitives/Tabs/controlled.txt" />
            </div>
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Vertical Tabs</h2>
                <p class="text-muted-foreground">
                    Tabs can be arranged vertically. Use arrow up/down keys to navigate.
                </p>
            </div>

            <div class="rounded-lg border bg-card p-6">
                <BlazorBlueprint.Primitives.Tabs.BbTabs DefaultValue="general" Orientation="TabsOrientation.Vertical">
                    <div class="flex gap-4">
                        <BlazorBlueprint.Primitives.Tabs.BbTabsList class="flex flex-col gap-1 p-1 bg-muted rounded-md w-[150px]">
                            <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="general" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm text-left data-[state=active]:bg-background data-[state=active]:shadow-sm">
                                General
                            </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                            <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="security" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm text-left data-[state=active]:bg-background data-[state=active]:shadow-sm">
                                Security
                            </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                            <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="notifications" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm text-left data-[state=active]:bg-background data-[state=active]:shadow-sm">
                                Notifications
                            </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                        </BlazorBlueprint.Primitives.Tabs.BbTabsList>

                        <div class="flex-1">
                            <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="general" class="p-4 border border-border rounded-md">
                                <h3 class="font-semibold mb-2">General Settings</h3>
                                <p>Configure general application settings.</p>
                            </BlazorBlueprint.Primitives.Tabs.BbTabsContent>

                            <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="security" class="p-4 border border-border rounded-md">
                                <h3 class="font-semibold mb-2">Security Settings</h3>
                                <p>Manage your security preferences.</p>
                            </BlazorBlueprint.Primitives.Tabs.BbTabsContent>

                            <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="notifications" class="p-4 border border-border rounded-md">
                                <h3 class="font-semibold mb-2">Notification Settings</h3>
                                <p>Control how you receive notifications.</p>
                            </BlazorBlueprint.Primitives.Tabs.BbTabsContent>
                        </div>
                    </div>
                </BlazorBlueprint.Primitives.Tabs.BbTabs>
            </div>

            <CodeBlock Source="Primitives/Tabs/vertical.txt" />
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Manual Activation Mode</h2>
                <p class="text-muted-foreground">
                    In manual mode, tabs must be clicked or activated with Enter/Space. Arrow keys only move focus.
                </p>
            </div>

            <div class="rounded-lg border bg-card p-6">
                <BlazorBlueprint.Primitives.Tabs.BbTabs DefaultValue="overview" ActivationMode="TabsActivationMode.Manual">
                    <BlazorBlueprint.Primitives.Tabs.BbTabsList class="flex gap-1 p-1 bg-muted rounded-md w-fit">
                        <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="overview" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm data-[state=active]:bg-background data-[state=active]:shadow-sm">
                            Overview
                        </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                        <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="analytics" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm data-[state=active]:bg-background data-[state=active]:shadow-sm">
                            Analytics
                        </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                        <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="reports" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm data-[state=active]:bg-background data-[state=active]:shadow-sm">
                            Reports
                        </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsList>

                    <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="overview" class="p-4 mt-2 border border-border rounded-md">
                        <h3 class="font-semibold mb-2">Overview</h3>
                        <p>Use arrow keys to move focus, then press Enter or Space to activate a tab.</p>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsContent>

                    <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="analytics" class="p-4 mt-2 border border-border rounded-md">
                        <h3 class="font-semibold mb-2">Analytics</h3>
                        <p>View your analytics data here.</p>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsContent>

                    <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="reports" class="p-4 mt-2 border border-border rounded-md">
                        <h3 class="font-semibold mb-2">Reports</h3>
                        <p>Generate and download reports.</p>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsContent>
                </BlazorBlueprint.Primitives.Tabs.BbTabs>
            </div>

            <CodeBlock Source="Primitives/Tabs/manual-activation.txt" />
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Disabled Tab</h2>
                <p class="text-muted-foreground">
                    Tabs can be disabled. Keyboard navigation will skip over disabled tabs.
                </p>
            </div>

            <div class="rounded-lg border bg-card p-6">
                <BlazorBlueprint.Primitives.Tabs.BbTabs DefaultValue="enabled1">
                    <BlazorBlueprint.Primitives.Tabs.BbTabsList class="flex gap-1 p-1 bg-muted rounded-md w-fit">
                        <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="enabled1" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm data-[state=active]:bg-background data-[state=active]:shadow-sm">
                            Enabled 1
                        </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                        <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="disabled" Disabled="true" class="px-4 py-2 border-none bg-transparent cursor-not-allowed rounded text-sm opacity-50">
                            Disabled
                        </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                        <BlazorBlueprint.Primitives.Tabs.BbTabsTrigger Value="enabled2" class="px-4 py-2 border-none bg-transparent cursor-pointer rounded text-sm data-[state=active]:bg-background data-[state=active]:shadow-sm">
                            Enabled 2
                        </BlazorBlueprint.Primitives.Tabs.BbTabsTrigger>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsList>

                    <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="enabled1" class="p-4 mt-2 border border-border rounded-md">
                        <p>First enabled tab content. Try using arrow keys - they'll skip the disabled tab.</p>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsContent>

                    <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="disabled" class="p-4 mt-2 border border-border rounded-md">
                        <p>This content won't be shown because the tab is disabled.</p>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsContent>

                    <BlazorBlueprint.Primitives.Tabs.BbTabsContent Value="enabled2" class="p-4 mt-2 border border-border rounded-md">
                        <p>Second enabled tab content.</p>
                    </BlazorBlueprint.Primitives.Tabs.BbTabsContent>
                </BlazorBlueprint.Primitives.Tabs.BbTabs>
            </div>

            <CodeBlock Source="Primitives/Tabs/disabled.txt" />
        </section>

        <AccessibilityList>
            <AriaAttributes>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">role="tablist"</code> on the tabs list container
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">role="tab"</code> on each tab trigger
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">role="tabpanel"</code> on each tab content panel
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-selected</code> indicates the active tab
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-controls</code> links trigger to content panel
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-labelledby</code> links content to trigger
                </AccessibilityItem>
                <AccessibilityItem>
                    <code class="text-xs bg-muted px-1 py-0.5 rounded">aria-orientation</code> indicates horizontal or vertical layout
                </AccessibilityItem>
            </AriaAttributes>
            <KeyboardNavigation>
                <KeyboardShortcutItem Description="Focus the tab list">
                    <BbKbd>Tab</BbKbd>
                </KeyboardShortcutItem>
                <KeyboardShortcutItem Description="Navigate between tabs (horizontal)">
                    <BbKbd>Arrow Left</BbKbd> / <BbKbd>Arrow Right</BbKbd>
                </KeyboardShortcutItem>
                <KeyboardShortcutItem Description="Navigate between tabs (vertical)">
                    <BbKbd>Arrow Up</BbKbd> / <BbKbd>Arrow Down</BbKbd>
                </KeyboardShortcutItem>
                <KeyboardShortcutItem Description="Jump to first tab">
                    <BbKbd>Home</BbKbd>
                </KeyboardShortcutItem>
                <KeyboardShortcutItem Description="Jump to last tab">
                    <BbKbd>End</BbKbd>
                </KeyboardShortcutItem>
                <KeyboardShortcutItem Description="Activate focused tab (manual mode)">
                    <BbKbd>Enter</BbKbd> / <BbKbd>Space</BbKbd>
                </KeyboardShortcutItem>
            </KeyboardNavigation>
        </AccessibilityList>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">API Reference</h2>
                <p class="text-muted-foreground">Component properties and parameters.</p>
            </div>
            <div class="space-y-4">
                <ApiReference ComponentName="Tabs">
                    <ApiParameter Name="Value" Type="string?" Default="null">
                        Controls which tab is active (controlled mode). When null, the tabs manage their own state.
                    </ApiParameter>
                    <ApiParameter Name="ValueChanged" Type="EventCallback&lt;string?&gt;">
                        Event callback invoked when the active tab changes. Use with <code>@@bind-Value</code> for two-way binding.
                    </ApiParameter>
                    <ApiParameter Name="DefaultValue" Type="string?" Default="null">
                        Default active tab value when in uncontrolled mode.
                    </ApiParameter>
                    <ApiParameter Name="OnValueChange" Type="EventCallback&lt;string?&gt;">
                        Event callback invoked when the active tab changes. Receives the new active tab value.
                    </ApiParameter>
                    <ApiParameter Name="Orientation" Type="TabsOrientation" Default="TabsOrientation.Horizontal">
                        Orientation of the tabs (horizontal or vertical). Affects keyboard navigation direction.
                    </ApiParameter>
                    <ApiParameter Name="ActivationMode" Type="TabsActivationMode" Default="TabsActivationMode.Automatic">
                        Activation mode for tabs. Automatic activates on focus; Manual requires Enter/Space.
                    </ApiParameter>
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        The child content to render within the tabs context. Typically includes TabsList and TabsContent components.
                    </ApiParameter>
                    <ApiParameter Name="AdditionalAttributes" Type="Dictionary&lt;string, object&gt;?">
                        Additional HTML attributes applied to the root div element (e.g. <code>class</code>, <code>style</code>).
                    </ApiParameter>
                </ApiReference>

                <ApiReference ComponentName="TabsList">
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        The child content to render within the tabs list. Should contain TabsTrigger components.
                    </ApiParameter>
                    <ApiParameter Name="AdditionalAttributes" Type="Dictionary&lt;string, object&gt;?">
                        Additional HTML attributes applied to the tabs list element (e.g. <code>class</code>, <code>style</code>).
                    </ApiParameter>
                </ApiReference>

                <ApiReference ComponentName="TabsTrigger">
                    <ApiParameter Name="Value" Type="string">
                        The value that identifies this tab. Used to match with TabsContent components. Required.
                    </ApiParameter>
                    <ApiParameter Name="Disabled" Type="bool" Default="false">
                        Whether this tab trigger is disabled. Disabled tabs are skipped during keyboard navigation.
                    </ApiParameter>
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        The child content to render within the tab trigger button.
                    </ApiParameter>
                    <ApiParameter Name="AdditionalAttributes" Type="Dictionary&lt;string, object&gt;?">
                        Additional HTML attributes applied to the tab trigger button element (e.g. <code>class</code>, <code>style</code>).
                    </ApiParameter>
                </ApiReference>

                <ApiReference ComponentName="TabsContent">
                    <ApiParameter Name="Value" Type="string">
                        The value that identifies this tab content panel. Must match the Value of the corresponding TabsTrigger. Required.
                    </ApiParameter>
                    <ApiParameter Name="ForceMount" Type="bool" Default="false">
                        Whether to force mount the content even when inactive. When false, content is unmounted when not active. When true, content remains mounted but hidden.
                    </ApiParameter>
                    <ApiParameter Name="ChildContent" Type="RenderFragment?">
                        The child content to render when this tab is active.
                    </ApiParameter>
                    <ApiParameter Name="AdditionalAttributes" Type="Dictionary&lt;string, object&gt;?">
                        Additional HTML attributes applied to the tab content panel element (e.g. <code>class</code>, <code>style</code>).
                    </ApiParameter>
                </ApiReference>
            </div>
        </section>
    </div>
</div>

@code {
    private string? controlledValue = "account";
}
