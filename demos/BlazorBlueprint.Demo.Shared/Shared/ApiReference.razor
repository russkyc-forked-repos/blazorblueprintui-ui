<div class="rounded-lg border p-4">
    <h3 class="font-semibold mb-3">@ComponentName</h3>
    <div class="space-y-3 text-sm">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string? ComponentName { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
