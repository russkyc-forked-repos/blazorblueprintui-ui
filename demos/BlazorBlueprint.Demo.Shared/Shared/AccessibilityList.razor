<section class="space-y-4">
    <div class="space-y-2">
        <h2 class="text-2xl font-semibold">Accessibility</h2>
        <p class="text-muted-foreground">
            Built with accessibility in mind â€” includes ARIA attributes and keyboard support.
        </p>
    </div>

    <div class="rounded-lg border p-6 space-y-6 bg-muted/50">
        @if (AriaAttributes != null)
        {
            <div>
                <h3 class="font-semibold mb-2">ARIA Attributes</h3>
                <ul class="space-y-2 text-sm text-muted-foreground">
                    @AriaAttributes
                </ul>
            </div>
        }

        @if (KeyboardNavigation != null)
        {
            <div>
                <h3 class="font-semibold mb-2">Keyboard Navigation</h3>
                <div class="grid gap-3">
                    @KeyboardNavigation
                </div>
            </div>
        }
    </div>
</section>

@code {
    [Parameter] public RenderFragment? AriaAttributes { get; set; }
    [Parameter] public RenderFragment? KeyboardNavigation { get; set; }
}
