@* Sign Up Form Demo - Realistic form example *@

<Card>
    <CardContent class="pt-6 space-y-3">
        <div class="space-y-1.5">
            <Label For="email">Email address</Label>
            <Input Id="email" Type="InputType.Email" Placeholder="Enter your email" />
        </div>

        <div class="space-y-1.5">
            <div class="flex items-center justify-between">
                <Label For="password">Password</Label>
                <a href="#" class="text-xs text-blue-600 hover:underline">Forgot password?</a>
            </div>
            <Input Id="password" Type="InputType.Password" Placeholder="Enter your password" />
        </div>

        <div class="flex items-center gap-2 pt-1">
            <Checkbox Id="terms" />
            <Label For="terms" Class="text-xs font-normal cursor-pointer">I agree to the terms and conditions</Label>
        </div>

        <div class="flex gap-2 pt-1">
            <Button Variant="ButtonVariant.Outline" Size="ButtonSize.Small" Class="flex-1">Create an account</Button>
            <Button Variant="ButtonVariant.Default" Size="ButtonSize.Small" Class="flex-1">Sign in</Button>
        </div>
    </CardContent>
</Card>
