@page "/icons"

<PageTitle>Icon Libraries - BlazorUI</PageTitle>

<div class="space-y-8 max-w-6xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Icon Libraries</h1>
            <p class="text-xl text-muted-foreground">
                BlazorUI offers three beautiful icon libraries to suit different design preferences. Browse and search through 3,200+ icons across Lucide, Heroicons, and Feather.
            </p>
        </div>
    </div>

    <!-- Comparison Table -->
    <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-border rounded-lg">
            <thead>
                <tr class="bg-muted">
                    <th class="border border-border p-4 text-left font-semibold">Library</th>
                    <th class="border border-border p-4 text-left font-semibold">Icons</th>
                    <th class="border border-border p-4 text-left font-semibold">Variants</th>
                    <th class="border border-border p-4 text-left font-semibold">License</th>
                    <th class="border border-border p-4 text-left font-semibold">Best For</th>
                </tr>
            </thead>
            <tbody>
                <tr class="hover:bg-muted/50">
                    <td class="border border-border p-4">
                        <a href="/icons/lucide" class="font-semibold text-primary hover:underline">Lucide Icons</a>
                    </td>
                    <td class="border border-border p-4">1,640</td>
                    <td class="border border-border p-4">1 (stroke)</td>
                    <td class="border border-border p-4">ISC</td>
                    <td class="border border-border p-4">Modern, clean interfaces</td>
                </tr>
                <tr class="hover:bg-muted/50">
                    <td class="border border-border p-4">
                        <a href="/icons/heroicons" class="font-semibold text-primary hover:underline">Heroicons</a>
                    </td>
                    <td class="border border-border p-4">1,288</td>
                    <td class="border border-border p-4">4 (outline, solid, mini, micro)</td>
                    <td class="border border-border p-4">MIT (Tailwind Labs)</td>
                    <td class="border border-border p-4">Tailwind-based designs, flexible sizing</td>
                </tr>
                <tr class="hover:bg-muted/50">
                    <td class="border border-border p-4">
                        <a href="/icons/feather" class="font-semibold text-primary hover:underline">Feather Icons</a>
                    </td>
                    <td class="border border-border p-4">286</td>
                    <td class="border border-border p-4">1 (stroke)</td>
                    <td class="border border-border p-4">MIT</td>
                    <td class="border border-border p-4">Simple, lightweight projects</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Icon Library Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Lucide Icons Card -->
        <a href="/icons/lucide" class="block p-6 border border-border rounded-lg hover:border-primary hover:shadow-lg transition-all">
            <div class="space-y-3">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 text-primary">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                            <path d="M2 17l10 5 10-5"/>
                            <path d="M2 12l10 5 10-5"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold">Lucide Icons</h3>
                        <p class="text-sm text-muted-foreground">1,640 icons</p>
                    </div>
                </div>
                <p class="text-muted-foreground">
                    Beautiful, consistent stroke-based icons perfect for modern, clean interfaces. The largest icon set with extensive coverage.
                </p>
                <div class="flex items-center gap-2 text-sm text-primary font-medium">
                    Browse Lucide Icons
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="9 18 15 12 9 6"/>
                    </svg>
                </div>
            </div>
        </a>

        <!-- Heroicons Card -->
        <a href="/icons/heroicons" class="block p-6 border border-border rounded-lg hover:border-primary hover:shadow-lg transition-all">
            <div class="space-y-3">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 text-primary">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polygon points="12 2 2 7 12 12 22 7 12 2"/>
                            <polyline points="2 17 12 22 22 17"/>
                            <polyline points="2 12 12 17 22 12"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold">Heroicons</h3>
                        <p class="text-sm text-muted-foreground">1,288 icons (4 variants)</p>
                    </div>
                </div>
                <p class="text-muted-foreground">
                    Designed by Tailwind Labs with 4 variants (outline, solid, mini, micro) for maximum flexibility in sizing and style.
                </p>
                <div class="flex items-center gap-2 text-sm text-primary font-medium">
                    Browse Heroicons
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="9 18 15 12 9 6"/>
                    </svg>
                </div>
            </div>
        </a>

        <!-- Feather Icons Card -->
        <a href="/icons/feather" class="block p-6 border border-border rounded-lg hover:border-primary hover:shadow-lg transition-all">
            <div class="space-y-3">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 text-primary">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"/>
                            <line x1="16" y1="8" x2="2" y2="22"/>
                            <line x1="17.5" y1="15" x2="9" y2="15"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-semibold">Feather Icons</h3>
                        <p class="text-sm text-muted-foreground">286 icons</p>
                    </div>
                </div>
                <p class="text-muted-foreground">
                    Minimalist, stroke-based icons perfect for simple, lightweight projects. Carefully curated essential icon set.
                </p>
                <div class="flex items-center gap-2 text-sm text-primary font-medium">
                    Browse Feather Icons
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="9 18 15 12 9 6"/>
                    </svg>
                </div>
            </div>
        </a>
    </div>

    <!-- Quick Links -->
    <div class="pt-8 border-t border-border">
        <div class="flex flex-col sm:flex-row gap-4 items-start sm:items-center justify-between">
            <div>
                <h2 class="text-lg font-semibold mb-2">Explore Other Sections</h2>
                <p class="text-muted-foreground">
                    Discover pre-styled components and headless primitives.
                </p>
            </div>
            <div class="flex gap-3">
                <a href="/components" class="inline-flex items-center gap-2 px-4 py-2 border border-border rounded-md hover:bg-accent transition-colors">
                    Components
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="9 18 15 12 9 6"/>
                    </svg>
                </a>
                <a href="/primitives" class="inline-flex items-center gap-2 px-4 py-2 border border-border rounded-md hover:bg-accent transition-colors">
                    Primitives
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="9 18 15 12 9 6"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>
