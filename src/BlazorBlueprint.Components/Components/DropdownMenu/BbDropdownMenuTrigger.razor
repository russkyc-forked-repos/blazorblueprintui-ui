@namespace BlazorBlueprint.Components

@* Styled DropdownMenuTrigger - passthrough wrapper without layout interference *@
<BlazorBlueprint.Primitives.DropdownMenu.BbDropdownMenuTrigger class="@CssClass"
                                                            AsChild="@AsChild"
                                                            Disabled="@Disabled"
                                                            OnClick="@OnClick"
                                                            CustomClickHandling="@CustomClickHandling"
                                                            @attributes="AdditionalAttributes">
    @ChildContent
</BlazorBlueprint.Primitives.DropdownMenu.BbDropdownMenuTrigger>

@code {
    [CascadingParameter]
    private BlazorBlueprint.Primitives.DropdownMenu.DropdownMenuContext? Context { get; set; }

    /// <summary>
    /// The content to display inside the trigger button.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the wrapper.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// CSS classes applied when the dropdown is open.
    /// Default is <c>null</c> (no active style).
    /// Set to e.g. <c>"bg-accent text-accent-foreground"</c> to highlight the trigger when open.
    /// </summary>
    [Parameter]
    public string? ActiveClass { get; set; }

    /// <summary>
    /// When true, the trigger does not render its own button element.
    /// Instead, it passes trigger behavior via TriggerContext to child components.
    /// Use this when you want a custom component (like Button) to act as the trigger.
    /// </summary>
    [Parameter]
    public bool AsChild { get; set; } = true;

    /// <summary>
    /// Whether the trigger is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; } = false;

    /// <summary>
    /// Custom click handler.
    /// </summary>
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    /// <summary>
    /// Whether to use custom click handling only.
    /// </summary>
    [Parameter]
    public bool CustomClickHandling { get; set; } = false;

    /// <summary>
    /// Additional attributes to apply to the trigger element.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private bool IsOpen => Context?.IsOpen ?? false;

    private string? CssClass => ClassNames.cn(
        IsOpen ? ActiveClass : null,
        Class
    );
}
