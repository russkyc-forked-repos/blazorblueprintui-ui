@namespace BlazorBlueprint.Components

@*
    Styled SheetTitle component with shadcn/ui typography classes.
*@

<BlazorBlueprint.Primitives.Sheet.BbSheetTitle As="@As" class="@GetClassNames()" @attributes="AdditionalAttributes">
    @ChildContent
</BlazorBlueprint.Primitives.Sheet.BbSheetTitle>

@code {
    /// <summary>
    /// The title text or content.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the title.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// Additional attributes to apply to the title element.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    /// <summary>
    /// The HTML element tag to use for the title.
    /// Default is "h2".
    /// </summary>
    [Parameter]
    public string As { get; set; } = "h2";

    private string GetClassNames() => ClassNames.cn(
        "text-lg font-semibold text-foreground",
        Class
    );
}
