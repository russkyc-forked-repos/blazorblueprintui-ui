@namespace BlazorBlueprint.Components

@*
    SheetFooter helper component for organizing sheet actions/buttons.
*@

<div class="@GetClassNames()">
    @ChildContent
</div>

@code {
    /// <summary>
    /// The content to display in the sheet footer (typically action buttons).
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the footer container.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    private string GetClassNames() => ClassNames.cn(
        "flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2",
        Class
    );
}
