@namespace BlazorBlueprint.Components

@*
    DialogHeader helper component for organizing dialog title and description.
*@

<div class="@CssClass">
    @ChildContent
</div>

@code {
    /// <summary>
    /// The content to display in the dialog header (typically DialogTitle and DialogDescription).
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the header container.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    private string CssClass => ClassNames.cn(
        "flex flex-col space-y-1.5 text-center sm:text-left",
        Class
    );
}
