@namespace BlazorBlueprint.Components
@implements IAsyncDisposable

@*
    ResponsiveNavProvider component that manages responsive navigation state.
    Handles mobile detection via JS interop and cascades context to children.
*@

<CascadingValue Value="@Context" IsFixed="false">
    @ChildContent
</CascadingValue>

@code {
    /// <summary>
    /// The content to render inside the provider.
    /// Should contain ResponsiveNavTrigger, NavigationMenu, and ResponsiveNavContent.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
