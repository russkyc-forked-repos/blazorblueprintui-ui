@namespace BlazorBlueprint.Components
@typeparam TValue
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<input
    @ref="inputRef"
    id="@EffectiveId"
    name="@EffectiveName"
    type="@HtmlType"
    class="@CssClass"
    value="@DisplayValue"
    placeholder="@Placeholder"
    disabled="@Disabled"
    required="@Required"
    aria-label="@AriaLabel"
    aria-describedby="@AriaDescribedBy"
    aria-invalid="@(ComputedAriaInvalid?.ToString().ToLower())"
    @onfocus="HandleFocus" />
