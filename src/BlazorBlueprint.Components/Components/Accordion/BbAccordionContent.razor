@namespace BlazorBlueprint.Components

@*
    Styled AccordionContent component.
    Wraps the AccordionContent primitive with shadcn/ui styling.
*@

<BlazorBlueprint.Primitives.Accordion.BbAccordionContent ForceMount="@ForceMount"
                                                      class="@CssClass">
    <div class="overflow-hidden min-h-0">
        <div class="pb-4 pt-0 text-sm">
            @ChildContent
        </div>
    </div>
</BlazorBlueprint.Primitives.Accordion.BbAccordionContent>

@code {
    /// <summary>
    /// Whether to force mount the content even when closed.
    /// When true (default), enables smooth CSS animations.
    /// When false, content unmounts when closed (no animation, lower memory).
    /// </summary>
    [Parameter]
    public bool ForceMount { get; set; } = true;

    /// <summary>
    /// The child content to render when the item is open.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the content.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    private string CssClass => ClassNames.cn(
        "grid grid-rows-[0fr] transition-[grid-template-rows] duration-200 ease-out",
        "data-[state=open]:grid-rows-[1fr]",
        Class
    );
}
