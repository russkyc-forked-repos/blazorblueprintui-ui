@namespace BlazorBlueprint.Components

@*
    Alert Dialog Trigger - opens the alert dialog when clicked.
    Wraps the Dialog primitive trigger.
*@

<BbDialogTrigger AsChild="@AsChild">
    @ChildContent
</BbDialogTrigger>

@code {
    /// <summary>
    /// The content to render as the trigger.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// When true, the trigger will not render a default button wrapper.
    /// Instead, the child component receives trigger behavior via cascading context.
    /// </summary>
    [Parameter]
    public bool AsChild { get; set; } = true;
}
