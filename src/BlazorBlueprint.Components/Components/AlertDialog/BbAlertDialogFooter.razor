@namespace BlazorBlueprint.Components

@*
    Alert Dialog Footer - contains action buttons.
*@

<div class="@CssClass">
    @ChildContent
</div>

@code {
    /// <summary>
    /// The content to render in the footer (typically AlertDialogCancel and AlertDialogAction).
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the footer.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// Gets the computed CSS classes for the footer.
    /// </summary>
    private string CssClass => ClassNames.cn(
        "flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2",
        Class
    );
}
