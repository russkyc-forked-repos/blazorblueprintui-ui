@namespace BlazorBlueprint.Components

@*
    Alert Dialog Action - the confirmation/action button.
    Closes the dialog when clicked.
*@

<BbDialogClose AsChild="@AsChild">
    @ChildContent
</BbDialogClose>

@code {
    /// <summary>
    /// The content to render as the action button.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// When true, the action will not render a default button wrapper.
    /// Instead, the child component receives close behavior via cascading context.
    /// </summary>
    [Parameter]
    public bool AsChild { get; set; } = true;
}
