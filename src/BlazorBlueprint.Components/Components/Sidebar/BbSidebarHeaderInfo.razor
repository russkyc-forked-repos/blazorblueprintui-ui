@namespace BlazorBlueprint.Components

@*
    SidebarHeaderInfo component for header text that hides in icon mode.
    Automatically handles visibility based on sidebar state.
*@

<div class="@GetClasses()" @attributes="AdditionalAttributes">
    @ChildContent
</div>

@code {
    /// <summary>
    /// The text content to render (typically title and subtitle spans).
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// Additional attributes.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string GetClasses()
    {
        return ClassNames.cn(
            "grid flex-1 text-left text-sm leading-tight",
            "group-data-[collapsible=icon]:hidden",
            Class
        );
    }
}
