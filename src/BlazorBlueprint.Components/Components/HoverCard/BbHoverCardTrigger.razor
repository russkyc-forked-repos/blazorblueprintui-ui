@namespace BlazorBlueprint.Components

@*
    Styled HoverCardTrigger component.
    Wraps the HoverCardTrigger primitive with shadcn/ui styling.
*@

<BlazorBlueprint.Primitives.HoverCard.BbHoverCardTrigger AsChild="@AsChild" class="@CssClass">
    @ChildContent
</BlazorBlueprint.Primitives.HoverCard.BbHoverCardTrigger>

@code {
    /// <summary>
    /// The child content to render within the trigger.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// When true, the trigger does not render its own div element.
    /// Instead, it passes trigger behavior via TriggerContext to child components.
    /// Use this when you want a custom component to act as the trigger.
    /// </summary>
    [Parameter]
    public bool AsChild { get; set; } = true;

    /// <summary>
    /// Additional CSS classes to apply to the trigger.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    private string? CssClass => ClassNames.cn(Class);
}
