@namespace BlazorBlueprint.Components

@*
    Styled HoverCardContent component.
    Wraps the HoverCardContent primitive with shadcn/ui styling.
*@

<BlazorBlueprint.Primitives.HoverCard.BbHoverCardContent Side="@Side"
                                                      Align="@Align"
                                                      Offset="@Offset"
                                                      class="@CssClass">
    @ChildContent
</BlazorBlueprint.Primitives.HoverCard.BbHoverCardContent>

@code {
    /// <summary>
    /// The child content to render inside the hover card.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Preferred side for positioning.
    /// </summary>
    [Parameter]
    public PopoverSide Side { get; set; } = PopoverSide.Bottom;

    /// <summary>
    /// Alignment relative to trigger.
    /// </summary>
    [Parameter]
    public PopoverAlign Align { get; set; } = PopoverAlign.Center;

    /// <summary>
    /// Offset distance from trigger in pixels.
    /// </summary>
    [Parameter]
    public int Offset { get; set; } = 4;

    /// <summary>
    /// Additional CSS classes to apply to the content.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    private string CssClass => ClassNames.cn(
        "z-50 w-64 rounded-md border bg-popover p-4 text-popover-foreground shadow-md outline-none",
        "data-[state=open]:animate-in data-[state=closed]:animate-out",
        "data-[state=closed]:fade-out-0 data-[state=open]:fade-in-0",
        "data-[state=closed]:zoom-out-95 data-[state=open]:zoom-in-95",
        "data-[side=bottom]:slide-in-from-top-2 data-[side=left]:slide-in-from-right-2",
        "data-[side=right]:slide-in-from-left-2 data-[side=top]:slide-in-from-bottom-2",
        Class
    );
}
