@namespace BlazorBlueprint.Components

@*
    Styled Popover component wrapper.
    Wraps the Popover primitive with shadcn/ui styling.
*@

<BlazorBlueprint.Primitives.Popover.BbPopover Open="@Open"
                                           OpenChanged="@OpenChanged"
                                           DefaultOpen="@DefaultOpen"
                                           OnOpenChange="@OnOpenChange"
                                           Modal="@Modal">
    @ChildContent
</BlazorBlueprint.Primitives.Popover.BbPopover>

@code {
    /// <summary>
    /// The child content to render within the popover.
    /// Should include PopoverTrigger and PopoverContent.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Controls whether the popover is open (controlled mode).
    /// When null, the popover manages its own state (uncontrolled mode).
    /// </summary>
    [Parameter]
    public bool? Open { get; set; }

    /// <summary>
    /// Event callback invoked when the open state changes.
    /// Use with @bind-Open for two-way binding.
    /// </summary>
    [Parameter]
    public EventCallback<bool> OpenChanged { get; set; }

    /// <summary>
    /// Default open state when in uncontrolled mode.
    /// </summary>
    [Parameter]
    public bool DefaultOpen { get; set; } = false;

    /// <summary>
    /// Event callback invoked when the popover open state changes.
    /// </summary>
    [Parameter]
    public EventCallback<bool> OnOpenChange { get; set; }

    /// <summary>
    /// Whether the popover can be dismissed by clicking outside or pressing Escape.
    /// Default is true.
    /// </summary>
    [Parameter]
    public bool Modal { get; set; } = true;
}
