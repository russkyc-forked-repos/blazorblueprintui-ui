@using BlazorBlueprint.Primitives.Services
@namespace BlazorBlueprint.Components.Popover
@using BlazorBlueprint.Primitives.Popover

@* Styled PopoverContent with shadcn/ui classes *@

<BlazorBlueprint.Primitives.Popover.PopoverContent CloseOnEscape="@CloseOnEscape"
                                                   CloseOnClickOutside="@CloseOnClickOutside"
                                                   Side="@Side"
                                                   Align="@Align"
                                                   Offset="@Offset"
                                                   MatchTriggerWidth="@MatchTriggerWidth"
                                                   Strategy="@Strategy"
                                                   ZIndex="@ZIndex"
                                                   OnEscapeKeyDown="@OnEscapeKeyDown"
                                                   OnClickOutside="@OnClickOutside"
                                                   OnContentReady="@OnContentReady"
                                                   class="@CssClass"
                                                   @attributes="AdditionalAttributes">
    @ChildContent
</BlazorBlueprint.Primitives.Popover.PopoverContent>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool CloseOnEscape { get; set; } = true;

    [Parameter]
    public bool CloseOnClickOutside { get; set; } = true;

    [Parameter]
    public PopoverSide Side { get; set; } = PopoverSide.Bottom;

    [Parameter]
    public PopoverAlign Align { get; set; } = PopoverAlign.Center;

    [Parameter]
    public int Offset { get; set; } = 4;

    [Parameter]
    public bool MatchTriggerWidth { get; set; } = false;

    /// <summary>
    /// CSS positioning strategy: "absolute" or "fixed".
    /// Default is "fixed" to correctly escape stacking contexts (e.g. inside Dialog, Sheet, Drawer).
    /// Use "absolute" only when the popover should scroll with a container.
    /// </summary>
    [Parameter]
    public string Strategy { get; set; } = "fixed";

    /// <summary>
    /// CSS z-index value for the popover content.
    /// Default is 9999 to render above overlays (Dialog, Sheet, Drawer).
    /// </summary>
    [Parameter]
    public int ZIndex { get; set; } = 9999;

    [Parameter]
    public EventCallback<KeyboardEventArgs> OnEscapeKeyDown { get; set; }

    [Parameter]
    public EventCallback OnClickOutside { get; set; }

    /// <summary>
    /// Event callback invoked when the popover content is fully ready (positioned and visible).
    /// Useful for focus management.
    /// </summary>
    [Parameter]
    public EventCallback OnContentReady { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    // Use w-full when MatchTriggerWidth is true so content respects the FloatingPortal wrapper's width
    // Otherwise use default w-72 for standard popover width
    private string WidthClass => MatchTriggerWidth ? "w-full" : "w-72";

    private string CssClass => ClassNames.cn(
        "z-50", WidthClass, "rounded-md border bg-popover p-4 text-popover-foreground shadow-md outline-none",
        "data-[state=open]:animate-in data-[state=closed]:animate-out",
        "data-[state=open]:animate-content-fade-in data-[state=closed]:animate-content-fade-out",
        Class
    );
}
