@namespace BlazorBlueprint.Components

<CascadingValue Value="this" Name="AvatarGroup" IsFixed="true">
    <div class="@CssClass">
        @ChildContent
    </div>
</CascadingValue>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Class { get; set; }

    private string CssClass => ClassNames.cn(
        "flex -space-x-3",
        Class
    );
}
