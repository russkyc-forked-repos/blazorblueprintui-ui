<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- NuGet Package Configuration -->
    <PackageId>BlazorUI.Icons.Heroicons</PackageId>
    <RootNamespace>BlazorUI.Icons.Heroicons</RootNamespace>
    <AssemblyName>BlazorUI.Icons.Heroicons</AssemblyName>
    <Description>Heroicons icon library for BlazorUI - 1,288 beautiful icons across 4 variants (outline, solid, mini, micro) for Blazor applications.</Description>
    <PackageTags>blazor;icons;heroicons;shadcn;svg;ui;components;blazor-components;tailwind</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <!-- <PackageIcon>icon.png</PackageIcon> -->
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/blazorui-net/ui</PackageProjectUrl>
    <RepositoryUrl>https://github.com/blazorui-net/ui</RepositoryUrl>
    <Authors>Mathew Taylor</Authors>
    <Copyright>Copyright (c) 2025-present Mathew Taylor</Copyright>

    <!-- MinVer Configuration - Version from git tags -->
    <MinVerTagPrefix>icons-heroicons/v</MinVerTagPrefix>
    <MinVerDefaultPreReleaseIdentifiers>beta.0</MinVerDefaultPreReleaseIdentifiers>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.14" />
    <PackageReference Include="MinVer" Version="5.0.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
