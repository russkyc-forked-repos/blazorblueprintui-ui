<Project>
  <PropertyGroup>
    <!-- Package Metadata - Common to all BlazorBlueprint packages -->
    <Authors>BlazorBlueprint Contributors</Authors>
    <Company>BlazorBlueprint</Company>
    <Copyright>Copyright (c) 2025 BlazorBlueprint Contributors</Copyright>

    <!-- License and Repository -->
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/blazorblueprintui/ui</PackageProjectUrl>
    <RepositoryUrl>https://github.com/blazorblueprintui/ui</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- Build Configuration -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <!-- Suppress missing XML comment warnings for internal enums and lifecycle methods -->
    <NoWarn>$(NoWarn);CS1591</NoWarn>

    <!-- Code Style Enforcement -->
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <AnalysisLevel>latest-recommended</AnalysisLevel>
  </PropertyGroup>
</Project>
